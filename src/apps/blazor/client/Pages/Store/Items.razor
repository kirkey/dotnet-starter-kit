@page "/store/items"
@using FSH.Starter.Blazor.Client.Components.Autocompletes.Store

<PageHeader Title="Items" Header="Store Items" SubHeader="Manage inventory-enabled items." />

<EntityTable @ref="_table" TEntity="ItemResponse" TId="DefaultIdType" TRequest="ItemViewModel" Context="@Context">
    <EditFormContent Context="context">
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="6">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Item Id" />
            </MudItem>
        }

        <MudItem xs="12" md="6">
            <MudTextField Label="Name" For="@(() => context.Name)" @bind-Value="context.Name" Required="true" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="Description" For="@(() => context.Description)" @bind-Value="context.Description" Lines="3" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudTextField Label="SKU" For="@(() => context.Sku)" @bind-Value="context.Sku" Required="true" />
        </MudItem>
        <MudItem xs="12" md="4">
            <MudTextField Label="Barcode" For="@(() => context.Barcode)" @bind-Value="context.Barcode" Required="true" />
        </MudItem>
        <MudItem xs="12" md="4">
            <AutocompleteCategoryId @bind-Value="context.CategoryId"
                                    For="@(() => context.CategoryId)"
                                    Label="Category"
                                    Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudNumericField T="decimal" @bind-Value="context.Price" For="@(() => context.Price)" Label="Price" Immediate="true" Required />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField T="decimal" @bind-Value="context.Cost" For="@(() => context.Cost)" Label="Cost" Immediate="true" Required />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField T="int" @bind-Value="context.MinimumStock" For="@(() => context.MinimumStock)" Label="Min Stock" Immediate="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField T="int" @bind-Value="context.MaximumStock" For="@(() => context.MaximumStock)" Label="Max Stock" Immediate="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudNumericField T="int" @bind-Value="context.CurrentStock" For="@(() => context.CurrentStock)" Label="Current Stock" Immediate="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField T="int" @bind-Value="context.ReorderPoint" For="@(() => context.ReorderPoint)" Label="Reorder Point" Immediate="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudSwitch T="bool" @bind-Checked="context.IsPerishable" Color="Color.Primary">Perishable</MudSwitch>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudDatePicker @bind-Date="context.ExpiryDate" Label="Expiry Date" Disabled="@(!context.IsPerishable)" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudTextField Label="Brand" For="@(() => context.Brand)" @bind-Value="context.Brand" />
        </MudItem>
        <MudItem xs="12" md="4">
            <MudTextField Label="Manufacturer" For="@(() => context.Manufacturer)" @bind-Value="context.Manufacturer" />
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudNumericField T="decimal" @bind-Value="context.Weight" For="@(() => context.Weight)" Label="Weight" Immediate="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudTextField Label="Weight Unit" For="@(() => context.WeightUnit)" @bind-Value="context.WeightUnit" />
        </MudItem>

        <MudItem xs="12" md="6">
            <MudTextField T="DefaultIdType?" Label="Supplier Id" For="@(() => context.SupplierId)" @bind-Value="context.SupplierId" HelperText="Enter supplier GUID (autocomplete TBD)" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField T="DefaultIdType?" Label="Warehouse Location Id" For="@(() => context.WarehouseLocationId)" @bind-Value="context.WarehouseLocationId" HelperText="Enter warehouse location GUID (autocomplete TBD)" />
        </MudItem>
        
        <!-- Image Management -->
        <MudItem xs="12">
            <ImageUploader CurrentImageUrl="@context.ImageUrl"
                           CurrentImageUrlChanged="@(url => context.ImageUrl = url)"
                           UploadedImage="@context.Image"
                           UploadedImageChanged="@(img => context.Image = img)"
                           AltText="Category image"
                           UploadLabel="Upload Category Image" />
        </MudItem>
    </EditFormContent>
</EntityTable>

@code {
    private RenderFragment<CategoryResponse> TemplateImage => dto => __builder =>
    {
        <MudItem Class="d-flex justify-center align-center">
            @if (dto.ImageUrl is not null)
            {
                <MudImage Src="@(string.IsNullOrEmpty(dto.ImageUrl) ? string.Empty : ImageUrlService.GetAbsoluteUrl(dto.ImageUrl))" Height="100"/>
            }
        </MudItem>
    };
}
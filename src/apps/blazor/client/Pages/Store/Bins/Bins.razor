@page "/warehouse/bins"

<PageHeader Title="Bins" Header="Storage Bins" SubHeader="Manage warehouse storage bin locations." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowBinsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="BinResponse" TId="DefaultIdType" TRequest="BinViewModel" Context="@Context">
    <EditFormContent Context="context">
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" sm="6" md="4" lg="3">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Bin Id" />
            </MudItem>
        }

        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField Label="Name" For="@(() => context.Name)" @bind-Value="context.Name" Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField Label="Code" For="@(() => context.Code)" @bind-Value="context.Code" Required="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteWarehouseLocation @bind-Value="context.WarehouseLocationId"
                                          For="@(() => context.WarehouseLocationId)"
                                          Label="Warehouse Location"
                                          Variant="Variant.Filled"
                                          Required="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteBinType @bind-Value="context.BinType"
                                 For="@(() => context.BinType!)"
                                 Label="Bin Type"
                                 Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudNumericField T="decimal?" @bind-Value="context.Capacity" For="@(() => context.Capacity)" Format="N2" Label="Capacity" Min="0" />
        </MudItem>
        <MudItem xs="12" md="4">
            <MudNumericField T="int?" @bind-Value="context.Priority" For="@(() => context.Priority)" Label="Priority" Min="0" Format="N2" />
        </MudItem>
        <MudItem xs="12" md="4">
            <MudSwitch Class="mt-3" T="bool?" @bind-Value="context.IsActive" Color="Color.Primary">Active</MudSwitch>
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudSwitch Class="mt-3" T="bool?" @bind-Value="context.IsPickable" Color="Color.Primary">Pickable</MudSwitch>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudSwitch Class="mt-3" T="bool?" @bind-Value="context.IsPutable" Color="Color.Primary">Putable</MudSwitch>
        </MudItem>

        <MudItem xs="12">
            <MudTextField Label="Description" For="@(() => context.Description)" @bind-Value="context.Description" Lines="3" />
        </MudItem>
    </EditFormContent>
</EntityTable>

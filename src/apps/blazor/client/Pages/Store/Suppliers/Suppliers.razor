@page "/store/suppliers"

<PageHeader Title="Suppliers" Header="Store Suppliers" SubHeader="Manage supplier contacts and terms." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowSuppliersHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="SupplierResponse" TId="DefaultIdType" TRequest="SupplierViewModel" Context="@Context">
    <ExtraActions Context="context">
        @if (!context.IsActive)
        {
            <MudMenuItem OnClick="@(() => ActivateSupplier(context.Id ?? DefaultIdType.Empty))">
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="mr-2" Color="Color.Success" />
                    <span>Activate</span>
                </div>
            </MudMenuItem>
        }
        @if (context.IsActive)
        {
            <MudMenuItem OnClick="@(() => DeactivateSupplier(context.Id ?? DefaultIdType.Empty))">
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Block" Class="mr-2" Color="Color.Warning" />
                    <span>Deactivate</span>
                </div>
            </MudMenuItem>
        }
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" sm="6" md="4" lg="3">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Supplier Id" />
            </MudItem>
        }

        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField Label="Code" For="@(() => context.Code)" @bind-Value="context.Code" Required="true" Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Name" For="@(() => context.Name)" @bind-Value="context.Name" Required="true" Variant="Variant.Filled" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="6" lg="4">
            <MudTextField Label="Contact Person" For="@(() => context.ContactPerson)" @bind-Value="context.ContactPerson" Required="true" Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="6" lg="4">
            <MudTextField Label="Email" For="@(() => context.Email)" @bind-Value="context.Email" Required="true" Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="6" lg="4">
            <MudTextField Label="Phone" For="@(() => context.Phone)" @bind-Value="context.Phone" Required="true" Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" lg="10">
            <MudTextField Label="Address" For="@(() => context.Address)" @bind-Value="context.Address" Required="true" Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField Label="Postal Code" For="@(() => context.PostalCode)" @bind-Value="context.PostalCode" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField Label="Website" For="@(() => context.Website)" @bind-Value="context.Website" />
        </MudItem>
        <MudDivider/>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="decimal?" @bind-Value="context.CreditLimit" For="@(() => context.CreditLimit)" Format="N2" Label="Credit Limit" Immediate="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="int?" @bind-Value="context.PaymentTermsDays" For="@(() => context.PaymentTermsDays)" Format="N2" Label="Payment Terms (Days)" Immediate="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudSwitch Class="mt-3" T="bool?" @bind-Value="context.IsActive" Color="Color.Primary">Active</MudSwitch>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="decimal?" @bind-Value="context.Rating" For="@(() => context.Rating)" Label="Rating (0-5)" Immediate="true" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField Label="Description" For="@(() => context.Description)" @bind-Value="context.Description" Lines="3" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Notes" For="@(() => context.Notes)" @bind-Value="context.Notes" Lines="3" />
        </MudItem>

        <!-- Image Management -->
        <MudItem xs="12">
            <ImageUploader CurrentImageUrl="@context.ImageUrl"
                          CurrentImageUrlChanged="@(url => context.ImageUrl = url)"
                          UploadedImage="@context.Image"
                          UploadedImageChanged="@(img => context.Image = img)"
                          AltText="Supplier logo"
                          UploadLabel="Upload Supplier Logo" />
        </MudItem>
    </EditFormContent>

    <ExtraActions Context="supplier">
        <MudMenuItem Icon="@Icons.Material.Filled.Dashboard" OnClick="@(() => OnViewDashboard(supplier.Id ?? DefaultIdType.Empty))">
            View Dashboard
        </MudMenuItem>
        @if (supplier.IsActive == true)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Block" OnClick="@(() => DeactivateSupplier(supplier.Id ?? DefaultIdType.Empty))">
                Deactivate
            </MudMenuItem>
        }
        else
        {
            <MudMenuItem Icon="@Icons.Material.Filled.CheckCircle" OnClick="@(() => ActivateSupplier(supplier.Id ?? DefaultIdType.Empty))">
                Activate
            </MudMenuItem>
        }
    </ExtraActions>
</EntityTable>

@code {
    private RenderFragment<SupplierResponse> TemplateImage => dto => __builder =>
    {
        <MudItem Class="d-flex justify-center align-center">
            @if (dto.ImageUrl is not null)
            {
                <MudImage Src="@(string.IsNullOrEmpty(dto.ImageUrl) ? string.Empty : ImageUrlService.GetAbsoluteUrl(dto.ImageUrl))" Height="100"/>
            }
        </MudItem>
    };
}


@page "/store/items"

<PageHeader Title="Items" Header="Store Items" SubHeader="Manage inventory-enabled items." />

<MudPaper Elevation="2" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowItemsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="ItemResponse" TId="DefaultIdType" TRequest="ItemViewModel" Context="@Context">
    <EditFormContent Context="context">
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" sm="6" md="4" lg="3">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Item Id" />
            </MudItem>
        }

        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField Label="SKU" For="@(() => context.Sku)" @bind-Value="context.Sku" Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField Label="Barcode" For="@(() => context.Barcode)" @bind-Value="context.Barcode" Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <AutocompleteCategoryId @bind-Value="context.CategoryId"
                                    For="@(() => context.CategoryId)"
                                    Label="Category"
                                    Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <AutocompleteBrand @bind-Value="context.Brand"
                               For="@(() => context.Brand!)"
                               Label="Brand"
                               Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <AutocompleteManufacturer @bind-Value="context.Manufacturer"
                                      For="@(() => context.Manufacturer!)"
                                      Label="Manufacturer"
                                      Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <AutocompleteSupplier Value="context.SupplierId"
                                  For="@(() => context.SupplierId)"
                                  Label="Supplier"
                                  Variant="Variant.Filled" />
        </MudItem>
        
        <MudItem xs="12">
            <MudTextField Label="Name" For="@(() => context.Name)" @bind-Value="context.Name" Required="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="decimal?" @bind-Value="context.UnitPrice" For="@(() => context.UnitPrice)" Label="Unit Price" Immediate="true" Required />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="decimal?" @bind-Value="context.Cost" For="@(() => context.Cost)" Label="Cost" Immediate="true" Required />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="int?" @bind-Value="context.MinimumStock" For="@(() => context.MinimumStock)" Label="Min Stock" Immediate="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="int?" @bind-Value="context.MaximumStock" For="@(() => context.MaximumStock)" Label="Max Stock" Immediate="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="int?" @bind-Value="context.ReorderPoint" For="@(() => context.ReorderPoint)" Label="Reorder Point" Immediate="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="int?" @bind-Value="context.ReorderQuantity" For="@(() => context.ReorderQuantity)" Label="Reorder Qty" Immediate="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="int?" @bind-Value="context.ShelfLifeDays" For="@(() => context.ShelfLifeDays)" Label="Shelf Life (Days)" Disabled="@(context.IsPerishable != true)" />
        </MudItem>
        
        <MudDivider DividerType="DividerType.Middle"/>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudSwitch Class="mt-3" T="bool?" @bind-Value="context.IsPerishable" Color="Color.Primary">Perishable</MudSwitch>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudSwitch Class="mt-3" T="bool?" @bind-Value="context.IsSerialTracked" Color="Color.Primary">Serial Tracked</MudSwitch>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudSwitch Class="mt-3" T="bool?" @bind-Value="context.IsLotTracked" Color="Color.Primary">Lot Tracked</MudSwitch>
        </MudItem>
        
        <MudDivider DividerType="DividerType.Middle"/>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="decimal?" @bind-Value="context.Weight" For="@(() => context.Weight)" Label="Weight" Immediate="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteWeightUnit @bind-Value="context.WeightUnit"
                                    For="@(() => context.WeightUnit!)"
                                    Label="Weight Unit"
                                    Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteUnitOfMeasure @bind-Value="context.UnitOfMeasure"
                                       For="@(() => context.UnitOfMeasure!)"
                                       Label="Unit of Measure"
                                       Variant="Variant.Filled" />
        </MudItem>
        
        <MudItem xs="12">
            <MudTextField Label="Description" For="@(() => context.Description)" @bind-Value="context.Description" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Notes" For="@(() => context.Notes)" @bind-Value="context.Notes" />
        </MudItem>

        <!-- Image Management -->
        <MudItem xs="12">
            <ImageUploader CurrentImageUrl="@context.ImageUrl"
                          CurrentImageUrlChanged="@(url => context.ImageUrl = url)"
                          UploadedImage="@context.Image"
                          UploadedImageChanged="@(img => context.Image = img)"
                          AltText="Item image"
                          UploadLabel="Upload Item Image" />
        </MudItem>
    </EditFormContent>
</EntityTable>

@code {
    private RenderFragment<ItemResponse> TemplateImage => dto => __builder =>
    {
        <MudItem Class="d-flex justify-center align-center">
            @if (dto.ImageUrl is not null)
            {
                <MudImage Src="@(string.IsNullOrEmpty(dto.ImageUrl) ? string.Empty : ImageUrlService.GetAbsoluteUrl(dto.ImageUrl))" Height="100"/>
            }
        </MudItem>
    };
}
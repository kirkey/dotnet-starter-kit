@page "/store/stock-levels"

<PageHeader Title="Stock Levels" Header="Inventory Stock Levels" SubHeader="Track and manage inventory quantities across warehouses." />

<MudPaper Elevation="2" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowStockLevelsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="StockLevelResponse" TId="DefaultIdType" TRequest="StockLevelViewModel" Context="@Context">
    <EditFormContent Context="context">
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" sm="6" md="4" lg="3">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Stock Level Id" />
            </MudItem>
        }

        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteItem @bind-Value="context.ItemId"
                             For="@(() => context.ItemId)"
                             Label="Item"
                             Variant="Variant.Filled"
                             Required="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteWarehouse @bind-Value="context.WarehouseId"
                                  For="@(() => context.WarehouseId)"
                                  Label="Warehouse"
                                  Variant="Variant.Filled"
                                  Required="true" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudNumericField T="int" @bind-Value="context.QuantityOnHand" For="@(() => context.QuantityOnHand)" Format="N0" Label="Quantity On Hand" Min="0" Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudNumericField T="int" @bind-Value="context.QuantityAvailable" For="@(() => context.QuantityAvailable)" Format="N0" Label="Available" Min="0" Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudNumericField T="int" @bind-Value="context.QuantityReserved" For="@(() => context.QuantityReserved)" Format="N0" Label="Reserved" Min="0" ReadOnly Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudNumericField T="int" @bind-Value="context.QuantityAllocated" For="@(() => context.QuantityAllocated)" Label="Allocated" Min="0" ReadOnly Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudDatePicker Label="Last Count Date" @bind-Date="context.LastCountDate" For="@(() => context.LastCountDate)" DateFormat="MMMM dd, yyyy" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudDatePicker Label="Last Movement Date" @bind-Date="context.LastMovementDate" For="@(() => context.LastMovementDate)" DateFormat="MMMM dd, yyyy" />
        </MudItem>
    </EditFormContent>

    <ExtraActions Context="context">
        <MudMenu Label="Stock Operations" Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Inventory">
            <MudMenuItem OnClick="@(() => ReserveStock(context))">Reserve Stock</MudMenuItem>
            <MudMenuItem OnClick="@(() => AllocateStock(context))">Allocate Stock</MudMenuItem>
            <MudMenuItem OnClick="@(() => ReleaseStock(context))">Release Stock</MudMenuItem>
        </MudMenu>
    </ExtraActions>
</EntityTable>

@code {
    private async Task ReserveStock(StockLevelResponse stockLevel)
    {
        var parameters = new DialogParameters<ReserveStockDialog>
        {
            { x => x.StockLevelId, stockLevel.Id },
            { x => x.ItemName, stockLevel.ItemName ?? string.Empty },
            { x => x.WarehouseName, stockLevel.WarehouseName ?? string.Empty },
            { x => x.AvailableQuantity, stockLevel.QuantityAvailable }
        };

        var options = new DialogOptions
        {
            CloseOnEscapeKey = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = await DialogService.ShowAsync<ReserveStockDialog>("Reserve Stock", parameters, options);
        var result = await dialog.Result;

        if (result is not null && !result.Canceled)
        {
            await _table.ReloadDataAsync();
        }
    }

    private async Task AllocateStock(StockLevelResponse stockLevel)
    {
        var parameters = new DialogParameters<AllocateStockDialog>
        {
            { x => x.StockLevelId, stockLevel.Id },
            { x => x.ItemName, stockLevel.ItemName ?? string.Empty },
            { x => x.WarehouseName, stockLevel.WarehouseName ?? string.Empty },
            { x => x.ReservedQuantity, stockLevel.QuantityReserved }
        };

        var options = new DialogOptions
        {
            CloseOnEscapeKey = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = await DialogService.ShowAsync<AllocateStockDialog>("Allocate Stock", parameters, options);
        var result = await dialog.Result;

        if (result is not null && !result.Canceled)
        {
            await _table.ReloadDataAsync();
        }
    }

    private async Task ReleaseStock(StockLevelResponse stockLevel)
    {
        var parameters = new DialogParameters<ReleaseStockDialog>
        {
            { x => x.StockLevelId, stockLevel.Id },
            { x => x.ItemName, stockLevel.ItemName ?? string.Empty },
            { x => x.WarehouseName, stockLevel.WarehouseName ?? string.Empty },
            { x => x.ReservedQuantity, stockLevel.QuantityReserved },
            { x => x.AllocatedQuantity, stockLevel.QuantityAllocated }
        };

        var options = new DialogOptions
        {
            CloseOnEscapeKey = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        };

        var dialog = await DialogService.ShowAsync<ReleaseStockDialog>("Release Stock", parameters, options);
        var result = await dialog.Result;

        if (result is not null && !result.Canceled)
        {
            await _table.ReloadDataAsync();
        }
    }
}

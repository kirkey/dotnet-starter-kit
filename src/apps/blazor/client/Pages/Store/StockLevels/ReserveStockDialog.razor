@inject IClient Client
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.LockOpen" Class="mr-2" />
            Reserve Stock
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    Reserving stock will move quantity from available to reserved. Reserved stock is held for specific orders or purposes.
                </MudAlert>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudTextField Value="@ItemName" Label="Item" ReadOnly Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudTextField Value="@WarehouseName" Label="Warehouse" ReadOnly Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudNumericField T="int" Value="@AvailableQuantity" Label="Available Quantity" ReadOnly Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudNumericField T="int" @bind-Value="_quantity" Label="Quantity to Reserve" 
                                Min="1" Max="@AvailableQuantity" Required="true" Variant="Variant.Filled" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(_quantity <= 0 || _quantity > AvailableQuantity)">
            Reserve Stock
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;
    
    [Parameter] public DefaultIdType StockLevelId { get; set; }
    [Parameter] public string ItemName { get; set; } = string.Empty;
    [Parameter] public string WarehouseName { get; set; } = string.Empty;
    [Parameter] public int AvailableQuantity { get; set; }
    
    private int _quantity = 1;
    
    private void Cancel() => MudDialog.Cancel();
    
    private async Task Submit()
    {
        try
        {
            var command = new ReserveStockCommand
            {
                StockLevelId = StockLevelId,
                Quantity = _quantity
            };
            
            await Client.ReserveStockEndpointAsync("1", StockLevelId, command);
            Snackbar.Add($"Successfully reserved {_quantity} units", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to reserve stock: {ex.Message}", Severity.Error);
        }
    }
}

<MudDialog>
    <DialogContent>
        <MudAlert Severity="Severity.Warning" Class="mb-4">
            <MudText Typo="Typo.body1"><strong>Warning:</strong> This action will reverse the sales import and undo all inventory adjustments.</MudText>
            <MudText Typo="Typo.body2">This cannot be undone. Please provide a reason for reversing this import.</MudText>
        </MudAlert>

        <MudTextField @bind-Value="_reason"
                      Label="Reason for Reversal"
                      Lines="3"
                      Variant="Variant.Outlined"
                      Required="true"
                      HelperText="Please explain why this import needs to be reversed" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => MudDialog.Cancel())">Cancel</MudButton>
        <MudButton Color="Color.Warning"
                   Variant="Variant.Filled"
                   OnClick="@(() => ReverseImportAsync())"
                   Disabled="@(string.IsNullOrWhiteSpace(_reason) || _processing)">
            @if (_processing)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                <span class="ml-2">Reversing...</span>
            }
            else
            {
                <span>Reverse Import</span>
            }
        </MudButton>
    </DialogActions>
</MudDialog>


@page "/store/stock-adjustments"

<PageHeader Title="Stock Adjustments" Header="Stock Adjustments" SubHeader="Manage inventory adjustments and corrections." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowStockAdjustmentsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="StockAdjustmentResponse" TId="DefaultIdType" TRequest="StockAdjustmentViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudSelect T="string?" Label="Adjustment Type" @bind-Value="SearchAdjustmentType">
            <MudSelectItem T="string?" Value="null">All Types</MudSelectItem>
            <MudSelectItem T="string?" Value="@("Increase")">Increase</MudSelectItem>
            <MudSelectItem T="string?" Value="@("Decrease")">Decrease</MudSelectItem>
            <MudSelectItem T="string?" Value="@("Correction")">Correction</MudSelectItem>
            <MudSelectItem T="string?" Value="@("Damage")">Damage</MudSelectItem>
            <MudSelectItem T="string?" Value="@("Loss")">Loss</MudSelectItem>
        </MudSelect>
        <MudSelect T="bool?" Label="Approval Status" @bind-Value="SearchIsApproved">
            <MudSelectItem T="bool?" Value="null">All</MudSelectItem>
            <MudSelectItem T="bool?" Value="true">Approved</MudSelectItem>
            <MudSelectItem T="bool?" Value="false">Pending Approval</MudSelectItem>
        </MudSelect>
        <MudDatePicker Label="Date From" Date="SearchDateFrom" DateChanged="value => SearchDateFrom = value" DateFormat="MMMM dd, yyyy" />
        <MudDatePicker Label="Date To" Date="SearchDateTo" DateChanged="value => SearchDateTo = value" DateFormat="MMMM dd, yyyy" />
    </AdvancedSearchContent>

    <ExtraActions Context="context">
        @{
            var adjustmentId = context.Id ?? DefaultIdType.Empty;
        }
        @if (!context.IsApproved)
        {
            <MudMenuItem OnClick="@(() => ApproveAdjustment(adjustmentId))">
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="mr-2" Color="Color.Success" />
                    <span>Approve Adjustment</span>
                </div>
            </MudMenuItem>
        }
    </ExtraActions>

    <EditFormContent Context="context">
        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteItem @bind-Value="context.ItemId" For="@(() => context.ItemId)" Label="Item" Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteWarehouseId @bind-Value="context.WarehouseLocationId" For="@(() => context.WarehouseLocationId)" Label="Warehouse Location" Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudSelect @bind-Value="context.AdjustmentType" For="@(() => context.AdjustmentType)" Label="Adjustment Type" Required="true">
                <MudSelectItem Value="@("Increase")">Increase</MudSelectItem>
                <MudSelectItem Value="@("Decrease")">Decrease</MudSelectItem>
                <MudSelectItem Value="@("Correction")">Correction</MudSelectItem>
                <MudSelectItem Value="@("Damage")">Damage</MudSelectItem>
                <MudSelectItem Value="@("Loss")">Loss</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField @bind-Value="context.QuantityAdjusted" For="@(() => context.QuantityAdjusted)" Format="N0" Label="Quantity Adjusted" Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteAdjustmentReason @bind-Value="context.Reason"
                                         For="@(() => context.Reason!)"
                                         Label="Reason"
                                         Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudDatePicker @bind-Date="context.AdjustmentDate" For="@(() => context.AdjustmentDate)" Label="Adjustment Date" DateFormat="MMMM dd, yyyy" Required="true" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Notes" For="@(() => context.Notes)" Label="Notes" Lines="3" />
        </MudItem>
    </EditFormContent>
</EntityTable>

@page "/store/item-suppliers"

<PageHeader Title="Item Suppliers" Header="Item-Supplier Relationships" SubHeader="Manage supplier relationships for inventory items." />

<EntityTable @ref="_table" TEntity="ItemSupplierResponse" TId="DefaultIdType" TRequest="ItemSupplierViewModel" Context="@Context">
    <EditFormContent Context="context">
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="6">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Item Supplier Id" />
            </MudItem>
        }

        <MudItem xs="12" md="6">
            <AutocompleteItem Value="context.ItemId"
                             ValueChanged="@((Guid val) => context.ItemId = val)"
                             For="@(() => context.ItemId)"
                             Label="Item"
                             Variant="Variant.Filled"
                             Required="true" />
        </MudItem>

        <MudItem xs="12" md="6">
            <AutocompleteSupplier Value="context.SupplierId"
                                 For="@(() => context.SupplierId)"
                                 Label="Supplier"
                                 Variant="Variant.Filled"
                                 Required="true" />
        </MudItem>

        <MudItem xs="12" md="6">
            <MudNumericField T="decimal?" @bind-Value="context.UnitCost" For="@(() => context.UnitCost)" Label="Unit Cost" Required="true" Min="0" Format="N2" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudNumericField T="int?" @bind-Value="context.LeadTimeDays" For="@(() => context.LeadTimeDays)" Label="Lead Time (Days)" Required="true" Min="0" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudNumericField T="int?" @bind-Value="context.MinimumOrderQuantity" For="@(() => context.MinimumOrderQuantity)" Label="Min Order Qty" Min="1" />
        </MudItem>

        <MudItem xs="12" md="4">
            <MudNumericField T="int?" @bind-Value="context.PackagingQuantity" For="@(() => context.PackagingQuantity)" Label="Packaging Qty" Min="1" />
        </MudItem>

        <MudItem xs="12" md="6">
            <MudTextField Label="Supplier Part Number" For="@(() => context.SupplierPartNumber)" @bind-Value="context.SupplierPartNumber" />
        </MudItem>

        <MudItem xs="12" md="6">
            <MudNumericField T="decimal?" @bind-Value="context.ReliabilityRating" For="@(() => context.ReliabilityRating)" Label="Reliability Rating (0-100)" Min="0" Max="100" />
        </MudItem>

        <MudItem xs="12" md="6">
            <MudSwitch T="bool?" @bind-Value="context.IsPreferred" Color="Color.Primary">Preferred Supplier</MudSwitch>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudSwitch T="bool?" @bind-Value="context.IsActive" Color="Color.Primary">Active</MudSwitch>
        </MudItem>
    </EditFormContent>
</EntityTable>

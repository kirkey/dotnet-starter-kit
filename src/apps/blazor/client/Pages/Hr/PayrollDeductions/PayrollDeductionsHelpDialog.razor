@namespace FSH.Starter.Blazor.Client.Pages.Hr.PayrollDeductions

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">Payroll Deductions Help</MudText>

            <MudText Typo="Typo.body2" Class="mb-2">
                Payroll Deductions manages automatic deductions from employee pay, including taxes, benefits, and other withholdings.
            </MudText>

            <MudExpansionPanels Elevation="@_preference.Elevation">
                <MudExpansionPanel Text="Deduction Types" Icon="@Icons.Material.Filled.Category">
                    <MudList T="string" Dense="true">
                        <MudListItem Icon="@Icons.Material.Filled.AttachMoney">
                            <b>Fixed Amount</b> - Specific dollar amount each period
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Percent">
                            <b>Percentage</b> - Percent of gross pay
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Repeat">
                            <b>Recurring</b> - Ongoing deductions
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.LooksOne">
                            <b>One Time</b> - Single deduction
                        </MudListItem>
                    </MudList>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Common Deductions" Icon="@Icons.Material.Filled.Info">
                    <MudList T="string" Dense="true">
                        <MudListItem Icon="@Icons.Material.Filled.AccountBalance">
                            <b>Taxes</b> - Federal, state, local taxes
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.HealthAndSafety">
                            <b>Health Insurance</b> - Medical/dental/vision
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Savings">
                            <b>Retirement</b> - 401(k), pension contributions
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Gavel">
                            <b>Garnishments</b> - Court-ordered deductions
                        </MudListItem>
                    </MudList>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Settings" Icon="@Icons.Material.Filled.Tune">
                    <MudList T="string" Dense="true">
                        <MudListItem Icon="@Icons.Material.Filled.CheckCircle">
                            <b>Authorized</b> - Employee-approved deduction
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Restore">
                            <b>Recoverable</b> - Can be recovered if needed
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Block">
                            <b>Max Limit</b> - Maximum deduction cap
                        </MudListItem>
                    </MudList>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = null!;

    private ClientPreference _preference = new();

    protected override async Task OnInitializedAsync()
    {
        if (await ClientPreferences.GetPreference() is ClientPreference preference)
        {
            _preference = preference;
        }

        Courier.SubscribeWeak<NotificationWrapper<ClientPreference>>(wrapper =>
        {
            _preference.Elevation = ClientPreference.SetClientPreference(wrapper.Notification);
            _preference.BorderRadius = ClientPreference.SetClientBorderRadius(wrapper.Notification);
            StateHasChanged();
            return Task.CompletedTask;
        });
    }

    private void Close() => MudDialog.Close();
}

@page "/hr/employee-contacts"
@namespace FSH.Starter.Blazor.Client.Pages.Hr.Employees.Contacts

<PageHeader Title="@($"Employee Contacts{FilterSuffix}")" Header="Employee Contacts" SubHeader="Manage emergency and related contact information.">
    <Actions>
        <MudButton Variant="Variant.Outlined" 
                   Color="Color.Primary" 
                   StartIcon="@Icons.Material.Filled.ArrowBack"
                   Href="/hr/employees">
            Back to Employees
        </MudButton>
        <MudButton Variant="Variant.Outlined" 
                   Color="Color.Info" 
                   StartIcon="@Icons.Material.Filled.Help"
                   OnClick="@ShowContactsHelp">
            Help
        </MudButton>
    </Actions>
</PageHeader>

@if (!string.IsNullOrEmpty(FilterEmployeeId))
{
    <MudAlert Severity="Severity.Info" Class="mb-4">
        Viewing contacts for Employee ID: <strong>@FilterEmployeeId</strong>
        <MudButton Size="Size.Small" Variant="Variant.Text" OnClick="@(() => ClearFilter())" Class="float-right">Clear Filter</MudButton>
    </MudAlert>
}

<EntityTable TEntity="EmployeeContactResponse" TId="DefaultIdType" TRequest="EmployeeContactViewModel" Context="@Context">
    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Contact ID" />
            </MudItem>
        }

        <MudDivider DividerType="DividerType.FullWidth" Class="my-4" />

        <MudItem xs="12">
            <MudText Typo="Typo.subtitle2" GutterBottom="true">Contact Information</MudText>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.FirstName"
                          For="@(() => context.FirstName)"
                          Label="First Name"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.LastName"
                          For="@(() => context.LastName)"
                          Label="Last Name"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Relationship"
                          For="@(() => context.Relationship)"
                          Label="Relationship"
                          Variant="Variant.Filled"
                          HelperText="E.g., Spouse, Parent, Sibling" />
        </MudItem>

        <MudItem xs="12" sm="6" md="6">
            <MudTextField @bind-Value="context.PhoneNumber"
                          For="@(() => context.PhoneNumber)"
                          Label="Phone Number"
                          InputType="InputType.Telephone"
                          Variant="Variant.Filled"
                          HelperText="+63 9xx xxx xxxx" />
        </MudItem>

        <MudItem xs="12" sm="6" md="6">
            <MudTextField @bind-Value="context.Email"
                          For="@(() => context.Email)"
                          Label="Email Address"
                          InputType="InputType.Email"
                          Variant="Variant.Filled"
                          HelperText="Valid email format" />
        </MudItem>

        <MudDivider DividerType="DividerType.FullWidth" Class="my-4" />

        <MudItem xs="12">
            <MudTextField @bind-Value="context.Address"
                          For="@(() => context.Address)"
                          Label="Address"
                          Lines="3"
                          Variant="Variant.Filled"
                          HelperText="Complete contact address" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudNumericField T="int?"
                             @bind-Value="context.Priority"
                             For="@(() => context.Priority)"
                             Label="Priority"
                             Min="1"
                             Max="10"
                             Variant="Variant.Filled"
                             HelperText="1 = Highest, 10 = Lowest" />
        </MudItem>

    </EditFormContent>
</EntityTable>


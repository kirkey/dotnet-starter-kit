@namespace FSH.Starter.Blazor.Client.Pages.Todos

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">

            <MudExpansionPanels Elevation="@_preference.Elevation">
                <MudExpansionPanel Text="What are Todos?" Icon="@Icons.Material.Filled.MenuBook">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.body2">
                            Todos are tasks or action items you need to complete. Each todo has a name, 
                            optional description, and notes to help you track what needs to be done.
                        </MudText>
                        <MudAlert Severity="Severity.Info" Dense="true">
                            <strong>Tip:</strong> Use clear, actionable names for your todos!
                        </MudAlert>
                    </MudStack>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Creating Todos" Icon="@Icons.Material.Filled.AddCircle">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">How to Add New Todos</MudText>
                        <MudText Typo="Typo.caption">
                            1. Click <strong>"Create Todo"</strong><br/>
                            2. Enter a clear <strong>Name</strong><br/>
                            3. Add optional <strong>Description</strong><br/>
                            4. Add optional <strong>Notes</strong><br/>
                            5. Click <strong>"Save"</strong>
                        </MudText>
                    </MudStack>
                </MudExpansionPanel>

                <MudExpansionPanel Text="FAQ" Icon="@Icons.Material.Filled.QuestionAnswer">
                    <MudStack Spacing="2">
                        <div>
                            <MudText Typo="Typo.body2" Class="mb-2">
                                <strong>Q: Can I import todos from Excel?</strong>
                            </MudText>
                            <MudText Typo="Typo.caption">
                                A: Yes - use the import feature with an Excel file containing Name, Description, and Notes columns.
                            </MudText>
                        </div>
                    </MudStack>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="@(() => MudDialog.Close())">Close</MudButton>
    </DialogActions>
</MudDialog>

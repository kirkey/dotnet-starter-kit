@page "/accounting/accruals"

<PageHeader Title="Accruals" Header="Accruals" SubHeader="Manage expense and revenue accruals with approval workflow." />

<MudPaper Elevation="2" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Info" OnClick="@ShowAccrualsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="AccrualResponse" TId="DefaultIdType" TRequest="AccrualViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchAccrualNumber"
                          Label="Accrual Number"
                          Placeholder="Search by accrual number"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSwitch @bind-Value="@SearchReversedOnly"
                       Label="Reversed Only"
                       Color="Color.Primary" />
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="accrual">
        @if (!accrual.IsReversed)
        {
            <MudMenuItem OnClick="@(() => OnApproveAccrual(accrual.Id))">
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="mr-2" Color="Color.Success" />
                    <span>Approve</span>
                </div>
            </MudMenuItem>
            <MudMenuItem OnClick="@(() => OnRejectAccrual(accrual.Id))">
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Cancel" Class="mr-2" Color="Color.Error" />
                    <span>Reject</span>
                </div>
            </MudMenuItem>
            <MudMenuItem OnClick="@(() => OnReverseAccrual(accrual.Id))">
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Undo" Class="mr-2" Color="Color.Warning" />
                    <span>Reverse</span>
                </div>
            </MudMenuItem>
        }
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Id" />
            </MudItem>
        }
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudTextField @bind-Value="context.AccrualNumber"
                          For="@(() => context.AccrualNumber)"
                          Label="Accrual Number"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudDatePicker @bind-Date="context.AccrualDate" DateFormat="MMMM dd yyyy" Label="Accrual Date" Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudNumericField @bind-Value="context.Amount" For="@(() => context.Amount)" Format="N2" Label="Amount" Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudSwitch @bind-Value="context.IsReversed" Class="mt-3" Color="Color.Primary" Label="Is Reversed" />
        </MudItem>
        @if (context.IsReversed)
        {
            <MudItem xs="6" sm="4" md="3" lg="2">
                <MudDatePicker @bind-Date="context.ReversalDate" Label="Reversal Date" />
            </MudItem>
        }
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Description" For="@(() => context.Description)" Label="Description" />
        </MudItem>
    </EditFormContent>
</EntityTable>

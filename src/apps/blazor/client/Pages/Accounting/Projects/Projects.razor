@page "/accounting/projects"

<PageHeader Title="Projects" Header="Project Management" SubHeader="Manage projects, track budgets, and analyze costs." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowProjectsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="ProjectResponse" TId="DefaultIdType" TRequest="ProjectViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchProjectName"
                          Label="Project Name"
                          Placeholder="Search by name"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchClientName"
                          Label="Client Name"
                          Placeholder="Search by client"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Business" />
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="project">
        <MudMenuItem Href="@($"/accounting/project-costing/{project.Id}")">
            <div class="d-flex align-center">
                <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Class="mr-2" />
                <span>View Costing</span>
            </div>
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Id" />
            </MudItem>
        }

        <MudItem xs="12">
            <MudTextField @bind-Value="context.Name"
                          For="@(() => context.Name)"
                          Label="Name"
                          Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudDatePicker @bind-Date="context.StartDate"
                           For="@(() => context.StartDate)"
                           DateFormat="MMMM dd, yyyy"
                           Label="Start Date" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudDatePicker @bind-Date="context.EndDate"
                           DateFormat="MMMM dd, yyyy"
                           For="@(() => context.EndDate)"
                           Label="End Date" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField T="decimal" Format="N2"
                             @bind-Value="context.BudgetedAmount"
                             For="@(() => context.BudgetedAmount)"
                             Label="Budgeted Amount"
                             Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteClientName @bind-Value="context.ClientName"
                                    For="@(() => context.ClientName)"
                                    Label="Client Name"
                                    Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteProjectManager @bind-Value="context.ProjectManager"
                                        For="@(() => context.ProjectManager)"
                                        Label="Project Manager"
                                        Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteDepartment @bind-Value="context.Department"
                                    For="@(() => context.Department)"
                                    Label="Department"
                                    Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField @bind-Value="context.Status"
                          For="@(() => context.Status)"
                          Label="Status"
                          ReadOnly="true" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField @bind-Value="context.Description"
                          For="@(() => context.Description)"
                          Label="Description"
                          Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField @bind-Value="context.Notes"
                          For="@(() => context.Notes)"
                          Label="Notes"
                          Variant="Variant.Filled" />
        </MudItem>

        <!-- Image Management -->
        <MudItem xs="12">
            <ImageUploader CurrentImageUrl="@(string.IsNullOrEmpty(context.ImageUrl) ? string.Empty : ImageUrlService.GetAbsoluteUrl(context.ImageUrl))"
                           CurrentImageUrlChanged="@(url => context.ImageUrl = url)"
                           UploadedImage="@context.Image"
                           UploadedImageChanged="@(img => context.Image = img)"
                           AltText="Project Image"
                           UploadLabel="Upload Project Image" />
        </MudItem>

        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" sm="6" md="4" lg="3">
                <MudNumericField T="decimal" Format="N2" Label="Actual Cost" ReadOnly Value="context.ActualCost" Variant="Variant.Outlined" />
            </MudItem>

            <MudItem xs="12" sm="6" md="4" lg="3">
                <MudNumericField T="decimal" Format="N2" Label="Actual Revenue" ReadOnly Value="context.ActualRevenue" Variant="Variant.Outlined" />
            </MudItem>
        }

        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12">
                <MudDivider Class="my-4" />
                <MudText Typo="Typo.h6" Class="mb-3">Project Costing Entries</MudText>
                <ProjectCostingEntries ProjectId="@context.Id" />
            </MudItem>
        }
    </EditFormContent>
</EntityTable>

@code {
    private RenderFragment<ProjectResponse> TemplateImage => dto => __builder =>
    {
        <MudItem Class="d-flex justify-center align-center">
            @if (dto.ImageUrl is not null)
            {
                <MudImage Src="@(string.IsNullOrEmpty(dto.ImageUrl) ? string.Empty : ImageUrlService.GetAbsoluteUrl(dto.ImageUrl))" Height="100" Alt="Project Image"/>
            }
        </MudItem>
    };
}

@page "/accounting-budgetdetails/{budgetId:guid}"
@namespace FSH.Starter.Blazor.Client.Pages.Accounting.Budgets

<PageHeader Title="Budget Details" Header="Budget Details" SubHeader="Manage Budget Details for the selected Budget.">
    <Actions>
        <MudButton Variant="Variant.Outlined" 
                   Color="Color.Primary" 
                   StartIcon="@Icons.Material.Filled.ArrowBack"
                   Href="/accounting-budgets">
            Back to Budgets
        </MudButton>
    </Actions>
</PageHeader>

<EntityTable @ref="_table" TEntity="BudgetDetailResponse" TId="DefaultIdType" TRequest="BudgetDetailViewModel" Context="@Context">
    <EditFormContent Context="context">
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Id" />
            </MudItem>
        }
        <MudItem xs="12">
            <AutocompleteChartOfAccountId @bind-Value="context.AccountId"
                                          For="@(() => context.AccountId)"
                                          Label="Chart of Account"
                                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField @bind-Value="context.BudgetedAmount"
                             For="@(() => context.BudgetedAmount)"
                             Format="N2"
                             Label="Budgeted Amount"
                             Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField @bind-Value="context.ActualAmount"
                             For="@(() => context.ActualAmount)"
                             Format="N2"
                             Label="Actual Amount"
                             Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Description"
                          For="@(() => context.Description)"
                          Label="Description"
                          Variant="Variant.Filled" />
        </MudItem>
    </EditFormContent>
</EntityTable>

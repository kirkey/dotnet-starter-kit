<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudGrid>
                <MudItem xs="12">
                    <MudAlert Severity="Severity.Info" Dense="true">
                        Rejecting this journal entry will prevent it from being posted to the general ledger.
                    </MudAlert>
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="_rejectionReason"
                                 Label="Rejection Reason"
                                 Placeholder="Enter reason for rejecting this entry"
                                 Variant="Variant.Filled"
                                 Lines="3"
                                 MaxLength="500"
                                 Counter="500"
                                 HelperText="Optional - provide reason for rejection" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => Cancel())">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="@(() => Submit())">
            Reject Entry
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    /// <summary>
    /// MudDialog instance for closing the dialog.
    /// </summary>
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    /// <summary>
    /// The journal entry ID to reject.
    /// </summary>
    [Parameter]
    public DefaultIdType JournalEntryId { get; set; }

    /// <summary>
    /// Form reference for validation.
    /// </summary>
    private MudForm _form = null!;

    /// <summary>
    /// Form validation state.
    /// </summary>
    private bool _isValid;

    /// <summary>
    /// Optional reason for rejection.
    /// </summary>
    private string _rejectionReason = string.Empty;

    /// <summary>
    /// Cancels the dialog without making changes.
    /// </summary>
    private void Cancel() => MudDialog.Cancel();

    /// <summary>
    /// Submits the rejection request and closes the dialog.
    /// </summary>
    private async Task Submit()
    {
        try
        {
            var request = new RejectJournalEntryRequest
            {
                RejectedBy = "CurrentUser", // TODO: Get actual user
                RejectionReason = _rejectionReason
            };
            await Client.JournalEntryRejectEndpointAsync("1", JournalEntryId, request);

            Snackbar.Add("Journal entry rejected", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error rejecting journal entry: {ex.Message}", Severity.Error);
        }
    }
}




<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudGrid>
                <MudItem xs="12">
                    <MudAlert Severity="Severity.Warning" Dense="true">
                        This will create a new reversing journal entry with opposite debit/credit amounts.
                        The original entry will remain posted but marked as reversed.
                    </MudAlert>
                </MudItem>

                <MudItem xs="12">
                    <MudDatePicker @bind-Date="_reversalDate"
                                  Label="Reversal Date"
                                  DateFormat="MMMM dd, yyyy"
                                  Variant="Variant.Filled"
                                  Required="true"
                                  HelperText="Date for the new reversing entry" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="_reversalReason"
                                 Label="Reversal Reason"
                                 Placeholder="Enter reason for reversing this entry"
                                 Variant="Variant.Filled"
                                 Lines="3"
                                 Required="true"
                                 MaxLength="500"
                                 Counter="500" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(!_isValid)">
            Reverse Entry
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    /// <summary>
    /// MudDialog instance for closing the dialog.
    /// </summary>
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    /// <summary>
    /// The journal entry ID to reverse.
    /// </summary>
    [Parameter]
    public DefaultIdType JournalEntryId { get; set; }

    /// <summary>
    /// Form reference for validation.
    /// </summary>
    private MudForm _form = null!;

    /// <summary>
    /// Form validation state.
    /// </summary>
    private bool _isValid;

    /// <summary>
    /// Date for the new reversing entry.
    /// </summary>
    private DateTime? _reversalDate = DateTime.Today;

    /// <summary>
    /// Reason for reversing the entry.
    /// </summary>
    private string _reversalReason = string.Empty;

    /// <summary>
    /// Cancels the dialog without making changes.
    /// </summary>
    private void Cancel() => MudDialog.Cancel();

    /// <summary>
    /// Submits the reversal request and closes the dialog.
    /// </summary>
    private async Task Submit()
    {
        if (!_reversalDate.HasValue)
        {
            Snackbar.Add("Reversal date is required", Severity.Warning);
            return;
        }

        try
        {
            var request = new ReverseJournalEntryRequest
            {
                ReversalDate = _reversalDate.Value,
                ReversalReason = _reversalReason
            };
            var response = await Client.JournalEntryReverseEndpointAsync("1", JournalEntryId, request);

            Snackbar.Add($"Journal entry reversed successfully. New entry ID: {response.ReversingEntryId}", Severity.Success);
            MudDialog.Close(DialogResult.Ok(response.ReversingEntryId));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error reversing journal entry: {ex.Message}", Severity.Error);
        }
    }
}




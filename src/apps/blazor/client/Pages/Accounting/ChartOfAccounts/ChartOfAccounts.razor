@page "/accounting/chart-of-accounts"

<PageHeader Title="Chart Of Accounts" Header="Chart Of Accounts" SubHeader="Manage Chart of Accounts." />

<MudPaper Elevation="2" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Info" OnClick="@ShowChartOfAccountsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="ChartOfAccountResponse" TId="DefaultIdType" TRequest="ChartOfAccountViewModel" Context="@Context">
    <EditFormContent Context="context">
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Id" />
            </MudItem>
        }
        <MudItem xs="12" sm="12" md="6" lg="4">
            <AutocompleteParentAccountId @bind-Value="context.ParentAccountId"
                                      For="@(() => context.ParentAccountId!)"
                                      Label="Parent Account"
                                      Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="12" md="6" lg="4">
            <AutocompleteUsoaCategory @bind-Value="context.UsoaCategory"
                                       For="@(() => context.UsoaCategory!)"
                                       Label="Category"
                                       Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3" lg="2">
            <MudSelect @bind-Value="context.AccountType"
                       For="@(() => context.AccountType!)"
                       Label="Type"
                       T="string"
                       Variant="Variant.Filled">
                @foreach (var type in new[] { "DEBIT", "CREDIT" })
                {
                    <MudSelectItem Value="@type">@type</MudSelectItem>
                }
            </MudSelect>
        </MudItem>
        <br/>
        <MudItem xs="12" sm="6" md="4" lg="2">
            <MudTextField @bind-Value="context.ParentCode"
                          For="@(() => context.ParentCode)"
                          Label="Parent Code"
                          Variant="Variant.Filled"/>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="2">
            <MudTextField @bind-Value="context.AccountCode" 
                          For="@(() => context.AccountCode)" 
                          Label="Account Code"
                          Variant="Variant.Filled"/>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="2">
            <MudNumericField @bind-Value="context.Balance" 
                             For="@(() => context.Balance)" 
                             Format="N2" 
                             Label="Balance"
                             Variant="Variant.Filled"/>
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Name" 
                          For="@(() => context.Name)" 
                          Label="Name" 
                          Variant="Variant.Filled"/>
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Description" 
                          For="@(() => context.Description)" 
                          Label="Description" 
                          Lines="3" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Notes" 
                          For="@(() => context.Notes)" 
                          Label="Notes" 
                          Lines="3" />
        </MudItem>
    </EditFormContent>
</EntityTable>
@page "/accounting/bills"
@using FSH.Starter.Blazor.Client.Pages.Accounting.Bills.Components

<PageHeader Title="Bill Management" Header="Bill Management" SubHeader="Manage vendor bills, track payables, and process payments." />

<MudPaper Elevation="2" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap">
        <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Assessment" OnClick="@ShowBillReports">
                Reports
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Payment" OnClick="@ShowPaymentBatch">
                Payment Batch
            </MudButton>
        </MudButtonGroup>

        <MudButtonGroup Color="Color.Secondary" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.CheckCircle" OnClick="@ShowPendingApprovals">
                Pending Approvals
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.PostAdd" OnClick="@ShowUnpostedBills">
                Unposted Bills
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.MoneyOff" OnClick="@ShowUnpaidBills">
                Unpaid Bills
            </MudButton>
        </MudButtonGroup>

        <MudSpacer />

        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.CalendarMonth" OnClick="@ShowAgingReport">
                Aging Report
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.FileDownload" OnClick="@ExportBills">
                Export
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Settings" OnClick="@ShowSettings">
                Settings
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowBillsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="BillSearchResponse" TId="DefaultIdType" TRequest="BillViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@BillNumber"
                          Label="Bill Number"
                          Placeholder="Search by bill number"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string"
                       @bind-Value="@Status"
                       Label="Status"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@("Draft")">Draft</MudSelectItem>
                <MudSelectItem Value="@("Submitted")">Submitted</MudSelectItem>
                <MudSelectItem Value="@("Approved")">Approved</MudSelectItem>
                <MudSelectItem Value="@("Rejected")">Rejected</MudSelectItem>
                <MudSelectItem Value="@("Posted")">Posted</MudSelectItem>
                <MudSelectItem Value="@("Paid")">Paid</MudSelectItem>
                <MudSelectItem Value="@("Void")">Void</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string"
                       @bind-Value="@ApprovalStatus"
                       Label="Approval Status"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@("Pending")">Pending</MudSelectItem>
                <MudSelectItem Value="@("Approved")">Approved</MudSelectItem>
                <MudSelectItem Value="@("Rejected")">Rejected</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="@BillDateFrom"
                           Label="Bill Date From"
                           DateFormat="MMMM dd, yyyy"
                           Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="@BillDateTo"
                           Label="Bill Date To"
                           DateFormat="MMMM dd, yyyy"
                           Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="@DueDateFrom"
                           Label="Due Date From"
                           DateFormat="MMMM dd, yyyy"
                           Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="@DueDateTo"
                           Label="Due Date To"
                           DateFormat="MMMM dd, yyyy"
                           Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSwitch @bind-Value="@IsPosted"
                       Label="Posted Only"
                       Color="Color.Primary" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSwitch @bind-Value="@IsPaid"
                       Label="Paid Only"
                       Color="Color.Primary" />
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="bill">
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewBillDetails(bill.Id))">
            View Details
        </MudMenuItem>
        <MudDivider />
        @if (bill.Status is "Draft" or "Submitted")
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Check" OnClick="@(() => OnApproveBill(bill.Id))">
                Approve Bill
            </MudMenuItem>
            <MudMenuItem Icon="@Icons.Material.Filled.Cancel" OnClick="@(() => OnRejectBill(bill.Id))">
                Reject Bill
            </MudMenuItem>
        }
        @if (bill is { Status: "Approved", IsPosted: false })
        {
            <MudMenuItem Icon="@Icons.Material.Filled.PostAdd" OnClick="@(() => OnPostBill(bill.Id))">
                Post to GL
            </MudMenuItem>
        }
        @if (bill is { IsPosted: true, IsPaid: false })
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Payment" OnClick="@(() => OnMarkAsPaid(bill.Id))">
                Mark as Paid
            </MudMenuItem>
        }
        @if (!bill.IsPaid)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Block" OnClick="@(() => OnVoidBill(bill.Id))">
                Void Bill
            </MudMenuItem>
        }
        <MudMenuItem Icon="@Icons.Material.Filled.Print" OnClick="@(() => OnPrintBill(bill.Id))">
            Print Bill
        </MudMenuItem>
    </ExtraActions>

    @*<ActionsContent Context="bill">
        <MudChip T="string" 
                 Color="@GetStatusColor(bill.Status)" 
                 Size="Size.Small">
            @bill.Status
        </MudChip>
        @if (bill.IsPosted)
        {
            <MudChip T="string" Color="Color.Success" Size="Size.Small" Icon="@Icons.Material.Filled.CheckCircle">
                Posted
            </MudChip>
        }
        @if (bill.IsPaid)
        {
            <MudChip T="string" Color="Color.Success" Size="Size.Small" Icon="@Icons.Material.Filled.Paid">
                Paid
            </MudChip>
        }
    </ActionsContent>*@

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Bill Id" />
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudTextField Value="context.Status" Underline=false ReadOnly Label="Status" />
            </MudItem>
        }

        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.BillNumber"
                          For="@(() => context.BillNumber)"
                          Label="Bill Number"
                          Variant="Variant.Filled"
                          Required="true"
                          HelperText="Vendor's invoice number" />
        </MudItem>

        <MudItem xs="12">
            <AutocompleteVendorId @bind-Value="context.VendorId"
                                  For="@(() => context.VendorId)"
                                  Label="Vendor"
                                  Variant="Variant.Filled"
                                  Required="true"
                                  HelperText="Select vendor from list" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="context.BillDate"
                           DateFormat="MMMM dd, yyyy"
                           Label="Bill Date"
                           Variant="Variant.Filled"
                           Required="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="context.DueDate"
                           DateFormat="MMMM dd, yyyy"
                           Label="Due Date"
                           Variant="Variant.Filled"
                           Required="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <AutocompleteAccountingPeriodId @bind-Value="context.PeriodId"
                                            For="@(() => context.PeriodId)"
                                            Label="Accounting Period"
                                            Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.PaymentTerms"
                          For="@(() => context.PaymentTerms)"
                          Label="Payment Terms"
                          Variant="Variant.Filled"
                          HelperText="e.g., Net 30, 2/10 Net 30" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.PurchaseOrderNumber"
                          For="@(() => context.PurchaseOrderNumber)"
                          Label="Purchase Order Number"
                          Variant="Variant.Filled" />
        </MudItem>

        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudNumericField T="decimal" @bind-Value="context.TotalAmount"
                                 Label="Total Amount"
                                 ReadOnly
                                 Format="N2"
                                 Variant="Variant.Filled" />
            </MudItem>
        }

        <MudItem xs="12">
            <MudTextField @bind-Value="context.Description"
                          For="@(() => context.Description)"
                          Label="Description"
                          Lines="2"
                          Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField @bind-Value="context.Notes"
                          For="@(() => context.Notes)"
                          Label="Notes"
                          Lines="3"
                          Variant="Variant.Filled" />
        </MudItem>

        @if (context is { IsPosted: false, IsPaid: false })
        {
            <MudItem xs="12">
                <MudDivider />
                <MudText Typo="Typo.h6" Class="my-3">Bill Line Items</MudText>
            </MudItem>

            <MudItem xs="12">
                <BillLineEditor @bind-Lines="context.LineItems" 
                                IsReadOnly="@(context.IsPosted || context.IsPaid)" />
            </MudItem>

            <MudItem xs="12">
                <MudAlert Severity="@GetTotalSeverity(context)" Dense="true" Class="my-3">
                    <div class="d-flex justify-space-between align-center">
                        <div>
                            <strong>Line Items:</strong> @context.LineItems.Count &nbsp;&nbsp;
                            <strong>Subtotal:</strong> @context.SubtotalAmount.ToString("N2") &nbsp;&nbsp;
                            <strong>Tax:</strong> @context.TotalTaxAmount.ToString("N2") &nbsp;&nbsp;
                            <strong>Total:</strong> @context.CalculatedTotal.ToString("N2")
                        </div>
                        <div>
                            @if (context.LineItems.Count > 0)
                            {
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" />
                                <span>Valid</span>
                            }
                            else
                            {
                                <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" />
                                <span>Add line items</span>
                            }
                        </div>
                    </div>
                </MudAlert>
            </MudItem>
        }
        else
        {
            <MudItem xs="12">
                <MudDivider />
                <MudText Typo="Typo.h6" Class="my-3">Bill Line Items (Read-Only)</MudText>
                <MudText Typo="Typo.body2" Class="mb-3">
                    Bill has been @(context.IsPosted ? "posted to GL" : "marked as paid"). Line items cannot be modified.
                </MudText>
            </MudItem>

            <MudItem xs="12">
                <MudButton StartIcon="@Icons.Material.Filled.Visibility" 
                           Color="Color.Info" 
                           OnClick="@(() => ViewBillDetails(context.Id!.Value))" 
                           Variant="Variant.Filled">
                    View Line Items
                </MudButton>
            </MudItem>
        }
    </EditFormContent>
</EntityTable>

@* Dialog for approving bill *@
<MudDialog @bind-IsVisible="_approveDialogVisible" Options="_dialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Check" Class="mr-3" /> Approve Bill
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_approveCommand.ApprovedBy"
                      Label="Approved By"
                      Required="true"
                      Variant="Variant.Outlined" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => _approveDialogVisible = false)">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@(() => SubmitApproveBill())">Approve</MudButton>
    </DialogActions>
</MudDialog>

@* Dialog for rejecting bill *@
<MudDialog @bind-IsVisible="_rejectDialogVisible" Options="_dialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Cancel" Class="mr-3" /> Reject Bill
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_rejectCommand.RejectedBy"
                      Label="Rejected By"
                      Required="true"
                      Variant="Variant.Outlined" />
        <MudTextField @bind-Value="_rejectCommand.Reason"
                      Label="Rejection Reason"
                      Required="true"
                      Lines="3"
                      Variant="Variant.Outlined" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => _rejectDialogVisible = false)">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="@(() => SubmitRejectBill())">Reject</MudButton>
    </DialogActions>
</MudDialog>

@* Dialog for marking as paid *@
<MudDialog @bind-IsVisible="_markAsPaidDialogVisible" Options="_dialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Payment" Class="mr-3" /> Mark Bill as Paid
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudDatePicker @bind-Date="_markAsPaidCommand.PaidDate"
                       Label="Payment Date"
                       Required="true"
                       Variant="Variant.Outlined" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => _markAsPaidDialogVisible = false)">Cancel</MudButton>
        <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="@(() => SubmitMarkAsPaid())">Mark as Paid</MudButton>
    </DialogActions>
</MudDialog>

@* Dialog for voiding bill *@
<MudDialog @bind-IsVisible="_voidDialogVisible" Options="_dialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Block" Class="mr-3" /> Void Bill
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_voidCommand.Reason"
                      Label="Void Reason"
                      Required="true"
                      Lines="3"
                      Variant="Variant.Outlined" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => _voidDialogVisible = false)">Cancel</MudButton>
        <MudButton Color="Color.Warning" Variant="Variant.Filled" OnClick="@(() => SubmitVoidBill())">Void Bill</MudButton>
    </DialogActions>
</MudDialog>


@namespace FSH.Starter.Blazor.Client.Pages.Accounting.AccountReconciliations

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">Reconciliation Details</MudText>
            
            <MudAlert Severity="Severity.Info">
                Details for reconciliation ID: @ReconciliationId
            </MudAlert>

            <MudText Typo="Typo.body2">
                To view full details, please edit the reconciliation or view it from the table.
            </MudText>
        </MudStack>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="@(() => MudDialog.Close())">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public DefaultIdType ReconciliationId { get; set; }

    private void Close() => MudDialog.Close();
}


@namespace FSH.Starter.Blazor.Client.Pages.Accounting.BankReconciliations

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Approve Reconciliation</MudText>
    </TitleContent>
    <DialogContent>
        <MudStack Spacing="3">
            <MudAlert Severity="Severity.Success" Variant="Variant.Filled">
                This will mark the reconciliation as approved and finalize it.
            </MudAlert>

            <MudAlert Severity="Severity.Info">
                <MudText Typo="Typo.body2">
                    <strong>Note:</strong> Your approval will be recorded automatically using your current user session.
                </MudText>
            </MudAlert>

            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Are you sure you want to approve this bank reconciliation?
            </MudText>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => Cancel())">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="@OnSubmit">Approve</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public DefaultIdType ReconciliationId { get; set; }

    private async Task OnSubmit()
    {
        try
        {
            var command = new ApproveBankReconciliationCommand { Id = ReconciliationId };
            await Client.ApproveBankReconciliationEndpointAsync("1", ReconciliationId, command);
            Snackbar.Add("Reconciliation approved successfully.", Severity.Success);
            MudDialog.Close(true);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error approving reconciliation: {ex.Message}", Severity.Error);
        }
    }

    private void Cancel() => MudDialog.Cancel();
}


@namespace FSH.Starter.Blazor.Client.Pages.Accounting.BankReconciliations

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Complete Reconciliation</MudText>
    </TitleContent>
    <DialogContent>
        <EditForm Model="@Command" OnValidSubmit="@OnSubmit">
            <FluentValidationValidator />
            <MudStack Spacing="3">
                <MudAlert Severity="Severity.Info" Variant="Variant.Filled">
                    This will mark the reconciliation as completed. The balances must match before completion.
                </MudAlert>

                <MudTextField @bind-Value="Command.ReconciledBy"
                             Label="Completed By"
                             For="@(() => Command.ReconciledBy)"
                             HelperText="Your name or email"
                             Variant="Variant.Outlined"
                             Required="true" />

                <MudText Typo="Typo.caption" Color="Color.Secondary">
                    <ValidationMessage For="@(() => Command.ReconciledBy)" />
                </MudText>
            </MudStack>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="@OnSubmit">Complete</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public CompleteBankReconciliationCommand Command { get; set; } = new();

    [Parameter]
    public DefaultIdType ReconciliationId { get; set; }

    private async Task OnSubmit()
    {
        try
        {
            Command.Id = ReconciliationId;
            await Client.CompleteBankReconciliationEndpointAsync("1", ReconciliationId, Command);
            Snackbar.Add("Reconciliation completed successfully.", Severity.Success);
            MudDialog.Close(true);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error completing reconciliation: {ex.Message}", Severity.Error);
        }
    }

    private void Cancel() => MudDialog.Cancel();
}


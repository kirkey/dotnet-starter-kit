@page "/accounting/inventory-items"

<PageHeader Title="Inventory Items" Header="Inventory Items" SubHeader="Manage inventory items." />

<MudPaper Elevation="2" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowInventoryItemsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="StockLevelResponse" TId="DefaultIdType" TRequest="InventoryItemViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchSku"
                          Label="SKU"
                          Placeholder="Search by SKU"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchName"
                          Label="Item Name"
                          Placeholder="Search by name"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSwitch @bind-Value="@SearchActiveOnly"
                       Label="Active Only"
                       Color="Color.Primary" />
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="item">
        <MudMenuItem Icon="@Icons.Material.Filled.Add" OnClick="@(() => OnAddStock(item))">
            Add Stock
        </MudMenuItem>
        <MudMenuItem Icon="@Icons.Material.Filled.Remove" OnClick="@(() => OnReduceStock(item))">
            Reduce Stock
        </MudMenuItem>
        @if (item.IsActive)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Block" OnClick="@(() => OnDeactivate(item))">
                Deactivate
            </MudMenuItem>
        }
        <MudMenuItem Icon="@Icons.Material.Filled.RemoveRedEye" OnClick="@(() => OnViewDetails(item))">
            View Details
        </MudMenuItem>
    </ExtraActions>
</EntityTable>


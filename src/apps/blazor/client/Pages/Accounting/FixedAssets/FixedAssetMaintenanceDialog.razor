<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">Update Maintenance Schedule</MudText>
            <MudDatePicker @bind-Date="_lastMaintenanceDate"
                           Label="Last Maintenance Date"
                           Variant="Variant.Outlined" />
            <MudDatePicker @bind-Date="_nextMaintenanceDate"
                           Label="Next Maintenance Date"
                           Variant="Variant.Outlined" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => Cancel())">Cancel</MudButton>
        <MudButton OnClick="Update" Color="Color.Primary" Variant="Variant.Filled">
            Update Maintenance
        </MudButton>
    </DialogActions>
</MudDialog>


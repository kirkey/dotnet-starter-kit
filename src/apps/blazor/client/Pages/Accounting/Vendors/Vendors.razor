@page "/accounting/vendors"

<PageHeader Title="Vendors" Header="Vendors" SubHeader="Manage Vendors and Suppliers." />

<EntityTable @ref="_table" TEntity="VendorSearchResponse" TId="DefaultIdType" TRequest="VendorViewModel" Context="@Context">
    <EditFormContent Context="context">
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Id" />
            </MudItem>
        }
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField @bind-Value="context.VendorCode"
                          For="@(() => context.VendorCode)"
                          Label="Vendor Code"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField @bind-Value="context.Tin"
                          For="@(() => context.Tin)"
                          Label="TIN"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Name"
                          For="@(() => context.Name)"
                          Label="Name"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="context.Address"
                          For="@(() => context.Address)"
                          Label="Address"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="context.BillingAddress"
                          For="@(() => context.BillingAddress)"
                          Label="Billing Address"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.ContactPerson"
                          For="@(() => context.ContactPerson)"
                          Label="Contact Person"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Email"
                          For="@(() => context.Email)"
                          Label="Email"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Phone"
                          For="@(() => context.Phone)"
                          Label="Phone Number"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="context.Terms"
                          For="@(() => context.Terms)"
                          Label="Payment Terms"
                          Variant="Variant.Filled"
                          HelperText="e.g., Net 30, Net 60, COD" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <AutocompleteChartOfAccountCode @bind-Value="context.ExpenseAccountCode"
                                            For="@(() => context.ExpenseAccountCode)"
                                            Label="Default Expense Account" 
                                            TextFormat="CodeName"
                                            Variant="Variant.Filled"
                                            HelperText="Default account for purchases from this vendor" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Description"
                          For="@(() => context.Description)"
                          Label="Description"
                          Variant="Variant.Filled"
                          Lines="2" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Notes"
                          For="@(() => context.Notes)"
                          Label="Notes"
                          Variant="Variant.Filled"
                          Lines="3" />
        </MudItem>
    </EditFormContent>
</EntityTable>


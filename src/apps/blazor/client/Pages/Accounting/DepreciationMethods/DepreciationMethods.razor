@page "/accounting/depreciation-methods"

<PageHeader Title="Depreciation Methods" Header="Depreciation Methods" SubHeader="Manage depreciation calculation methods for fixed assets." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowDepreciationMethodsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="DepreciationMethodResponse" TId="DefaultIdType" TRequest="DepreciationMethodViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchMethodCode"
                          Label="Method Code"
                          Placeholder="Search by code (e.g., SL, DB)"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchMethodName"
                          Label="Method Name"
                          Placeholder="Search by name"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSwitch @bind-Value="@SearchActiveOnly"
                       Label="Active Only"
                       Color="Color.Primary" />
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="method">
        @if (method.IsActive)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Block" OnClick="@(() => OnDeactivate(method))">
                Deactivate
            </MudMenuItem>
        }
        else
        {
            <MudMenuItem Icon="@Icons.Material.Filled.CheckCircle" OnClick="@(() => OnActivate(method))">
                Activate
            </MudMenuItem>
        }
        <MudMenuItem Icon="@Icons.Material.Filled.RemoveRedEye" OnClick="@(() => OnViewDetails(method))">
            View Details
        </MudMenuItem>
    </ExtraActions>
</EntityTable>


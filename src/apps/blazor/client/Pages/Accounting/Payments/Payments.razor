@page "/accounting/payments"

<PageHeader Title="Payments" Header="Payments" SubHeader="Record and manage customer/member payments and allocations." />

<!-- Dashboard Summary -->
<MudGrid Class="mb-4">
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="1">
            <MudCardContent>
                <MudStack Spacing="1">
                    <MudText Typo="Typo.caption" Color="Color.Default">Total Payments</MudText>
                    <MudText Typo="Typo.h5">--</MudText>
                    <MudText Typo="Typo.caption">This Period</MudText>
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="1">
            <MudCardContent>
                <MudStack Spacing="1">
                    <MudText Typo="Typo.caption" Color="Color.Default">Unapplied Amount</MudText>
                    <MudText Typo="Typo.h5">--</MudText>
                    <MudText Typo="Typo.caption">Awaiting Allocation</MudText>
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="1">
            <MudCardContent>
                <MudStack Spacing="1">
                    <MudText Typo="Typo.caption" Color="Color.Default">Allocated Payments</MudText>
                    <MudText Typo="Typo.h5">--</MudText>
                    <MudText Typo="Typo.caption">Fully Applied</MudText>
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="1">
            <MudCardContent>
                <MudStack Spacing="1">
                    <MudText Typo="Typo.caption" Color="Color.Default">Payment Methods</MudText>
                    <MudText Typo="Typo.h5">4</MudText>
                    <MudText Typo="Typo.caption">Supported</MudText>
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<!-- Action Bar -->
<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Calculate" Disabled>
                Batch Apply (Coming Soon)
            </MudButton>
        </MudButtonGroup>
        
        <MudButtonGroup Color="Color.Secondary" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.FileDownload" Disabled>
                Export
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Assessment" Disabled>
                Reports
            </MudButton>
        </MudButtonGroup>
        
        <MudSpacer />
        
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Info" OnClick="@ShowPaymentInfo">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<!-- Payments Table -->
<EntityTable @ref="_table" TEntity="PaymentSearchResponse" TId="DefaultIdType" TRequest="PaymentViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@PaymentNumber"
                          Label="Payment Number"
                          Placeholder="Search by payment number"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string"
                       @bind-Value="@PaymentMethod"
                       Label="Payment Method"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@("Cash")">Cash</MudSelectItem>
                <MudSelectItem Value="@("Check")">Check</MudSelectItem>
                <MudSelectItem Value="@("CreditCard")">Credit Card</MudSelectItem>
                <MudSelectItem Value="@("EFT")">EFT</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="@StartDate"
                           Label="Payment Date From"
                           DateFormat="MMMM dd, yyyy"
                           Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="@EndDate"
                           Label="Payment Date To"
                           DateFormat="MMMM dd, yyyy"
                           Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSwitch @bind-Value="@HasUnappliedAmount"
                       Label="Has Unapplied Amount"
                       Color="Color.Primary" />
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="payment">
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => OnViewDetails(payment.Id))">
            View Details
        </MudMenuItem>
        <MudDivider />
        @if (payment.UnappliedAmount > 0)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Link" OnClick="@(() => OnAllocate(payment.Id, payment.UnappliedAmount))">
                Allocate (@payment.UnappliedAmount.ToString("N2"))
            </MudMenuItem>
        }
        else
        {
            <MudMenuItem Icon="@Icons.Material.Filled.CheckCircle" Disabled>
                Fully Allocated âœ“
            </MudMenuItem>
        }
        <MudDivider />
        <MudMenuItem Icon="@Icons.Material.Filled.Receipt" OnClick="@(() => OnRefund(payment.Id))">
            Refund
        </MudMenuItem>
        <MudMenuItem Icon="@Icons.Material.Filled.Block" OnClick="@(() => OnVoid(payment.Id))">
            Void
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudTextField Value="context.Id" Underline=false ReadOnly Label="Payment Id" />
            </MudItem>
        }

        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.PaymentNumber"
                          For="@(() => context.PaymentNumber)"
                          Label="Payment Number"
                          Variant="Variant.Filled"
                          Required="true"
                          HelperText="Unique receipt/transaction identifier" />
        </MudItem>

        <MudItem xs="12">
            <AutocompleteCustomerId @bind-Value="context.MemberId"
                                    For="@(() => context.MemberId)"
                                    Label="Customer/Member"
                                    Variant="Variant.Filled"
                                    Required="true"
                                    HelperText="Select customer or leave blank for unallocated payment" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="context.PaymentDate"
                           DateFormat="MMMM dd, yyyy"
                           Label="Payment Date"
                           Variant="Variant.Filled"
                           Required="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudNumericField T="decimal" @bind-Value="context.Amount"
                             Label="Amount"
                             Variant="Variant.Filled"
                             Format="N2"
                             Required
                             Min="0.01m"
                             HelperText="Payment amount must be positive" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudSelect @bind-Value="context.PaymentMethod"
                       For="@(() => context.PaymentMethod)"
                       Label="Payment Method"
                       Variant="Variant.Filled"
                       Required>
                <MudSelectItem Value="@("Cash")">Cash</MudSelectItem>
                <MudSelectItem Value="@("Check")">Check</MudSelectItem>
                <MudSelectItem Value="@("CreditCard")">Credit Card</MudSelectItem>
                <MudSelectItem Value="@("EFT")">EFT / Bank Transfer</MudSelectItem>
            </MudSelect>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.ReferenceNumber"
                          For="@(() => context.ReferenceNumber)"
                          Label="Reference #"
                          Variant="Variant.Filled"
                          HelperText="Check#, Transaction ID, etc" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.DepositToAccountCode"
                          For="@(() => context.DepositToAccountCode)"
                          Label="Deposit To Account"
                          Variant="Variant.Filled"
                          HelperText="Bank or cash account code" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField @bind-Value="context.Description"
                          For="@(() => context.Description)"
                          Label="Description"
                          Lines="2"
                          Variant="Variant.Filled"
                          HelperText="Payment description or reason" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField @bind-Value="context.Notes"
                          For="@(() => context.Notes)"
                          Label="Notes"
                          Lines="3"
                          Variant="Variant.Filled"
                          HelperText="Internal notes (not visible to customer)" />
        </MudItem>
    </EditFormContent>
</EntityTable>
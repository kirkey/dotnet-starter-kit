@namespace FSH.Starter.Blazor.Client.Pages.Accounting.Payments

<MudDialog>
    <DialogContent>
        <MudStack Spacing="2">
            <MudText Typo="Typo.h6">Refund Payment</MudText>
            <MudNumericField T="decimal" @bind-Value="_amount" Label="Refund Amount" Format="N2" Immediate Min="0" />
            <MudTextField @bind-Value="_reference" Label="Reference (optional)" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="@(() => Refund())">Refund</MudButton>
        <MudButton OnClick="@(() => MudDialog.Cancel())">Cancel</MudButton>
    </DialogActions>
</MudDialog>

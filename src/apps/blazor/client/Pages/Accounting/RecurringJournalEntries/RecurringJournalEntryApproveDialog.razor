@inject IClient Client
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">Approve Recurring Template</MudText>
            <MudAlert Severity="Severity.Info">
                Approve template <strong>@TemplateCode</strong> for automatic journal entry generation.
            </MudAlert>
            
            <MudTextField @bind-Value="_approverNotes"
                          Label="Approver Notes (Optional)"
                          Variant="Variant.Outlined"
                          Lines="3" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => Cancel())" Variant="Variant.Text">Cancel</MudButton>
        <MudButton OnClick="@(() => Approve())" 
                   Color="Color.Success" 
                   Variant="Variant.Filled">
            Approve Template
        </MudButton>
    </DialogActions>
</MudDialog>


@inject IClient Client
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">Suspend Recurring Template</MudText>
            <MudAlert Severity="Severity.Warning">
                Suspend template <strong>@TemplateCode</strong>. Automatic generation will be paused.
            </MudAlert>
            
            <MudTextField @bind-Value="_reason"
                          Label="Reason for Suspension (Required)"
                          Variant="Variant.Outlined"
                          Required="true"
                          Lines="3" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => Cancel())">Cancel</MudButton>
        <MudButton OnClick="@(() => Suspend())" 
                   Color="Color.Warning" 
                   Variant="Variant.Filled" 
                   Disabled="@(string.IsNullOrWhiteSpace(_reason))">
            Suspend Template
        </MudButton>
    </DialogActions>
</MudDialog>


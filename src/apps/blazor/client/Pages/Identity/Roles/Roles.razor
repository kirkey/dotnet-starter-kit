@page "/identity/roles"

<PageHeader Title="Roles" Header="Roles" SubHeader="Manage Roles." />

<EntityTable TEntity="RoleDto" TId="string" TRequest="CreateOrUpdateRoleCommand" Context="@Context">
    <ExtraActions>
        @if (_canViewRoleClaims)
        {
            <MudMenuItem @onclick="@(() => ManagePermissions(Context.AddEditModal.RequestModel.Id))">Manage Permission</MudMenuItem>
        }
    </ExtraActions>
    <EditFormContent>
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="6">
                <MudTextField Value="Context.AddEditModal.RequestModel.Id" ReadOnly Underline="false" Label="Role Id]" />
            </MudItem>
        }
        <MudItem xs="12" md="6">
            <MudTextField For="@(() => Context.AddEditModal.RequestModel.Name)" @bind-Value="Context.AddEditModal.RequestModel.Name" Label="Role Name" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField For="@(() => Context.AddEditModal.RequestModel.Description)" @bind-Value="Context.AddEditModal.RequestModel.Description"
                Label="Description" />
        </MudItem>
    </EditFormContent>

</EntityTable>
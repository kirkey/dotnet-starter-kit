<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Class="mr-2" Color="Color.Primary" />
            Update NAV - @ProductName
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    Update the Net Asset Value (NAV) for this investment product.
                </MudAlert>
            </MudItem>
            @if (CurrentNav.HasValue)
            {
                <MudItem xs="12">
                    <MudField Label="Current NAV" Variant="Variant.Outlined">@CurrentNav.Value.ToString("C")</MudField>
                </MudItem>
            }
            <MudItem xs="12" md="6">
                <MudNumericField @bind-Value="_newNav"
                                 Label="New NAV"
                                 Variant="Variant.Outlined"
                                 Required="true"
                                 Min="0m"
                                 Adornment="Adornment.Start"
                                 AdornmentIcon="@Icons.Material.Filled.AttachMoney" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudDatePicker @bind-Date="_navDate"
                               Label="NAV Date"
                               Variant="Variant.Outlined"
                               Required="true"
                               MaxDate="@DateTime.Today" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!IsValid)">
            Update NAV
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType ProductId { get; set; }

    [Parameter]
    public string ProductName { get; set; } = string.Empty;

    [Parameter]
    public decimal? CurrentNav { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private decimal _newNav;
    private DateTime? _navDate = DateTime.Today;

    private bool IsValid => _newNav > 0 && _navDate.HasValue;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new UpdateInvestmentProductNavCommand
        {
            Id = ProductId,
            NewNav = _newNav,
            NavDate = DateOnly.FromDateTime(_navDate!.Value)
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.UpdateInvestmentProductNavEndpointAsync("1", ProductId, command),
            Snackbar,
            successMessage: "NAV updated successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

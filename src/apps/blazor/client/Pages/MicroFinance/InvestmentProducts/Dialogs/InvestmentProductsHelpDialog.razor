<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Help" Class="mr-2" />
            Investment Products Help
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudExpansionPanels MultiExpansion="true">
            <MudExpansionPanel Text="Overview" IsInitiallyExpanded="true">
                <MudText Typo="Typo.body2">
                    Investment Products are financial instruments offered to members for wealth building and returns generation.
                    This module allows you to manage various investment products such as mutual funds, fixed income securities,
                    and other investment vehicles offered by your microfinance institution.
                </MudText>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Product Types">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Available Investment Types:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.TrendingUp">
                        <strong>Equity:</strong> Stock-based investments with higher risk and potential returns
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.AccountBalance">
                        <strong>Fixed Income:</strong> Bond-based investments with stable returns
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Balance">
                        <strong>Balanced:</strong> Mix of equity and fixed income
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Savings">
                        <strong>Money Market:</strong> Short-term, low-risk investments
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Diamond">
                        <strong>Alternative:</strong> Commodities, real estate, and other alternatives
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Risk Levels">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Risk Categories:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Shield">
                        <MudChip T="string" Color="Color.Success" Size="Size.Small">Low</MudChip>
                        Conservative investments with capital preservation focus
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Security">
                        <MudChip T="string" Color="Color.Warning" Size="Size.Small">Medium</MudChip>
                        Balanced risk-return profile
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Warning">
                        <MudChip T="string" Color="Color.Error" Size="Size.Small">High</MudChip>
                        Aggressive investments for higher returns
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Dangerous">
                        <MudChip T="string" Color="Color.Dark" Size="Size.Small">Very High</MudChip>
                        Speculative investments for sophisticated investors
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Key Metrics">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Important Metrics:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.AttachMoney">
                        <strong>NAV:</strong> Net Asset Value - current price per unit
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Percent">
                        <strong>Management Fee:</strong> Annual fee for managing the investment
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.TrendingUp">
                        <strong>Expected Return:</strong> Projected annual return range
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Lock">
                        <strong>Lock-In Period:</strong> Minimum holding period before redemption
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Money">
                        <strong>Minimum Investment:</strong> Minimum amount to invest
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Key Actions">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Available Operations:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Add">
                        <strong>Create:</strong> Define a new investment product
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Edit">
                        <strong>Edit:</strong> Modify product details
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.TrendingUp">
                        <strong>Update NAV:</strong> Update the Net Asset Value
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Visibility">
                        <strong>View:</strong> See product details
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Best Practices">
                <MudText Typo="Typo.body2">
                    <strong>Recommended Practices:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Update">
                        Update NAV daily for accurate portfolio valuations
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Info">
                        Provide clear product descriptions for member understanding
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Balance">
                        Offer products across different risk levels
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Gavel">
                        Ensure compliance with regulatory requirements
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Filled" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Cancel() => MudDialog.Cancel();
}

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Help" Class="mr-3 mb-n1" />
            Savings Accounts Help
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1" Class="mb-4">
            The Savings Accounts module allows you to manage member savings accounts, process deposits and withdrawals, and track account balances.
        </MudText>

        <MudExpansionPanels MultiExpansion="true">
            <MudExpansionPanel Text="Creating a Savings Account" Icon="@Icons.Material.Filled.AddCircle">
                <MudText Typo="Typo.body2">
                    <ul>
                        <li><strong>Member</strong>: Select the member who will own this account.</li>
                        <li><strong>Savings Product</strong>: Choose the savings product type (e.g., Regular Savings, Fixed Deposit).</li>
                        <li><strong>Initial Deposit</strong>: Enter the opening deposit amount.</li>
                    </ul>
                </MudText>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Making Deposits" Icon="@Icons.Material.Filled.Info">
                <MudText Typo="Typo.body2">
                    <ul>
                        <li>Click the <strong>Deposit</strong> action from the account's menu.</li>
                        <li>Enter the deposit amount and optional notes.</li>
                        <li>The balance will be updated immediately after confirmation.</li>
                    </ul>
                </MudText>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Making Withdrawals" Icon="@Icons.Material.Filled.Info">
                <MudText Typo="Typo.body2">
                    <ul>
                        <li>Click the <strong>Withdraw</strong> action from the account's menu.</li>
                        <li>Enter the withdrawal amount (cannot exceed available balance).</li>
                        <li>Add optional notes for the transaction.</li>
                    </ul>
                </MudText>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Account Status" Icon="@Icons.Material.Filled.Info">
                <MudText Typo="Typo.body2">
                    <ul>
                        <li><strong>Active</strong>: Account is open and can process transactions.</li>
                        <li><strong>Frozen</strong>: Account is temporarily suspended; no transactions allowed.</li>
                        <li><strong>Closed</strong>: Account has been closed permanently.</li>
                    </ul>
                </MudText>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Variant="Variant.Filled" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Close() => MudDialog.Close();
}

@page "/microfinance/savings-accounts"

<PageHeader Title="Savings Accounts" Header="Savings Accounts" SubHeader="Manage member savings accounts - deposits, withdrawals, and balances." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowSavingsAccountsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="SavingsAccountResponse" TId="DefaultIdType" TRequest="SavingsAccountViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchAccountNumber"
                          Label="Account Number"
                          Placeholder="Search by account number"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.AccountBalance" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string?"
                       @bind-Value="@SearchStatus"
                       Label="Status"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@((string?)"Active")">Active</MudSelectItem>
                <MudSelectItem Value="@((string?)"Frozen")">Frozen</MudSelectItem>
                <MudSelectItem Value="@((string?)"Closed")">Closed</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        @if (entity.Status == "Pending" && _canDeposit)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.CheckCircle" OnClick="@(() => ActivateAccount(entity.Id))">
                Activate
            </MudMenuItem>
        }
        @if (entity.Status == "Active" && _canDeposit)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Add" OnClick="@(() => ShowDepositDialog(entity))">
                Deposit
            </MudMenuItem>
        }
        @if (entity.Status == "Active" && _canWithdraw)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Remove" OnClick="@(() => ShowWithdrawDialog(entity))">
                Withdraw
            </MudMenuItem>
        }
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewAccountDetails(entity.Id))">
            View Details
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Account Setup</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6">
            <AutocompleteMember @bind-Value="context.SelectedMember"
                                Label="Member"
                                Required="true"
                                HelperText="Select the member for this account" />
        </MudItem>
        
        <MudItem xs="12" sm="6">
            <AutocompleteSavingsProduct @bind-Value="context.SelectedSavingsProduct"
                                        Label="Savings Product"
                                        Required="true"
                                        HelperText="Select the savings product type" />
        </MudItem>
        
        <MudItem xs="12" sm="6">
            <MudNumericField T="decimal"
                             @bind-Value="context.InitialDeposit"
                             For="@(() => context.InitialDeposit)"
                             Label="Initial Deposit"
                             Variant="Variant.Filled"
                             Min="0m"
                             Format="N2"
                             Adornment="Adornment.Start"
                             AdornmentText="$"
                             HelperText="Amount to deposit when opening the account" />
        </MudItem>
    </EditFormContent>
</EntityTable>

@* Deposit Dialog *@
<MudDialog @bind-Visible="_depositDialogVisible" Options="@_dialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            Deposit to Account
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Class="mb-4">Account: <strong>@_selectedAccount?.AccountNumber</strong></MudText>
        <MudText Class="mb-4">Current Balance: <strong>@_selectedAccount?.Balance.ToString("C")</strong></MudText>
        <MudNumericField T="decimal"
                         @bind-Value="_depositAmount"
                         Label="Deposit Amount"
                         Variant="Variant.Filled"
                         Min="0.01m"
                         Format="N2"
                         Adornment="Adornment.Start"
                         AdornmentText="$"
                         Required="true" />
        <MudTextField @bind-Value="_transactionNotes"
                      Label="Notes"
                      Variant="Variant.Filled"
                      Lines="2"
                      Class="mt-4" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => _depositDialogVisible = false)" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@ExecuteDeposit">Deposit</MudButton>
    </DialogActions>
</MudDialog>

@* Withdraw Dialog *@
<MudDialog @bind-Visible="_withdrawDialogVisible" Options="@_dialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Remove" Class="mr-3 mb-n1" />
            Withdraw from Account
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Class="mb-4">Account: <strong>@_selectedAccount?.AccountNumber</strong></MudText>
        <MudText Class="mb-4">Available Balance: <strong>@_selectedAccount?.Balance.ToString("C")</strong></MudText>
        <MudNumericField T="decimal"
                         @bind-Value="_withdrawAmount"
                         Label="Withdraw Amount"
                         Variant="Variant.Filled"
                         Min="0.01m"
                         Max="@(_selectedAccount?.Balance ?? 0m)"
                         Format="N2"
                         Adornment="Adornment.Start"
                         AdornmentText="$"
                         Required="true" />
        <MudTextField @bind-Value="_transactionNotes"
                      Label="Notes"
                      Variant="Variant.Filled"
                      Lines="2"
                      Class="mt-4" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => _withdrawDialogVisible = false)" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton Color="Color.Warning" Variant="Variant.Filled" OnClick="@ExecuteWithdraw">Withdraw</MudButton>
    </DialogActions>
</MudDialog>

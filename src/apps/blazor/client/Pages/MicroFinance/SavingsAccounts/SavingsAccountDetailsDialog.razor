@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.SavingsAccounts

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Class="mr-3 mb-n1" />
            Savings Account Details
        </MudText>
    </TitleContent>
    <DialogContent>
        @if (_loading)
        {
            <MudProgressCircular Indeterminate="true" />
        }
        else if (_account != null)
        {
            <MudGrid>
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Account Information</strong></MudText>
                    <MudDivider />
                </MudItem>
                
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.caption">Account Number</MudText>
                    <MudText Typo="Typo.body1"><strong>@_account.AccountNumber</strong></MudText>
                </MudItem>
                
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.caption">Status</MudText>
                    <MudChip T="string" Color="@GetStatusColor(_account.Status)" Size="Size.Small">@_account.Status</MudChip>
                </MudItem>
                
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.caption">Member</MudText>
                    <MudText Typo="Typo.body1">@_account.MemberName</MudText>
                </MudItem>
                
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.caption">Product</MudText>
                    <MudText Typo="Typo.body1">@_account.ProductName</MudText>
                </MudItem>
                
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Balance Information</strong></MudText>
                    <MudDivider />
                </MudItem>
                
                <MudItem xs="12" sm="6" md="3">
                    <MudText Typo="Typo.caption">Current Balance</MudText>
                    <MudText Typo="Typo.h6" Color="Color.Primary">@_account.Balance.ToString("C")</MudText>
                </MudItem>
                
                <MudItem xs="12" sm="6" md="3">
                    <MudText Typo="Typo.caption">Total Deposits</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Success">@_account.TotalDeposits.ToString("C")</MudText>
                </MudItem>
                
                <MudItem xs="12" sm="6" md="3">
                    <MudText Typo="Typo.caption">Total Withdrawals</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Warning">@_account.TotalWithdrawals.ToString("C")</MudText>
                </MudItem>
                
                <MudItem xs="12" sm="6" md="3">
                    <MudText Typo="Typo.caption">Interest Earned</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Info">@_account.TotalInterestEarned.ToString("C")</MudText>
                </MudItem>
                
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Dates</strong></MudText>
                    <MudDivider />
                </MudItem>
                
                <MudItem xs="12" sm="4">
                    <MudText Typo="Typo.caption">Opened Date</MudText>
                    <MudText Typo="Typo.body1">@_account.OpenedDate.ToString("d")</MudText>
                </MudItem>
                
                <MudItem xs="12" sm="4">
                    <MudText Typo="Typo.caption">Last Interest Posting</MudText>
                    <MudText Typo="Typo.body1">@(_account.LastInterestPostingDate?.ToString("d") ?? "N/A")</MudText>
                </MudItem>
                
                <MudItem xs="12" sm="4">
                    <MudText Typo="Typo.caption">Closed Date</MudText>
                    <MudText Typo="Typo.body1">@(_account.ClosedDate?.ToString("d") ?? "N/A")</MudText>
                </MudItem>
                
                @if (!string.IsNullOrWhiteSpace(_account.Notes))
                {
                    <MudItem xs="12">
                        <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Notes</strong></MudText>
                        <MudDivider />
                    </MudItem>
                    
                    <MudItem xs="12">
                        <MudText Typo="Typo.body1">@_account.Notes</MudText>
                    </MudItem>
                }
            </MudGrid>
        }
        else
        {
            <MudAlert Severity="Severity.Error">Unable to load account details.</MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Variant="Variant.Filled" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public DefaultIdType AccountId { get; set; }

    private SavingsAccountResponse? _account;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _account = await Client.GetSavingsAccountAsync("1", AccountId);
        }
        finally
        {
            _loading = false;
        }
    }

    private Color GetStatusColor(string? status) => status switch
    {
        "Active" => Color.Success,
        "Frozen" => Color.Warning,
        "Closed" => Color.Error,
        _ => Color.Default
    };

    private void Close() => MudDialog.Close();
}

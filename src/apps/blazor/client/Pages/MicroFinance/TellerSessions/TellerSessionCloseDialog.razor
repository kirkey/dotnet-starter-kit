@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Lock" Class="mr-3 mb-n1" />
            Close Teller Session
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Info" Dense="true" Class="mb-4">
                    Session: <strong>@Session.SessionNumber</strong> - Expected Balance: <strong>@Session.ExpectedClosingBalance.ToString("C")</strong>
                </MudAlert>
            </MudItem>
            
            <MudItem xs="12">
                <MudNumericField T="decimal" @bind-Value="_actualClosingBalance" Label="Actual Closing Balance" 
                    Variant="Variant.Outlined" Required="true" 
                    HelperText="Count the cash in your drawer" />
            </MudItem>
            
            @if (_actualClosingBalance != Session.ExpectedClosingBalance)
            {
                <MudItem xs="12">
                    <MudAlert Severity="@(_variance == 0 ? Severity.Success : Severity.Warning)" Dense="true">
                        Variance: <strong>@_variance.ToString("C")</strong>
                        @if (_variance != 0)
                        {
                            <text> - Please explain the difference</text>
                        }
                    </MudAlert>
                </MudItem>
            }
            
            <MudItem xs="12">
                <MudTextField @bind-Value="_closingDenominations" Label="Closing Denominations" 
                    Variant="Variant.Outlined" Lines="3" 
                    HelperText="Optional: List denomination breakdown (e.g., 10x$100, 20x$50...)" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton OnClick="Submit" Variant="Variant.Filled" Color="Color.Primary" Disabled="_isProcessing">
            @if (_isProcessing)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            Close Session
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public TellerSessionResponse Session { get; set; } = null!;

    private decimal _actualClosingBalance;
    private string? _closingDenominations;
    private bool _isProcessing;

    private decimal _variance => _actualClosingBalance - Session.ExpectedClosingBalance;

    protected override void OnInitialized()
    {
        _actualClosingBalance = Session.ExpectedClosingBalance;
    }

    private async Task Submit()
    {
        _isProcessing = true;
        try
        {
            var command = new CloseTellerSessionCommand
            {
                Id = Session.Id,
                ActualClosingBalance = _actualClosingBalance,
                ClosingDenominations = _closingDenominations
            };

            await ApiHelper.ExecuteCallGuardedAsync(
                () => Client.CloseTellerSessionAsync("1", Session.Id, command),
                successMessage: "Session closed successfully.");
            
            MudDialog.Close(DialogResult.Ok(true));
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();
}

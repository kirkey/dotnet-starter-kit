<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.PlayArrow" Class="mr-2" Color="Color.Success" />
            Open Teller Session
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    Count your opening cash and enter the details below to start your session.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_sessionNumber"
                              Label="Session Number"
                              Variant="Variant.Outlined"
                              Required="true"
                              ReadOnly="true" />
            </MudItem>
            <MudItem xs="12">
                <MudNumericField @bind-Value="_openingBalance"
                                 Label="Opening Balance"
                                 Variant="Variant.Outlined"
                                 Format="N0"
                                 Min="0"
                                 Adornment="Adornment.Start"
                                 AdornmentText="KES"
                                 Required="true" />
            </MudItem>
            <MudItem xs="12">
                <MudText Typo="Typo.subtitle2" Class="mb-2">Denomination Breakdown (Optional)</MudText>
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_notes1000" Label="1000 Notes" Variant="Variant.Outlined" Min="0" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_notes500" Label="500 Notes" Variant="Variant.Outlined" Min="0" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_notes200" Label="200 Notes" Variant="Variant.Outlined" Min="0" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_notes100" Label="100 Notes" Variant="Variant.Outlined" Min="0" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_notes50" Label="50 Notes" Variant="Variant.Outlined" Min="0" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_coins" Label="Coins Total" Variant="Variant.Outlined" Min="0" />
            </MudItem>
            @if (DenominationTotal > 0 && DenominationTotal != _openingBalance)
            {
                <MudItem xs="12">
                    <MudAlert Severity="Severity.Warning">
                        Denomination total (KES @DenominationTotal.ToString("N0")) does not match opening balance!
                    </MudAlert>
                </MudItem>
            }
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Success" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(_openingBalance < 0)">
            Open Session
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private string _sessionNumber = $"TS-{DateTime.Now:yyyyMMdd}-{Guid.NewGuid().ToString()[..4].ToUpper()}";
    private decimal _openingBalance;
    private int _notes1000;
    private int _notes500;
    private int _notes200;
    private int _notes100;
    private int _notes50;
    private decimal _coins;

    private decimal DenominationTotal => (_notes1000 * 1000) + (_notes500 * 500) + (_notes200 * 200) + 
                                         (_notes100 * 100) + (_notes50 * 50) + _coins;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new OpenTellerSessionCommand
        {
            SessionNumber = _sessionNumber,
            OpeningBalance = _openingBalance,
            TellerName = "Current User", // Would be filled from auth context
            TellerUserId = Guid.Empty, // Would be filled from auth context
            BranchId = Guid.Empty, // Would be selected or from user's branch
            CashVaultId = Guid.Empty // Would be selected
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await Client.OpenTellerSessionAsync("1", command),
            Snackbar,
            successMessage: "Teller session opened successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

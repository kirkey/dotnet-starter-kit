<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Close" Class="mr-2" Color="Color.Warning" />
            Close Session - @SessionNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    Count your physical cash and enter the closing balance below.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudText Class="mb-2">
                    System Balance: <strong>KES @CurrentBalance.ToString("N0")</strong>
                </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudNumericField @bind-Value="_actualClosingBalance"
                                 Label="Actual Closing Balance (Physical Count)"
                                 Variant="Variant.Outlined"
                                 Format="N0"
                                 Min="0"
                                 Adornment="Adornment.Start"
                                 AdornmentText="KES"
                                 Required="true" />
            </MudItem>
            <MudItem xs="12">
                <MudText Typo="Typo.subtitle2" Class="mb-2">Denomination Breakdown (Optional)</MudText>
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_notes1000" Label="1000 Notes" Variant="Variant.Outlined" Min="0" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_notes500" Label="500 Notes" Variant="Variant.Outlined" Min="0" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_notes200" Label="200 Notes" Variant="Variant.Outlined" Min="0" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="_notes100" Label="100 Notes" Variant="Variant.Outlined" Min="0" />
            </MudItem>
            @if (_actualClosingBalance != CurrentBalance && _actualClosingBalance > 0)
            {
                <MudItem xs="12">
                    <MudAlert Severity="@(Variance >= 0 ? Severity.Warning : Severity.Error)">
                        <strong>Variance: KES @Variance.ToString("N0")</strong>
                        (@(Variance >= 0 ? "Overage" : "Shortage"))
                    </MudAlert>
                </MudItem>
            }
            @if (_actualClosingBalance == CurrentBalance && _actualClosingBalance > 0)
            {
                <MudItem xs="12">
                    <MudAlert Severity="Severity.Success">
                        Physical count matches system balance - no variance!
                    </MudAlert>
                </MudItem>
            }
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Warning" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(_actualClosingBalance < 0)">
            Close Session
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType SessionId { get; set; }

    [Parameter]
    public string SessionNumber { get; set; } = string.Empty;

    [Parameter]
    public decimal CurrentBalance { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private decimal _actualClosingBalance;
    private int _notes1000;
    private int _notes500;
    private int _notes200;
    private int _notes100;

    private decimal Variance => _actualClosingBalance - CurrentBalance;

    protected override void OnInitialized()
    {
        _actualClosingBalance = CurrentBalance;
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        string? denominations = null;
        if (_notes1000 > 0 || _notes500 > 0 || _notes200 > 0 || _notes100 > 0)
        {
            denominations = $"1000x{_notes1000}, 500x{_notes500}, 200x{_notes200}, 100x{_notes100}";
        }

        var command = new CloseTellerSessionCommand
        {
            Id = SessionId,
            ActualClosingBalance = _actualClosingBalance,
            ClosingDenominations = denominations
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await Client.CloseTellerSessionAsync("1", SessionId, command),
            Snackbar,
            successMessage: "Session closed successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Security" Class="mr-3 mb-n1" />
            Collateral Details
        </MudText>
    </TitleContent>
    <DialogContent>
        @if (_loading)
        {
            <MudProgressCircular Indeterminate="true" />
        }
        else if (_collateral != null)
        {
            <MudGrid>
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Collateral Information</strong></MudText>
                    <MudDivider />
                </MudItem>
                
                <MudItem xs="12" sm="6" md="4">
                    <MudText Typo="Typo.caption">Collateral Type</MudText>
                    <MudText Typo="Typo.body1"><strong>@_collateral.CollateralType</strong></MudText>
                </MudItem>
                
                <MudItem xs="12" sm="6" md="4">
                    <MudText Typo="Typo.caption">Status</MudText>
                    <MudChip T="string" Color="@GetStatusColor(_collateral.Status)" Size="Size.Small">@_collateral.Status</MudChip>
                </MudItem>
                
                <MudItem xs="12" sm="6" md="4">
                    <MudText Typo="Typo.caption">Document Reference</MudText>
                    <MudText Typo="Typo.body1">@(_collateral.DocumentReference ?? "N/A")</MudText>
                </MudItem>
                
                <MudItem xs="12">
                    <MudText Typo="Typo.caption">Description</MudText>
                    <MudText Typo="Typo.body1">@(_collateral.Description ?? "N/A")</MudText>
                </MudItem>
                
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Valuation</strong></MudText>
                    <MudDivider />
                </MudItem>
                
                <MudItem xs="12" sm="6" md="4">
                    <MudText Typo="Typo.caption">Estimated Value</MudText>
                    <MudText Typo="Typo.h6" Color="Color.Success">@_collateral.EstimatedValue.ToString("C")</MudText>
                </MudItem>
                
                <MudItem xs="12" sm="6" md="4">
                    <MudText Typo="Typo.caption">Forced Sale Value</MudText>
                    <MudText Typo="Typo.body1">@(_collateral.ForcedSaleValue?.ToString("C") ?? "N/A")</MudText>
                </MudItem>
                
                <MudItem xs="12" sm="6" md="4">
                    <MudText Typo="Typo.caption">Valuation Date</MudText>
                    <MudText Typo="Typo.body1">@_collateral.ValuationDate.ToString("d")</MudText>
                </MudItem>
                
                <MudItem xs="12" sm="6" md="4">
                    <MudText Typo="Typo.caption">Loan-to-Value Ratio</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Info">
                        @((_collateral.ForcedSaleValue.HasValue && _collateral.EstimatedValue > 0) 
                            ? $"{(_collateral.ForcedSaleValue.Value / _collateral.EstimatedValue * 100):F1}%" 
                            : "N/A")
                    </MudText>
                </MudItem>
                
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Location</strong></MudText>
                    <MudDivider />
                </MudItem>
                
                <MudItem xs="12">
                    <MudText Typo="Typo.body1">@(_collateral.Location ?? "Not specified")</MudText>
                </MudItem>
                
                @if (!string.IsNullOrWhiteSpace(_collateral.Notes))
                {
                    <MudItem xs="12">
                        <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Notes</strong></MudText>
                        <MudDivider />
                    </MudItem>
                    
                    <MudItem xs="12">
                        <MudText Typo="Typo.body1">@_collateral.Notes</MudText>
                    </MudItem>
                }
            </MudGrid>
        }
        else
        {
            <MudAlert Severity="Severity.Error">Unable to load collateral details.</MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Variant="Variant.Filled" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public DefaultIdType CollateralId { get; set; }

    private LoanCollateralResponse? _collateral;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _collateral = await Client.GetLoanCollateralAsync("1", CollateralId);
        }
        finally
        {
            _loading = false;
        }
    }

    private Color GetStatusColor(string? status) => status switch
    {
        "Pending" => Color.Warning,
        "Verified" => Color.Info,
        "Pledged" => Color.Primary,
        "Released" => Color.Success,
        "Seized" => Color.Error,
        _ => Color.Default
    };

    private void Close() => MudDialog.Close();
}

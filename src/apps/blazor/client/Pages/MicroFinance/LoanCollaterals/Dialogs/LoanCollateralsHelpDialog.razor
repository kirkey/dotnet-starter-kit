<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Help" Class="mr-2" />
            Loan Collaterals Help
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudExpansionPanels MultiExpansion="true">
            <MudExpansionPanel Text="Overview" IsInitiallyExpanded="true">
                <MudText Typo="Typo.body2">
                    Loan Collaterals tracks all assets pledged as security for loans. Each collateral is valued, 
                    verified, and can be pledged against a loan. The system tracks the full lifecycle from 
                    registration to release or seizure.
                </MudText>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Collateral Lifecycle">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Status Flow:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Add">
                        <MudChip T="string" Color="Color.Default" Size="Size.Small">Pending</MudChip> 
                        Newly registered collateral
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.VerifiedUser">
                        <MudChip T="string" Color="Color.Info" Size="Size.Small">Verified</MudChip> 
                        Physically verified and documented
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Lock">
                        <MudChip T="string" Color="Color.Warning" Size="Size.Small">Pledged</MudChip> 
                        Secured against a loan
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.LockOpen">
                        <MudChip T="string" Color="Color.Success" Size="Size.Small">Released</MudChip> 
                        Loan repaid, collateral returned
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Gavel">
                        <MudChip T="string" Color="Color.Error" Size="Size.Small">Seized</MudChip> 
                        Taken due to default
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Valuation Terms">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Key Valuation Concepts:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.AttachMoney">
                        <strong>Estimated Value:</strong> Current market value of the asset
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.MoneyOff">
                        <strong>Forced Sale Value (FSV):</strong> Value if sold quickly (typically 60-80% of market)
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Percent">
                        <strong>LTV (Loan-to-Value):</strong> Ratio of loan amount to collateral value
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Key Actions">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Available Operations:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.VerifiedUser">
                        <strong>Verify:</strong> Confirm physical verification of collateral
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Assessment">
                        <strong>Update Valuation:</strong> Record new valuation with date
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Lock">
                        <strong>Pledge:</strong> Secure collateral against a loan
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.LockOpen">
                        <strong>Release:</strong> Return collateral after loan repayment
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Gavel">
                        <strong>Seize:</strong> Take possession due to loan default
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Best Practices">
                <MudText Typo="Typo.body2">
                    <strong>Recommended Practices:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Search">
                        Always verify collateral before pledging
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Update">
                        Revalue collateral annually or when market changes
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Description">
                        Maintain complete documentation with references
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.PhotoCamera">
                        Keep photographs and condition reports
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Gavel">
                        Follow legal procedures for seizure actions
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Filled" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Cancel() => MudDialog.Cancel();
}

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Lock" Class="mr-2" Color="Color.Warning" />
            Pledge Collateral
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Warning" Class="mb-4">
                    Pledging this collateral will secure it against the loan. The collateral cannot be released until the loan is fully repaid.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudField Label="Collateral" Variant="Variant.Outlined">@Description</MudField>
            </MudItem>
            <MudItem xs="12">
                <MudCheckBox @bind-Value="_confirmPledge" Color="Color.Warning">
                    I confirm the pledge of this collateral against the loan
                </MudCheckBox>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Warning" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!_confirmPledge)">
            Pledge
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType CollateralId { get; set; }

    [Parameter]
    public string? Description { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private bool _confirmPledge;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.PledgeLoanCollateralEndpointAsync("1", CollateralId),
            Snackbar,
            successMessage: "Collateral pledged successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.LockOpen" Class="mr-2" Color="Color.Success" />
            Release Collateral
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    Releasing this collateral will remove the pledge. Ensure the loan has been fully repaid before releasing.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudField Label="Collateral" Variant="Variant.Outlined">@Description</MudField>
            </MudItem>
            <MudItem xs="12">
                <MudCheckBox @bind-Value="_confirmRelease" Color="Color.Success">
                    I confirm the loan has been fully repaid and the collateral can be released
                </MudCheckBox>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Success" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!_confirmRelease)">
            Release
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType CollateralId { get; set; }

    [Parameter]
    public string? Description { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private bool _confirmRelease;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await Client.ReleaseLoanCollateralEndpointAsync("1", CollateralId),
            Snackbar,
            successMessage: "Collateral released successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

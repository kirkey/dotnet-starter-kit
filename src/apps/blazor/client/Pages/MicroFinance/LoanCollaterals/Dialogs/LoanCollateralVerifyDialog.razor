<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Class="mr-2" Color="Color.Success" />
            Verify Collateral
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText Typo="Typo.body2" Class="mb-4">
                    Confirm that this collateral has been physically verified and all documentation is in order.
                </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudField Label="Collateral" Variant="Variant.Outlined">@Description</MudField>
            </MudItem>
            <MudItem xs="12">
                <MudCheckBox @bind-Value="_confirmVerification" Color="Color.Success">
                    I confirm that I have physically verified this collateral
                </MudCheckBox>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Success" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!_confirmVerification)">
            Verify
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType CollateralId { get; set; }

    [Parameter]
    public string? Description { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private bool _confirmVerification;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await Client.VerifyLoanCollateralEndpointAsync("1", CollateralId),
            Snackbar,
            successMessage: "Collateral verified successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

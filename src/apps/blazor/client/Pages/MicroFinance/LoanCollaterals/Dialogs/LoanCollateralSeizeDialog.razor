<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Gavel" Class="mr-2" Color="Color.Error" />
            Seize Collateral
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Error" Class="mb-4">
                    <strong>Warning:</strong> Seizing collateral is a serious action. Ensure all legal requirements have been met and proper notice has been given to the borrower.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudField Label="Collateral" Variant="Variant.Outlined">@Description</MudField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_seizureReason"
                              Label="Seizure Reason"
                              Variant="Variant.Outlined"
                              Lines="2"
                              Required="true"
                              HelperText="Document the reason for seizure" />
            </MudItem>
            <MudItem xs="12">
                <MudCheckBox @bind-Value="_confirmSeizure" Color="Color.Error">
                    I confirm all legal requirements have been met for this seizure
                </MudCheckBox>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Error" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!IsValid)">
            Seize Collateral
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType CollateralId { get; set; }

    [Parameter]
    public string? Description { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private Client MicroFinanceClient { get; set; } = null!;

    private string? _seizureReason;
    private bool _confirmSeizure;

    private bool IsValid => !string.IsNullOrWhiteSpace(_seizureReason) && _confirmSeizure;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.SeizeLoanCollateralEndpointAsync("1", CollateralId),
            Snackbar,
            successMessage: "Collateral seized successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Assessment" Class="mr-2" Color="Color.Primary" />
            Update Collateral Valuation
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudField Label="Current Value" Variant="Variant.Outlined">@CurrentValue.ToString("N2")</MudField>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudNumericField @bind-Value="_newEstimatedValue"
                                 Label="New Estimated Value"
                                 Variant="Variant.Outlined"
                                 Format="N2"
                                 Min="0"
                                 Required="true" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudNumericField @bind-Value="_newForcedSaleValue"
                                 Label="New Forced Sale Value"
                                 Variant="Variant.Outlined"
                                 Format="N2"
                                 Min="0" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudDatePicker @bind-Date="_valuationDate"
                               Label="Valuation Date"
                               Variant="Variant.Outlined"
                               MaxDate="@DateTime.Today" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_notes"
                              Label="Valuation Notes"
                              Variant="Variant.Outlined"
                              Lines="2"
                              HelperText="Optional notes about the revaluation" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!IsValid)">
            Update Valuation
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType CollateralId { get; set; }

    [Parameter]
    public decimal CurrentValue { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private decimal _newEstimatedValue;
    private decimal? _newForcedSaleValue;
    private DateTime? _valuationDate = DateTime.Today;
    private string? _notes;

    private bool IsValid => _newEstimatedValue > 0;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new UpdateCollateralValuationCommand
        {
            Id = CollateralId,
            NewEstimatedValue = _newEstimatedValue,
            NewForcedSaleValue = _newForcedSaleValue,
            ValuationDate = _valuationDate.HasValue ? DateOnly.FromDateTime(_valuationDate.Value) : DateOnly.FromDateTime(DateTime.Today),
            Notes = _notes
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await Client.UpdateCollateralValuationEndpointAsync("1", CollateralId, command),
            Snackbar,
            successMessage: "Valuation updated successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

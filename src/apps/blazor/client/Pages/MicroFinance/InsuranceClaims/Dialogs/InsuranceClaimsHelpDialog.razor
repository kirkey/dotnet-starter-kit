<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Help" Class="mr-2" Color="Color.Info" />
            Insurance Claims Help
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudExpansionPanels MultiExpansion="true">
            <MudExpansionPanel Text="What are Insurance Claims?" IsInitiallyExpanded="true">
                <MudText Typo="Typo.body2" Class="pa-2">
                    Insurance claims are requests for payment when a covered event occurs. Members with 
                    insurance policies can file claims for events like death, disability, critical illness,
                    or hospitalization. Claims are reviewed and either approved for payment or rejected.
                </MudText>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Claim Types">
                <MudSimpleTable Dense="true">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Coverage</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Death</td>
                            <td>Death of insured member</td>
                            <td>Full sum assured to beneficiaries</td>
                        </tr>
                        <tr>
                            <td>Disability</td>
                            <td>Permanent disability</td>
                            <td>Percentage of sum assured</td>
                        </tr>
                        <tr>
                            <td>Critical Illness</td>
                            <td>Diagnosis of covered illness</td>
                            <td>Lump sum payment</td>
                        </tr>
                        <tr>
                            <td>Hospitalization</td>
                            <td>Hospital admission</td>
                            <td>Daily allowance + expenses</td>
                        </tr>
                        <tr>
                            <td>Loan Default</td>
                            <td>Unable to repay loan</td>
                            <td>Outstanding loan balance</td>
                        </tr>
                    </tbody>
                </MudSimpleTable>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Claim Workflow">
                <MudTimeline TimelineAlign="TimelineAlign.Start">
                    <MudTimelineItem Color="Color.Info" Variant="Variant.Outlined">
                        <MudText Typo="Typo.subtitle2">1. Submitted</MudText>
                        <MudText Typo="Typo.body2">Claim filed with supporting documents</MudText>
                    </MudTimelineItem>
                    <MudTimelineItem Color="Color.Warning" Variant="Variant.Outlined">
                        <MudText Typo="Typo.subtitle2">2. Under Review</MudText>
                        <MudText Typo="Typo.body2">Claims officer verifying documentation</MudText>
                    </MudTimelineItem>
                    <MudTimelineItem Color="Color.Success" Variant="Variant.Outlined">
                        <MudText Typo="Typo.subtitle2">3. Approved</MudText>
                        <MudText Typo="Typo.body2">Claim approved for payment</MudText>
                    </MudTimelineItem>
                    <MudTimelineItem Color="Color.Primary" Variant="Variant.Outlined">
                        <MudText Typo="Typo.subtitle2">4. Settled</MudText>
                        <MudText Typo="Typo.body2">Payment made to beneficiary</MudText>
                    </MudTimelineItem>
                </MudTimeline>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Required Documentation">
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Description">Completed claim form</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Badge">Valid ID of claimant/beneficiary</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.LocalHospital">Medical reports (for illness/disability)</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Article">Death certificate (for death claims)</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Gavel">Police report (if applicable)</MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.ReceiptLong">Hospital bills/receipts</MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Common Rejection Reasons">
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Warning" IconColor="Color.Error">
                        <strong>Policy Not Active:</strong> Premium not paid or policy lapsed
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Warning" IconColor="Color.Error">
                        <strong>Not Covered:</strong> Event type not in policy coverage
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Warning" IconColor="Color.Error">
                        <strong>Waiting Period:</strong> Claim within waiting period after policy start
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Warning" IconColor="Color.Error">
                        <strong>Pre-existing:</strong> Condition existed before policy started
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Warning" IconColor="Color.Error">
                        <strong>Insufficient Docs:</strong> Missing required documentation
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Close" Variant="Variant.Text">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Close() => MudDialog.Close();
}

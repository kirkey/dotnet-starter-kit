@page "/microfinance/share-products"

<PageHeader Title="Share Products" Header="Share Products" SubHeader="Configure member share products and ownership structures." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowShareProductsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="ShareProductResponse" TId="DefaultIdType" TRequest="ShareProductViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchCode"
                          Label="Product Code"
                          Placeholder="Search by code"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Tag" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchName"
                          Label="Product Name"
                          Placeholder="Search by name"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.AccountBalance" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="bool?"
                       @bind-Value="@SearchPaysDividends"
                       Label="Pays Dividends"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem T="bool?" Value="@true">Yes</MudSelectItem>
                <MudSelectItem T="bool?" Value="@false">No</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewProductDetails(entity.Id))">
            View Details
        </MudMenuItem>
        <MudMenuItem Icon="@Icons.Material.Filled.AccountBalanceWallet" OnClick="@(() => ViewShareAccounts(entity.Id))">
            View Accounts
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Product Information</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Code"
                          For="@(() => context.Code)"
                          Label="Product Code"
                          Variant="Variant.Filled"
                          Required="true"
                          HelperText="Unique product identifier (e.g., SHARE-001)" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Name"
                          For="@(() => context.Name)"
                          Label="Product Name"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string"
                       @bind-Value="context.CurrencyCode"
                       For="@(() => context.CurrencyCode)"
                       Label="Currency"
                       Variant="Variant.Filled">
                <MudSelectItem Value="@("PHP")">PHP - Philippine Peso</MudSelectItem>
                <MudSelectItem Value="@("USD")">USD - US Dollar</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Description"
                          For="@(() => context.Description)"
                          Label="Description"
                          Variant="Variant.Filled"
                          Lines="2" />
        </MudItem>

        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Share Values</strong></MudText>
            <MudDivider />
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudNumericField T="decimal"
                             @bind-Value="context.NominalValue"
                             For="@(() => context.NominalValue)"
                             Label="Nominal Value"
                             Variant="Variant.Filled"
                             Min="0"
                             HelperText="Face value per share" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField T="decimal"
                             @bind-Value="context.CurrentPrice"
                             For="@(() => context.CurrentPrice)"
                             Label="Current Price"
                             Variant="Variant.Filled"
                             Min="0"
                             HelperText="Market price per share" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField T="int"
                             @bind-Value="context.MinSharesForMembership"
                             For="@(() => context.MinSharesForMembership)"
                             Label="Min Shares for Membership"
                             Variant="Variant.Filled"
                             Min="1" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField T="int?"
                             @bind-Value="context.MaxSharesPerMember"
                             For="@(() => context.MaxSharesPerMember)"
                             Label="Max Shares per Member"
                             Variant="Variant.Filled"
                             Min="1"
                             HelperText="Leave empty for unlimited" />
        </MudItem>

        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Options</strong></MudText>
            <MudDivider />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudSwitch @bind-Value="context.AllowTransfer"
                       For="@(() => context.AllowTransfer)"
                       Label="Allow Transfer"
                       Color="Color.Primary" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSwitch @bind-Value="context.AllowRedemption"
                       For="@(() => context.AllowRedemption)"
                       Label="Allow Redemption"
                       Color="Color.Primary" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSwitch @bind-Value="context.PaysDividends"
                       For="@(() => context.PaysDividends)"
                       Label="Pays Dividends"
                       Color="Color.Primary" />
        </MudItem>
        
        @if (context.PaysDividends)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudSelect T="string"
                           @bind-Value="context.DividendFrequency"
                           For="@(() => context.DividendFrequency)"
                           Label="Dividend Frequency"
                           Variant="Variant.Filled">
                    <MudSelectItem Value="@("Annually")">Annually</MudSelectItem>
                    <MudSelectItem Value="@("Semi-Annually")">Semi-Annually</MudSelectItem>
                    <MudSelectItem Value="@("Quarterly")">Quarterly</MudSelectItem>
                </MudSelect>
            </MudItem>
        }
    </EditFormContent>
</EntityTable>

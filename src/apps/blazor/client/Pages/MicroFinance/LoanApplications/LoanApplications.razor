@page "/microfinance/loan-applications"

<PageHeader Title="Loan Applications" Header="Loan Applications" SubHeader="Manage loan applications - review, approve, or reject member loan requests." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudChipSet T="string" SelectedValue="@_statusFilter" SelectedValueChanged="@OnStatusFilterChanged">
            <MudChip Value="@("")" Variant="Variant.Text">All</MudChip>
            <MudChip Value="@("Draft")" Color="Color.Default" Variant="Variant.Text">Draft</MudChip>
            <MudChip Value="@("Submitted")" Color="Color.Info" Variant="Variant.Text">Submitted</MudChip>
            <MudChip Value="@("UnderReview")" Color="Color.Warning" Variant="Variant.Text">Under Review</MudChip>
            <MudChip Value="@("Approved")" Color="Color.Success" Variant="Variant.Text">Approved</MudChip>
            <MudChip Value="@("Rejected")" Color="Color.Error" Variant="Variant.Text">Rejected</MudChip>
        </MudChipSet>
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowLoanApplicationsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="LoanApplicationResponse" TId="DefaultIdType" TRequest="LoanApplicationViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchApplicationNumber"
                          Label="Application Number"
                          Placeholder="Search by application number"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Tag" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="@_searchFromDate"
                           Label="From Date"
                           Variant="Variant.Outlined"
                           Clearable="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="@_searchToDate"
                           Label="To Date"
                           Variant="Variant.Outlined"
                           Clearable="true" />
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        @if (entity.Status == "Draft")
        {
            @if (_canSubmit)
            {
                <MudMenuItem Icon="@Icons.Material.Filled.Send" IconColor="Color.Info" OnClick="@(() => SubmitApplication(entity.Id))">
                    Submit
                </MudMenuItem>
            }
        }
        @if (entity.Status == "Submitted" && _canAssign)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.PersonAdd" IconColor="Color.Info" OnClick="@(() => ShowAssignDialog(entity))">
                Assign Officer
            </MudMenuItem>
        }
        @if (entity.Status == "UnderReview")
        {
            @if (_canReview)
            {
                <MudMenuItem Icon="@Icons.Material.Filled.RateReview" IconColor="Color.Warning" OnClick="@(() => ShowReviewDialog(entity))">
                    Review
                </MudMenuItem>
            }
            @if (_canApprove)
            {
                <MudMenuItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success" OnClick="@(() => ShowApproveDialog(entity))">
                    Approve
                </MudMenuItem>
            }
            @if (_canReject)
            {
                <MudMenuItem Icon="@Icons.Material.Filled.Cancel" IconColor="Color.Error" OnClick="@(() => ShowRejectDialog(entity))">
                    Reject
                </MudMenuItem>
            }
        }
        @if ((entity.Status == "Draft" || entity.Status == "Submitted") && _canWithdraw)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Undo" IconColor="Color.Warning" OnClick="@(() => WithdrawApplication(entity.Id))">
                Withdraw
            </MudMenuItem>
        }
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewApplicationDetails(entity.Id))">
            View Details
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Application Details</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6">
            <MemberAutocomplete @bind-Value="context.MemberId"
                                Label="Member"
                                Variant="Variant.Filled"
                                Required="true"
                                HelperText="Select the applying member"
                                Disabled="@(context.Id != DefaultIdType.Empty)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <LoanProductAutocomplete @bind-Value="context.LoanProductId"
                                     Label="Loan Product"
                                     Variant="Variant.Filled"
                                     Required="true"
                                     HelperText="Select loan product"
                                     Disabled="@(context.Id != DefaultIdType.Empty)" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.RequestedAmount"
                             For="@(() => context.RequestedAmount)"
                             Label="Requested Amount"
                             Variant="Variant.Filled"
                             Min="1000"
                             Format="N0"
                             Adornment="Adornment.Start"
                             AdornmentText="KES"
                             Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.RequestedTermMonths"
                             For="@(() => context.RequestedTermMonths)"
                             Label="Term (Months)"
                             Variant="Variant.Filled"
                             Min="1"
                             Max="60"
                             Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MemberGroupAutocomplete @bind-Value="context.MemberGroupId"
                                     Label="Group (Optional)"
                                     Variant="Variant.Filled"
                                     HelperText="For group lending" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Purpose"
                          For="@(() => context.Purpose)"
                          Label="Purpose"
                          Variant="Variant.Filled"
                          Lines="3"
                          HelperText="What will the loan be used for?" />
        </MudItem>
    </EditFormContent>
</EntityTable>

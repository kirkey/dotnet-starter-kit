<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Cancel" Class="mr-2" Color="Color.Error" />
            Reject Application - @ApplicationNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText Class="mb-4">
                    Please provide a reason for rejecting this loan application. The applicant will be notified.
                </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="@_rejectionReason"
                              Label="Rejection Reason"
                              Variant="Variant.Outlined"
                              Lines="4"
                              Required="true"
                              RequiredError="Reason is required" />
            </MudItem>
            <MudItem xs="12">
                <MudSelect @bind-Value="@_rejectionCategory"
                           Label="Rejection Category"
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="@("Insufficient Income")">Insufficient Income</MudSelectItem>
                    <MudSelectItem Value="@("Poor Credit History")">Poor Credit History</MudSelectItem>
                    <MudSelectItem Value="@("Incomplete Documentation")">Incomplete Documentation</MudSelectItem>
                    <MudSelectItem Value="@("Existing Arrears")">Existing Arrears</MudSelectItem>
                    <MudSelectItem Value="@("Exceeds Limit")">Exceeds Borrowing Limit</MudSelectItem>
                    <MudSelectItem Value="@("Other")">Other</MudSelectItem>
                </MudSelect>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Error" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@string.IsNullOrWhiteSpace(_rejectionReason)">
            Reject
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType ApplicationId { get; set; }

    [Parameter]
    public string ApplicationNumber { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private string _rejectionReason = string.Empty;
    private string? _rejectionCategory;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var fullReason = string.IsNullOrEmpty(_rejectionCategory) 
            ? _rejectionReason 
            : $"[{_rejectionCategory}] {_rejectionReason}";

        var command = new RejectLoanApplicationCommand
        {
            Id = ApplicationId,
            Reason = fullReason
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await Client.RejectLoanApplicationEndpointAsync("1", ApplicationId, command),
            Snackbar,
            successMessage: "Application rejected.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

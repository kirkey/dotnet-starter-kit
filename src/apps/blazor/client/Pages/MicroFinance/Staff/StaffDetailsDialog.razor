@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.Staff

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudGrid>
                <MudItem xs="12">
                    <MudText Typo="Typo.h6">@Staff.FullName</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Primary">@Staff.EmployeeNumber</MudText>
                </MudItem>

                <MudItem xs="12">
                    <MudDivider />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Job Title</MudText>
                    <MudText Typo="Typo.body1">@Staff.JobTitle</MudText>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Role</MudText>
                    <MudChip Color="Color.Primary" Size="Size.Small">@Staff.Role</MudChip>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Status</MudText>
                    <MudChip Color="@GetStatusColor(Staff.Status)" Size="Size.Small">@Staff.Status</MudChip>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Employment Type</MudText>
                    <MudText Typo="Typo.body1">@Staff.EmploymentType</MudText>
                </MudItem>

                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mt-2"><strong>Contact Information</strong></MudText>
                    <MudDivider />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Email</MudText>
                    <MudText Typo="Typo.body1">@Staff.Email</MudText>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Phone</MudText>
                    <MudText Typo="Typo.body1">@(Staff.Phone ?? "N/A")</MudText>
                </MudItem>

                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mt-2"><strong>Employment Details</strong></MudText>
                    <MudDivider />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Department</MudText>
                    <MudText Typo="Typo.body1">@(Staff.Department ?? "N/A")</MudText>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Joining Date</MudText>
                    <MudText Typo="Typo.body1">@Staff.JoiningDate.ToString("yyyy-MM-dd")</MudText>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Confirmation Date</MudText>
                    <MudText Typo="Typo.body1">@(Staff.ConfirmationDate?.ToString("yyyy-MM-dd") ?? "Not Confirmed")</MudText>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Reports To</MudText>
                    <MudText Typo="Typo.body1">@(Staff.ReportingTo ?? "N/A")</MudText>
                </MudItem>

                @if (Staff.CanApproveLoan)
                {
                    <MudItem xs="12">
                        <MudText Typo="Typo.subtitle1" Class="mt-2"><strong>Loan Authority</strong></MudText>
                        <MudDivider />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Can Approve Loans</MudText>
                        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Approval Limit</MudText>
                        <MudText Typo="Typo.body1">â‚±@(Staff.LoanApprovalLimit?.ToString("N2") ?? "0.00")</MudText>
                    </MudItem>
                }
            </MudGrid>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public StaffResponse Staff { get; set; } = null!;

    private void Close() => MudDialog.Close();

    private Color GetStatusColor(string status) => status switch
    {
        "Active" => Color.Success,
        "OnLeave" => Color.Warning,
        "Terminated" => Color.Error,
        "Suspended" => Color.Error,
        _ => Color.Default
    };
}

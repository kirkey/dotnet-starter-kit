@page "/microfinance/staff"

<PageHeader Title="Staff" Header="Staff" SubHeader="Manage MFI staff members - employees who deliver financial services." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowStaffHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="StaffResponse" TId="DefaultIdType" TRequest="StaffViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchEmployeeNumber"
                          Label="Employee Number"
                          Placeholder="Search by employee number"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Badge" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchName"
                          Label="Name"
                          Placeholder="Search by name"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Person" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string"
                       @bind-Value="@SearchRole"
                       Label="Role"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@("LoanOfficer")">Loan Officer</MudSelectItem>
                <MudSelectItem Value="@("BranchManager")">Branch Manager</MudSelectItem>
                <MudSelectItem Value="@("Teller")">Teller</MudSelectItem>
                <MudSelectItem Value="@("Collector")">Collector</MudSelectItem>
                <MudSelectItem Value="@("AccountsOfficer")">Accounts Officer</MudSelectItem>
                <MudSelectItem Value="@("CreditAnalyst")">Credit Analyst</MudSelectItem>
                <MudSelectItem Value="@("FieldCoordinator")">Field Coordinator</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewStaffDetails(entity.Id))">
            View Details
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Personal Information</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.EmployeeNumber"
                          For="@(() => context.EmployeeNumber)"
                          Label="Employee Number"
                          Variant="Variant.Filled"
                          Required="true"
                          HelperText="Unique employee ID (e.g., EMP-001)" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.FirstName"
                          For="@(() => context.FirstName)"
                          Label="First Name"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.LastName"
                          For="@(() => context.LastName)"
                          Label="Last Name"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.MiddleName"
                          For="@(() => context.MiddleName)"
                          Label="Middle Name"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Email"
                          For="@(() => context.Email)"
                          Label="Email"
                          Variant="Variant.Filled"
                          Required="true"
                          InputType="InputType.Email" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Phone"
                          For="@(() => context.Phone)"
                          Label="Phone"
                          Variant="Variant.Filled"
                          InputType="InputType.Telephone" />
        </MudItem>

        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Employment Details</strong></MudText>
            <MudDivider />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.JobTitle"
                          For="@(() => context.JobTitle)"
                          Label="Job Title"
                          Variant="Variant.Filled"
                          Required="true"
                          HelperText="e.g., Senior Loan Officer" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string"
                       @bind-Value="context.Role"
                       For="@(() => context.Role)"
                       Label="Role"
                       Variant="Variant.Filled"
                       Required="true">
                <MudSelectItem Value="@("LoanOfficer")">Loan Officer</MudSelectItem>
                <MudSelectItem Value="@("BranchManager")">Branch Manager</MudSelectItem>
                <MudSelectItem Value="@("Teller")">Teller</MudSelectItem>
                <MudSelectItem Value="@("Collector")">Collector</MudSelectItem>
                <MudSelectItem Value="@("AccountsOfficer")">Accounts Officer</MudSelectItem>
                <MudSelectItem Value="@("CreditAnalyst")">Credit Analyst</MudSelectItem>
                <MudSelectItem Value="@("FieldCoordinator")">Field Coordinator</MudSelectItem>
                <MudSelectItem Value="@("Admin")">Admin</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string"
                       @bind-Value="context.EmploymentType"
                       For="@(() => context.EmploymentType)"
                       Label="Employment Type"
                       Variant="Variant.Filled"
                       Required="true">
                <MudSelectItem Value="@("FullTime")">Full Time</MudSelectItem>
                <MudSelectItem Value="@("PartTime")">Part Time</MudSelectItem>
                <MudSelectItem Value="@("Contract")">Contract</MudSelectItem>
                <MudSelectItem Value="@("Probationary")">Probationary</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Department"
                          For="@(() => context.Department)"
                          Label="Department"
                          Variant="Variant.Filled"
                          HelperText="e.g., Operations, Credit, Admin" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="context.JoiningDateDate"
                           For="@(() => context.JoiningDateDate)"
                           Label="Joining Date"
                           Variant="Variant.Filled"
                           DateFormat="yyyy-MM-dd"
                           Required="true" />
        </MudItem>
    </EditFormContent>
</EntityTable>

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="mr-2" Color="Color.Error" />
            Confirm Alert - @AlertCode
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Warning" Class="mb-4">
                    Confirming this alert indicates that suspicious activity has been verified.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_findings"
                              Label="Investigation Findings"
                              Variant="Variant.Outlined"
                              Lines="3"
                              Required="true"
                              HelperText="Document the evidence supporting confirmation" />
            </MudItem>
            <MudItem xs="12">
                <MudSelect @bind-Value="@_riskLevel"
                           Label="Assessed Risk Level"
                           Variant="Variant.Outlined"
                           Required="true">
                    <MudSelectItem Value="@("High")">High - Immediate action required</MudSelectItem>
                    <MudSelectItem Value="@("Medium")">Medium - Enhanced monitoring</MudSelectItem>
                    <MudSelectItem Value="@("Low")">Low - Continued observation</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12">
                <MudCheckBox @bind-Value="_confirmAction" Color="Color.Error">
                    I confirm this alert represents genuine suspicious activity
                </MudCheckBox>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Error" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!IsValid)">
            Confirm Alert
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType AlertId { get; set; }

    [Parameter]
    public string AlertCode { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private string? _findings;
    private string? _riskLevel;
    private bool _confirmAction;

    private bool IsValid => !string.IsNullOrWhiteSpace(_findings) && 
                           !string.IsNullOrEmpty(_riskLevel) && 
                           _confirmAction;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new ConfirmAmlAlertCommand
        {
            Id = AlertId,
            Findings = _findings!,
            RiskLevel = _riskLevel
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.ConfirmAmlAlertEndpointAsync("1", AlertId, command),
            Snackbar,
            successMessage: "Alert confirmed.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

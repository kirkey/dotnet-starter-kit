<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.RemoveCircle" Class="mr-2" Color="Color.Success" />
            Clear Alert - @AlertCode
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    Clearing this alert indicates it is a false positive and no suspicious activity was found.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudSelect @bind-Value="@_clearanceReason"
                           Label="Clearance Reason"
                           Variant="Variant.Outlined"
                           Required="true">
                    <MudSelectItem Value="@("FalsePositive")">False Positive - Normal Activity</MudSelectItem>
                    <MudSelectItem Value="@("LegitimateTransaction")">Legitimate Transaction Verified</MudSelectItem>
                    <MudSelectItem Value="@("DocumentationProvided")">Supporting Documentation Provided</MudSelectItem>
                    <MudSelectItem Value="@("KnownPattern")">Known Business Pattern</MudSelectItem>
                    <MudSelectItem Value="@("Duplicate")">Duplicate Alert</MudSelectItem>
                    <MudSelectItem Value="@("Other")">Other</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_explanation"
                              Label="Explanation"
                              Variant="Variant.Outlined"
                              Lines="3"
                              Required="true"
                              HelperText="Document why this alert is being cleared" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Success" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!IsValid)">
            Clear Alert
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType AlertId { get; set; }

    [Parameter]
    public string AlertCode { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private string? _clearanceReason;
    private string? _explanation;

    private bool IsValid => !string.IsNullOrEmpty(_clearanceReason) && !string.IsNullOrWhiteSpace(_explanation);

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new ClearAmlAlertCommand
        {
            Id = AlertId,
            Reason = _clearanceReason!,
            Explanation = _explanation!
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.ClearAmlAlertEndpointAsync("1", AlertId, command),
            Snackbar,
            successMessage: "Alert cleared.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

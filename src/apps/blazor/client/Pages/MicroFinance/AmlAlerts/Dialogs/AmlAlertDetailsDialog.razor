<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Security" Class="mr-2" />
            AML Alert Details - @Alert.AlertCode
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.caption" Color="Color.Primary">Alert Code</MudText>
                <MudText>@Alert.AlertCode</MudText>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.caption" Color="Color.Primary">Status</MudText>
                <MudChip T="string" Size="Size.Small" Color="@GetStatusColor(Alert.Status)">@Alert.Status</MudChip>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.caption" Color="Color.Primary">Alert Type</MudText>
                <MudText>@Alert.AlertType</MudText>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.caption" Color="Color.Primary">Severity</MudText>
                <MudChip T="string" Size="Size.Small" Color="@GetSeverityColor(Alert.Severity)">@Alert.Severity</MudChip>
            </MudItem>
            <MudItem xs="12">
                <MudDivider Class="my-2" />
                <MudText Typo="Typo.subtitle2" Class="mb-2">Trigger Information</MudText>
            </MudItem>
            <MudItem xs="12">
                <MudText Typo="Typo.caption" Color="Color.Primary">Trigger Rule</MudText>
                <MudText>@Alert.TriggerRule</MudText>
            </MudItem>
            <MudItem xs="12">
                <MudText Typo="Typo.caption" Color="Color.Primary">Description</MudText>
                <MudText>@Alert.Description</MudText>
            </MudItem>
            <MudItem xs="12">
                <MudDivider Class="my-2" />
                <MudText Typo="Typo.subtitle2" Class="mb-2">Related Entity</MudText>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.caption" Color="Color.Primary">Member</MudText>
                <MudText>@(Alert.MemberName ?? "N/A")</MudText>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.caption" Color="Color.Primary">Member Number</MudText>
                <MudText>@(Alert.MemberNumber ?? "N/A")</MudText>
            </MudItem>
            @if (Alert.TransactionAmount.HasValue)
            {
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.caption" Color="Color.Primary">Transaction Amount</MudText>
                    <MudText Typo="Typo.h6" Color="Color.Error">KES @Alert.TransactionAmount.Value.ToString("N0")</MudText>
                </MudItem>
            }
            <MudItem xs="12">
                <MudDivider Class="my-2" />
                <MudText Typo="Typo.subtitle2" Class="mb-2">Assignment & Timeline</MudText>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.caption" Color="Color.Primary">Created On</MudText>
                <MudText>@Alert.CreatedOn.ToString("dd/MM/yyyy HH:mm")</MudText>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.caption" Color="Color.Primary">Assigned To</MudText>
                <MudText>@(Alert.AssignedTo ?? "Unassigned")</MudText>
            </MudItem>
            @if (Alert.AssignedAt.HasValue)
            {
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.caption" Color="Color.Primary">Assigned At</MudText>
                    <MudText>@Alert.AssignedAt?.ToString("dd/MM/yyyy HH:mm")</MudText>
                </MudItem>
            }
            @if (Alert.ClosedAt.HasValue)
            {
                <MudItem xs="12" sm="6">
                    <MudText Typo="Typo.caption" Color="Color.Primary">Closed At</MudText>
                    <MudText>@Alert.ClosedAt?.ToString("dd/MM/yyyy HH:mm")</MudText>
                </MudItem>
            }
            @if (!string.IsNullOrEmpty(Alert.Resolution))
            {
                <MudItem xs="12">
                    <MudText Typo="Typo.caption" Color="Color.Primary">Resolution</MudText>
                    <MudText>@Alert.Resolution</MudText>
                </MudItem>
            }
            @if (Alert.IsSarFiled == true)
            {
                <MudItem xs="12">
                    <MudAlert Severity="Severity.Error">
                        <strong>SAR Filed:</strong> @Alert.SarReferenceNumber
                    </MudAlert>
                </MudItem>
            }
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Close" Variant="Variant.Text" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public AmlAlertResponse Alert { get; set; } = null!;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private Color GetSeverityColor(string? severity) => severity switch
    {
        "Critical" => Color.Error,
        "High" => Color.Warning,
        "Medium" => Color.Info,
        "Low" => Color.Default,
        _ => Color.Default
    };

    private Color GetStatusColor(string? status) => status switch
    {
        "New" => Color.Warning,
        "Assigned" => Color.Info,
        "UnderReview" => Color.Primary,
        "Confirmed" => Color.Error,
        "Escalated" => Color.Error,
        "Cleared" => Color.Success,
        "Closed" => Color.Default,
        _ => Color.Default
    };

    private void Close() => MudDialog.Close();
}

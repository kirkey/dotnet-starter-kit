@page "/microfinance/member-groups"

<PageHeader Title="Member Groups" Header="Member Groups" SubHeader="Manage solidarity groups and village savings associations." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowMemberGroupsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="MemberGroupResponse" TId="DefaultIdType" TRequest="MemberGroupViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchCode"
                          Label="Group Code"
                          Placeholder="Search by code"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Tag" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchName"
                          Label="Group Name"
                          Placeholder="Search by name"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Groups" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string"
                       @bind-Value="@SearchMeetingDay"
                       Label="Meeting Day"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@("Monday")">Monday</MudSelectItem>
                <MudSelectItem Value="@("Tuesday")">Tuesday</MudSelectItem>
                <MudSelectItem Value="@("Wednesday")">Wednesday</MudSelectItem>
                <MudSelectItem Value="@("Thursday")">Thursday</MudSelectItem>
                <MudSelectItem Value="@("Friday")">Friday</MudSelectItem>
                <MudSelectItem Value="@("Saturday")">Saturday</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        @if (_canActivate || _canDeactivate)
        {
            @if (entity.Status == "Active")
            {
                @if (_canDeactivate)
                {
                    <MudMenuItem Icon="@Icons.Material.Filled.Block" OnClick="@(() => DeactivateGroup(entity.Id))">
                        Deactivate
                    </MudMenuItem>
                }
            }
            else if (entity.Status == "Inactive")
            {
                @if (_canActivate)
                {
                    <MudMenuItem Icon="@Icons.Material.Filled.CheckCircle" OnClick="@(() => ActivateGroup(entity.Id))">
                        Activate
                    </MudMenuItem>
                }
            }
        }
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewGroupDetails(entity.Id))">
            View Details
        </MudMenuItem>
        <MudMenuItem Icon="@Icons.Material.Filled.GroupAdd" OnClick="@(() => ManageMembers(entity.Id))">
            Manage Members
        </MudMenuItem>
        <MudMenuItem Icon="@Icons.Material.Filled.Dashboard" OnClick="@(() => OnViewDashboard(entity.Id))">
            View Dashboard
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Basic Information</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Code"
                          For="@(() => context.Code)"
                          Label="Group Code"
                          Variant="Variant.Filled"
                          Required="true"
                          HelperText="Unique group identifier (e.g., GRP-001)" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Name"
                          For="@(() => context.Name)"
                          Label="Group Name"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="context.FormationDate"
                           For="@(() => context.FormationDate)"
                           Label="Formation Date"
                           Variant="Variant.Filled"
                           DateFormat="yyyy-MM-dd" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Description"
                          For="@(() => context.Description)"
                          Label="Description"
                          Variant="Variant.Filled"
                          Lines="2" />
        </MudItem>

        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Meeting Schedule</strong></MudText>
            <MudDivider />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string"
                       @bind-Value="context.MeetingFrequency"
                       For="@(() => context.MeetingFrequency)"
                       Label="Meeting Frequency"
                       Variant="Variant.Filled">
                <MudSelectItem Value="@("Weekly")">Weekly</MudSelectItem>
                <MudSelectItem Value="@("Biweekly")">Biweekly</MudSelectItem>
                <MudSelectItem Value="@("Monthly")">Monthly</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string"
                       @bind-Value="context.MeetingDay"
                       For="@(() => context.MeetingDay)"
                       Label="Meeting Day"
                       Variant="Variant.Filled">
                <MudSelectItem Value="@("Monday")">Monday</MudSelectItem>
                <MudSelectItem Value="@("Tuesday")">Tuesday</MudSelectItem>
                <MudSelectItem Value="@("Wednesday")">Wednesday</MudSelectItem>
                <MudSelectItem Value="@("Thursday")">Thursday</MudSelectItem>
                <MudSelectItem Value="@("Friday")">Friday</MudSelectItem>
                <MudSelectItem Value="@("Saturday")">Saturday</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTimePicker @bind-Time="context.MeetingTimeSpan"
                           For="@(() => context.MeetingTimeSpan)"
                           Label="Meeting Time"
                           Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.MeetingLocation"
                          For="@(() => context.MeetingLocation)"
                          Label="Meeting Location"
                          Variant="Variant.Filled"
                          HelperText="Physical address where the group meets" />
        </MudItem>
    </EditFormContent>
</EntityTable>

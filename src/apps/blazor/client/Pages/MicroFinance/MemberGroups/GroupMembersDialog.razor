@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.MemberGroups

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">@Group.Name - Members</MudText>
            <MudText Typo="Typo.caption" Color="Color.Primary">@Group.Code</MudText>

            <MudDivider />

            <MudAlert Severity="Severity.Info" Dense="true">
                This group has <strong>@Group.MemberCount</strong> members. Use the Members page to add or remove members from this group.
            </MudAlert>

            <MudText Typo="Typo.subtitle2">Group Leader</MudText>
            <MudText Typo="Typo.body1">@(Group.LeaderName ?? "Not Assigned")</MudText>

            <MudDivider />

            <MudText Typo="Typo.subtitle2">Quick Actions</MudText>
            <MudStack Row="true" Spacing="2">
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@Icons.Material.Filled.PersonAdd" OnClick="NavigateToMembers">
                    Add Member
                </MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Info" StartIcon="@Icons.Material.Filled.Groups" OnClick="NavigateToMembers">
                    View All Members
                </MudButton>
            </MudStack>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public MemberGroupResponse Group { get; set; } = null!;

    [Inject]
    private NavigationManager Navigation { get; set; } = null!;

    private void Close() => MudDialog.Close();

    private void NavigateToMembers()
    {
        MudDialog.Close();
        Navigation.NavigateTo("/microfinance/members");
    }
}

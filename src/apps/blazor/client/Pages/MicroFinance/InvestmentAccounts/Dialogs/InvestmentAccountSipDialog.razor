<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Autorenew" Class="mr-2" Color="Color.Primary" />
            Setup SIP - @AccountNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    Set up a Systematic Investment Plan (SIP) for regular automated investments.
                </MudAlert>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudNumericField @bind-Value="_amount"
                                 Label="SIP Amount"
                                 Variant="Variant.Outlined"
                                 Required="true"
                                 Min="0m"
                                 Adornment="Adornment.Start"
                                 AdornmentIcon="@Icons.Material.Filled.AttachMoney" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudSelect @bind-Value="@_frequency"
                           Label="Frequency"
                           Variant="Variant.Outlined"
                           Required="true">
                    <MudSelectItem Value="@("Weekly")">Weekly</MudSelectItem>
                    <MudSelectItem Value="@("Fortnightly")">Fortnightly</MudSelectItem>
                    <MudSelectItem Value="@("Monthly")">Monthly</MudSelectItem>
                    <MudSelectItem Value="@("Quarterly")">Quarterly</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudDatePicker @bind-Date="_nextDate"
                               Label="Next SIP Date"
                               Variant="Variant.Outlined"
                               Required="true"
                               MinDate="@DateTime.Today" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="_linkedSavingsAccountId"
                              Label="Linked Savings Account ID"
                              Variant="Variant.Outlined"
                              Required="true"
                              HelperText="Savings account for SIP deductions" />
            </MudItem>
            <MudItem xs="12">
                <MudNumericField @bind-Value="_installments"
                                 Label="Number of Installments (0 for perpetual)"
                                 Variant="Variant.Outlined"
                                 Min="0" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!IsValid)">
            Setup SIP
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType AccountId { get; set; }

    [Parameter]
    public string AccountNumber { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private decimal _amount;
    private string? _frequency;
    private DateTime? _nextDate = DateTime.Today.AddDays(1);
    private string? _linkedSavingsAccountId;
    private int _installments;

    private bool IsValid => _amount > 0 
                           && !string.IsNullOrEmpty(_frequency) 
                           && _nextDate.HasValue 
                           && !string.IsNullOrWhiteSpace(_linkedSavingsAccountId)
                           && Guid.TryParse(_linkedSavingsAccountId, out _);

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new SetupSipCommand
        {
            Id = AccountId,
            Amount = _amount,
            Frequency = _frequency!,
            NextDate = DateOnly.FromDateTime(_nextDate!.Value),
            LinkedSavingsAccountId = Guid.Parse(_linkedSavingsAccountId!)
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await Client.SetupSipEndpointAsync("1", AccountId, command),
            Snackbar,
            successMessage: "SIP setup completed successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

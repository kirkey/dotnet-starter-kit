<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.RemoveCircle" Class="mr-2" Color="Color.Warning" />
            Redeem Investment - @AccountNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Warning" Class="mb-4">
                    Redeem funds from this investment account. Lock-in period restrictions may apply.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudField Label="Current Value" Variant="Variant.Outlined">@CurrentValue.ToString("C")</MudField>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudNumericField @bind-Value="_amount"
                                 Label="Redemption Amount"
                                 Variant="Variant.Outlined"
                                 Required="true"
                                 Min="0m"
                                 Max="@CurrentValue"
                                 Adornment="Adornment.Start"
                                 AdornmentIcon="@Icons.Material.Filled.AttachMoney" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudNumericField @bind-Value="_gainLoss"
                                 Label="Gain/Loss"
                                 Variant="Variant.Outlined"
                                 Required="true"
                                 Adornment="Adornment.Start"
                                 AdornmentIcon="@Icons.Material.Filled.TrendingUp"
                                 HelperText="Enter negative for loss" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_notes"
                              Label="Redemption Notes"
                              Variant="Variant.Outlined"
                              Lines="2" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Warning" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!IsValid)">
            Redeem
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType AccountId { get; set; }

    [Parameter]
    public string AccountNumber { get; set; } = string.Empty;

    [Parameter]
    public decimal CurrentValue { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private decimal _amount;
    private decimal _gainLoss;
    private string? _notes;

    private bool IsValid => _amount > 0 && _amount <= CurrentValue;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new RedeemCommand
        {
            Id = AccountId,
            Amount = _amount,
            GainLoss = _gainLoss
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await Client.RedeemFromAccountEndpointAsync("1", AccountId, command),
            Snackbar,
            successMessage: "Redemption processed successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

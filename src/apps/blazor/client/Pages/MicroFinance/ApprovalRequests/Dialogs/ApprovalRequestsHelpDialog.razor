<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Help" Class="mr-2" />
            Approval Requests Help
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudExpansionPanels MultiExpansion="true">
            <MudExpansionPanel Text="Overview" IsInitiallyExpanded="true">
                <MudText Typo="Typo.body2">
                    Approval Requests track items that require one or more levels of approval before they can proceed.
                    Each request is associated with a workflow that defines the approval requirements, and progress
                    is tracked through each approval level until completion.
                </MudText>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Request Lifecycle">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Request States:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Pending">
                        <MudChip T="string" Color="Color.Warning" Size="Size.Small">Pending</MudChip>
                        Awaiting approval at current level
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.CheckCircle">
                        <MudChip T="string" Color="Color.Success" Size="Size.Small">Approved</MudChip>
                        All approval levels completed
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Cancel">
                        <MudChip T="string" Color="Color.Error" Size="Size.Small">Rejected</MudChip>
                        Request was rejected by an approver
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Block">
                        <MudChip T="string" Color="Color.Default" Size="Size.Small">Cancelled</MudChip>
                        Request was cancelled before completion
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Multi-Level Approval">
                <MudText Typo="Typo.body2">
                    Requests may require multiple levels of approval. The "Level" column shows progress
                    (e.g., "2/3" means currently at level 2 of 3 total levels).
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Person">
                        Level 1: Initial reviewer or supervisor
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.SupervisorAccount">
                        Level 2: Manager or department head
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.AdminPanelSettings">
                        Level 3+: Senior management or executive
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="SLA Tracking">
                <MudText Typo="Typo.body2">
                    Service Level Agreements (SLAs) define the expected turnaround time for approvals.
                    Requests nearing or exceeding their SLA will be highlighted for attention.
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Timer">
                        SLA hours are set per workflow and request
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Warning">
                        Overdue requests may trigger escalations
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Key Actions">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Available Operations:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Add">
                        <strong>Create:</strong> Submit a new approval request
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.CheckCircle">
                        <strong>Approve:</strong> Approve the request at current level
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Cancel">
                        <strong>Reject:</strong> Reject the request with a reason
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Block">
                        <strong>Cancel:</strong> Cancel the request before completion
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Best Practices">
                <MudText Typo="Typo.body2">
                    <strong>Recommended Practices:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Speed">
                        Process requests promptly to meet SLA targets
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Comment">
                        Provide clear comments when approving or rejecting
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Visibility">
                        Review entity details before making approval decisions
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Gavel">
                        Follow approval authority guidelines
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Filled" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Cancel() => MudDialog.Cancel();
}

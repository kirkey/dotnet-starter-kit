<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Block" Class="mr-2" Color="Color.Warning" />
            Cancel Request - @RequestNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Warning" Class="mb-4">
                    Cancelling this request will terminate the approval process. This action cannot be undone.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_reason"
                              Label="Cancellation Reason"
                              Variant="Variant.Outlined"
                              Lines="3"
                              Required="true"
                              HelperText="Provide a reason for cancelling this request" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Back</MudButton>
        <MudButton Color="Color.Warning" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit"
                   Disabled="@(!IsValid)">
            Cancel Request
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType RequestId { get; set; }

    [Parameter]
    public string RequestNumber { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private string? _reason;

    private bool IsValid => !string.IsNullOrWhiteSpace(_reason);

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new CancelApprovalRequestCommand
        {
            Id = RequestId,
            Reason = _reason!
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.CancelApprovalRequestEndpointAsync("1", RequestId, command),
            Snackbar,
            successMessage: "Request cancelled.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Cancel" Class="mr-2" Color="Color.Error" />
            Reject Request - @RequestNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Error" Class="mb-4">
                    Rejecting this request will terminate the approval process.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_reason"
                              Label="Rejection Reason"
                              Variant="Variant.Outlined"
                              Lines="3"
                              Required="true"
                              HelperText="Provide a reason for rejecting this request" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Error" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit"
                   Disabled="@(!IsValid)">
            Reject
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType RequestId { get; set; }

    [Parameter]
    public string RequestNumber { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private string? _reason;

    private bool IsValid => !string.IsNullOrWhiteSpace(_reason);

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new RejectApprovalRequestCommand
        {
            Id = RequestId,
            ApproverId = Guid.NewGuid(), // In real app, get from auth context
            Reason = _reason!
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.RejectApprovalRequestEndpointAsync("1", RequestId, command),
            Snackbar,
            successMessage: "Request rejected.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

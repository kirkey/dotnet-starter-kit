<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Class="mr-2" Color="Color.Success" />
            Verify Document
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText Typo="Typo.body2" Class="mb-4">
                    Confirm that this document has been reviewed and is authentic.
                </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudField Label="Document" Variant="Variant.Outlined">@DocumentName</MudField>
            </MudItem>
            <MudItem xs="12">
                <MudCheckBox @bind-Value="_confirmVerification" Color="Color.Success">
                    I confirm that I have reviewed this document and it is authentic
                </MudCheckBox>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Success" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!_confirmVerification)">
            Verify
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType DocumentId { get; set; }

    [Parameter]
    public string? DocumentName { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private bool _confirmVerification;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new VerifyDocumentCommand
        {
            Id = DocumentId,
            VerifiedById = Guid.NewGuid() // Would be current user ID in production
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await Client.VerifyDocumentEndpointAsync("1", DocumentId, command),
            Snackbar,
            successMessage: "Document verified successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

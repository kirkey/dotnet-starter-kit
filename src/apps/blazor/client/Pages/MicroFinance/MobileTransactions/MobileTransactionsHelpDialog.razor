@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.MobileTransactions

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">Mobile Transactions Help</MudText>

            <MudExpansionPanels Elevation="@_preference.Elevation">
                <MudExpansionPanel Text="What are Mobile Transactions?">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Digital Financial Services</MudText>
                        <MudText Typo="Typo.body2">
                            Mobile Transactions record all financial transactions initiated through mobile
                            channels - including mobile money, USSD, and mobile banking apps. They enable
                            members to transact without visiting a branch.
                        </MudText>
                        
                        <div>
                            <MudText Typo="Typo.body2" Class="mb-2">
                                <strong>Transaction Types:</strong>
                            </MudText>
                            <MudText Typo="Typo.caption">
                                • Loan repayments via mobile money<br/>
                                • Savings deposits<br/>
                                • Balance inquiries<br/>
                                • Fund transfers<br/>
                                • Bill payments<br/>
                                • Airtime purchases
                            </MudText>
                        </div>
                    </MudStack>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Transaction Status">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Transaction States</MudText>
                        
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Pending" IconColor="Color.Warning">
                                <MudText Typo="Typo.caption">Pending: Initiated, awaiting confirmation</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Completed: Successfully processed</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Error" IconColor="Color.Error">
                                <MudText Typo="Typo.caption">Failed: Transaction could not complete</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Replay" IconColor="Color.Info">
                                <MudText Typo="Typo.caption">Reversed: Transaction cancelled/refunded</MudText>
                            </MudListItem>
                        </MudList>
                    </MudStack>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Best Practices">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Mobile Transaction Management</MudText>
                        
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Monitor failed transactions for retry</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Reconcile mobile transactions daily</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Alert members on successful payments</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Investigate unusual transaction patterns</MudText>
                            </MudListItem>
                        </MudList>
                    </MudStack>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="@Close" Variant="Variant.Filled">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private ClientPreference _preference = new();

    protected override async Task OnInitializedAsync()
    {
        if (await ClientPreferences.GetPreference() is ClientPreference preference)
        {
            _preference = preference;
        }
    }

    private void Close() => MudDialog.Close();
}

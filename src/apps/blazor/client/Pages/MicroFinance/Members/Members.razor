@page "/microfinance/members"

<PageHeader Title="Members" Header="Members" SubHeader="Manage Microfinance Members - clients who access financial services." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowMembersHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="MemberResponse" TId="DefaultIdType" TRequest="MemberViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchMemberNumber"
                          Label="Member Number"
                          Placeholder="Search by member number"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Tag" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchName"
                          Label="Name"
                          Placeholder="Search by first or last name"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Person" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="bool?"
                       @bind-Value="@SearchIsActive"
                       Label="Status"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@((bool?)true)">Active</MudSelectItem>
                <MudSelectItem Value="@((bool?)false)">Inactive</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        @if (_canActivate || _canDeactivate)
        {
            @if (entity.IsActive)
            {
                @if (_canDeactivate)
                {
                    <MudMenuItem Icon="@Icons.Material.Filled.Block" OnClick="@(() => DeactivateMember(entity.Id))">
                        Deactivate
                    </MudMenuItem>
                }
            }
            else
            {
                @if (_canActivate)
                {
                    <MudMenuItem Icon="@Icons.Material.Filled.CheckCircle" OnClick="@(() => ActivateMember(entity.Id))">
                        Activate
                    </MudMenuItem>
                }
            }
        }
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewMemberDetails(entity.Id))">
            View Details
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Basic Information</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.MemberNumber"
                          For="@(() => context.MemberNumber)"
                          Label="Member Number"
                          Variant="Variant.Filled"
                          HelperText="Unique member identifier (e.g., MBR-001)" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.FirstName"
                          For="@(() => context.FirstName)"
                          Label="First Name"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.LastName"
                          For="@(() => context.LastName)"
                          Label="Last Name"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.MiddleName"
                          For="@(() => context.MiddleName)"
                          Label="Middle Name"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect @bind-Value="context.Gender"
                       For="@(() => context.Gender)"
                       Label="Gender"
                       Variant="Variant.Filled">
                <MudSelectItem Value="@("Male")">Male</MudSelectItem>
                <MudSelectItem Value="@("Female")">Female</MudSelectItem>
                <MudSelectItem Value="@("Other")">Other</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="context.DateOfBirthDate"
                           For="@(() => context.DateOfBirthDate)"
                           Label="Date of Birth"
                           Variant="Variant.Filled"
                           DateFormat="yyyy-MM-dd" />
        </MudItem>

        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Contact Information</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Email"
                          For="@(() => context.Email)"
                          Label="Email"
                          Variant="Variant.Filled"
                          InputType="InputType.Email" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.PhoneNumber"
                          For="@(() => context.PhoneNumber)"
                          Label="Phone Number"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.NationalId"
                          For="@(() => context.NationalId)"
                          Label="National ID"
                          Variant="Variant.Filled"
                          HelperText="Government-issued ID number" />
        </MudItem>

        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Address</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="8">
            <MudTextField @bind-Value="context.Address"
                          For="@(() => context.Address)"
                          Label="Address"
                          Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Financial Information</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Occupation"
                          For="@(() => context.Occupation)"
                          Label="Occupation"
                          Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.MonthlyIncome"
                             For="@(() => context.MonthlyIncome)"
                             Label="Monthly Income"
                             Variant="Variant.Filled"
                             Format="N2"
                             Adornment="Adornment.Start"
                             AdornmentText="$" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="context.JoinDateDate"
                           For="@(() => context.JoinDateDate)"
                           Label="Join Date"
                           Variant="Variant.Filled"
                           DateFormat="yyyy-MM-dd" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField @bind-Value="context.Notes"
                          For="@(() => context.Notes)"
                          Label="Notes"
                          Variant="Variant.Filled"
                          Lines="3" />
        </MudItem>
    </EditFormContent>
</EntityTable>

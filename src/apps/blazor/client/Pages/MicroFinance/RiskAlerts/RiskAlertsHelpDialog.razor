@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.RiskAlerts

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">Risk Alerts Help</MudText>

            <MudExpansionPanels Elevation="@_preference.Elevation">
                <MudExpansionPanel Text="What are Risk Alerts?" Icon="@Icons.Material.Filled.MenuBook">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Proactive Risk Notifications</MudText>
                        <MudText Typo="Typo.body2">
                            Risk Alerts are system-generated warnings about potential credit, operational,
                            or compliance risks. These enable early intervention before problems escalate.
                        </MudText>
                        
                        <div>
                            <MudText Typo="Typo.body2" Class="mb-2">
                                <strong>Alert Categories:</strong>
                            </MudText>
                            <MudText Typo="Typo.caption">
                                • Credit risk (missed payments, high utilization)<br/>
                                • Fraud indicators<br/>
                                • Concentration risk (geographic, sector)<br/>
                                • Operational anomalies<br/>
                                • Compliance breaches<br/>
                                • Portfolio quality deterioration
                            </MudText>
                        </div>
                    </MudStack>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Alert Severity" Icon="@Icons.Material.Filled.Info">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Priority Levels</MudText>
                        
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Error" IconColor="Color.Error">
                                <MudText Typo="Typo.caption">Critical: Immediate action required</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Warning" IconColor="Color.Warning">
                                <MudText Typo="Typo.caption">High: Action within 24 hours</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Info" IconColor="Color.Info">
                                <MudText Typo="Typo.caption">Medium: Review within 1 week</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Notifications" IconColor="Color.Default">
                                <MudText Typo="Typo.caption">Low: Monitor and report</MudText>
                            </MudListItem>
                        </MudList>
                    </MudStack>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Best Practices" Icon="@Icons.Material.Filled.CheckCircle">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Alert Management</MudText>
                        
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Respond to alerts based on priority</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Document actions taken</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Tune thresholds to reduce false positives</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Escalate critical alerts to management</MudText>
                            </MudListItem>
                        </MudList>
                    </MudStack>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="@Close" Variant="Variant.Filled">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private ClientPreference _preference = new();

    protected override async Task OnInitializedAsync()
    {
        if (await ClientPreferences.GetPreference() is ClientPreference preference)
        {
            _preference = preference;
        }
    }

    private void Close() => MudDialog.Close();
}

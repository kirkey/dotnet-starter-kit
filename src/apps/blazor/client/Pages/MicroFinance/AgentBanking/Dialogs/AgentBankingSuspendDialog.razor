<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Block" Class="mr-2" Color="Color.Error" />
            Suspend Agent - @AgentName
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Class="mb-4">
            Please provide a reason for suspending this agent. The agent will not be able to process transactions until reactivated.
        </MudText>
        <MudTextField @bind-Value="@_reason"
                      Label="Suspension Reason"
                      Variant="Variant.Outlined"
                      Lines="3"
                      Required="true"
                      RequiredError="Reason is required" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="@Submit" Disabled="@string.IsNullOrWhiteSpace(_reason)">
            Suspend
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType AgentId { get; set; }

    [Parameter]
    public string AgentName { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private string _reason = string.Empty;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new SuspendAgentBankingCommand
        {
            Id = AgentId,
            Reason = _reason
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await Client.SuspendAgentBankingEndpointAsync("1", AgentId, command),
            Snackbar,
            successMessage: "Agent suspended successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

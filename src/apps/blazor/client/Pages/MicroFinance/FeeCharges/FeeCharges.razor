@page "/microfinance/fee-charges"

<PageHeader Title="Fee Charges" Header="Fee Charges" SubHeader="View and manage fee charges applied to member accounts." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="FeeChargeResponse" TId="DefaultIdType" TRequest="FeeChargeViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string?"
                       @bind-Value="@SearchStatus"
                       Label="Status"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@((string?)"Pending")">Pending</MudSelectItem>
                <MudSelectItem Value="@((string?)"Paid")">Paid</MudSelectItem>
                <MudSelectItem Value="@((string?)"PartiallyPaid")">Partially Paid</MudSelectItem>
                <MudSelectItem Value="@((string?)"Overdue")">Overdue</MudSelectItem>
                <MudSelectItem Value="@((string?)"Waived")">Waived</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        @if (entity.Outstanding > 0 && _canManage)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.RemoveCircle" OnClick="@(() => WaiveFee(entity.Id))">
                Waive Fee
            </MudMenuItem>
        }
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewChargeDetails(entity.Id))">
            View Details
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Charge Information</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.FeeDefinitionId"
                          For="@(() => context.FeeDefinitionId)"
                          Label="Fee Definition ID"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.MemberId"
                          For="@(() => context.MemberId)"
                          Label="Member ID"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Reference"
                          For="@(() => context.Reference)"
                          Label="Reference"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="context.ChargeDate"
                           For="@(() => context.ChargeDate)"
                           Label="Charge Date"
                           Variant="Variant.Filled"
                           Required="true" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="context.DueDate"
                           For="@(() => context.DueDate)"
                           Label="Due Date"
                           Variant="Variant.Filled" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.Amount"
                             For="@(() => context.Amount)"
                             Label="Amount"
                             Variant="Variant.Filled"
                             Required="true"
                             Format="N2" />
        </MudItem>
        
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Notes"
                          For="@(() => context.Notes)"
                          Label="Notes"
                          Variant="Variant.Filled"
                          Lines="2" />
        </MudItem>
    </EditFormContent>
</EntityTable>

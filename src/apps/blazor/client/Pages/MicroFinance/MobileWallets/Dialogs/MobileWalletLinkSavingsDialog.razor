<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Link" Class="mr-2" Color="Color.Info" />
            Link Wallet to Savings - @PhoneNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText Class="mb-4">
                    Link this mobile wallet to a savings account for seamless transfers between mobile money and your MFI account.
                </MudText>
            </MudItem>
            <MudItem xs="12">
                <SavingsAccountAutocomplete @bind-Value="_selectedSavingsAccountId"
                                            Label="Savings Account"
                                            Variant="Variant.Outlined"
                                            Required="true"
                                            MemberId="MemberId"
                                            HelperText="Select the savings account to link" />
            </MudItem>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Info">
                    Once linked, you can:
                    <ul>
                        <li>Transfer from mobile wallet to savings instantly</li>
                        <li>Withdraw from savings to mobile wallet</li>
                        <li>Set up automatic sweeps</li>
                    </ul>
                </MudAlert>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(_selectedSavingsAccountId == DefaultIdType.Empty)">
            Link Account
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType WalletId { get; set; }

    [Parameter]
    public string PhoneNumber { get; set; } = string.Empty;

    [Parameter]
    public DefaultIdType MemberId { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private DefaultIdType _selectedSavingsAccountId;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new LinkSavingsMobileWalletCommand
        {
            Id = WalletId,
            SavingsAccountId = _selectedSavingsAccountId
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await Client.LinkSavingsMobileWalletEndpointAsync("1", WalletId, command),
            Snackbar,
            successMessage: "Wallet linked to savings account successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.GroupMemberships

<MudDialog>
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
            <MudIcon Icon="@Icons.Material.Filled.Help" Color="Color.Primary" Size="Size.Large" />
            <MudText Typo="Typo.h6">Group Memberships Help</MudText>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText Typo="Typo.h6" Color="Color.Primary">About Group Memberships</MudText>
                <MudText Typo="Typo.body1" Class="mb-3">
                    Group memberships track the association between individual members and member groups.
                    Members can belong to multiple groups with different roles, enabling group-based
                    lending, savings, and other collective financial activities.
                </MudText>
            </MudItem>

            <MudItem xs="12" md="6">
                <MudPaper Elevation="@_preference.Elevation" Class="pa-3" Style="background-color: var(--mud-palette-background-grey);">
                    <MudText Typo="Typo.subtitle1" Color="Color.Secondary"><b>Key Fields</b></MudText>
                    <MudList T="string" Dense="true">
                        <MudListItem Icon="@Icons.Material.Filled.Groups">
                            <b>Group</b> - The member group
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Person">
                            <b>Member</b> - The individual member
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Badge">
                            <b>Role</b> - Role within the group
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.CalendarMonth">
                            <b>Joined Date</b> - When membership started
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.CheckCircle">
                            <b>Active</b> - Current membership status
                        </MudListItem>
                    </MudList>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" md="6">
                <MudPaper Elevation="@_preference.Elevation" Class="pa-3" Style="background-color: var(--mud-palette-background-grey);">
                    <MudText Typo="Typo.subtitle1" Color="Color.Secondary"><b>Member Roles</b></MudText>
                    <MudList T="string" Dense="true">
                        <MudListItem Icon="@Icons.Material.Filled.Person">
                            <b>Member</b> - Regular group member
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Edit">
                            <b>Secretary</b> - Keeps records and minutes
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.AttachMoney">
                            <b>Treasurer</b> - Manages group finances
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Star">
                            <b>Chairman</b> - Leads the group
                        </MudListItem>
                    </MudList>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudPaper Elevation="@_preference.Elevation" Class="pa-3" Style="background-color: var(--mud-palette-background-grey);">
                    <MudText Typo="Typo.subtitle1" Color="Color.Secondary"><b>Available Actions</b></MudText>
                    <MudList T="string" Dense="true">
                        <MudListItem Icon="@Icons.Material.Filled.Add">
                            <b>Add Membership</b> - Add a member to a group
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Edit">
                            <b>Edit</b> - Update role or other details
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.Visibility">
                            <b>View Details</b> - See complete membership info
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.RemoveCircle">
                            <b>Deactivate</b> - End active membership
                        </MudListItem>
                        <MudListItem Icon="@Icons.Material.Filled.CheckCircle">
                            <b>Reactivate</b> - Restore inactive membership
                        </MudListItem>
                    </MudList>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Class="mt-2">
                    <b>Tip:</b> Use the Status and Role filters to quickly find specific memberships.
                </MudAlert>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Close">Got it!</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Close() => MudDialog.Close();
}

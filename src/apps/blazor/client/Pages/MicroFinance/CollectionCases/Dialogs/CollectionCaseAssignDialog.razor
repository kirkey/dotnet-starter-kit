<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Class="mr-2" Color="Color.Info" />
            Assign Collector - @CaseNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText Class="mb-4">
                    Assign a collections officer to work on this case.
                </MudText>
            </MudItem>
            <MudItem xs="12">
                <StaffAutocomplete @bind-Value="_selectedCollectorId"
                                   Label="Collections Officer"
                                   Variant="Variant.Outlined"
                                   Required="true"
                                   HelperText="Select the officer to assign" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(_selectedCollectorId == DefaultIdType.Empty)">
            Assign
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType CaseId { get; set; }

    [Parameter]
    public string CaseNumber { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private DefaultIdType _selectedCollectorId;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new AssignCollectionCaseCommand
        {
            Id = CaseId,
            CollectorId = _selectedCollectorId
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.AssignCollectionCaseEndpointAsync("1", CaseId, command),
            Snackbar,
            successMessage: "Case assigned successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

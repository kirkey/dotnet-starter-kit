<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Payments" Class="mr-2" Color="Color.Success" />
            Record Recovery - @CaseNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText Class="mb-2">
                    Amount Overdue: <strong>@AmountOverdue.ToString("N0")</strong>
                </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudNumericField @bind-Value="_recoveryAmount"
                                 Label="Recovery Amount"
                                 Variant="Variant.Outlined"
                                 Min="1"
                                 Max="@AmountOverdue"
                                 Format="N0"
                                 Adornment="Adornment.Start"
                                 AdornmentText="KES"
                                 Required="true" />
            </MudItem>
            <MudItem xs="12">
                <MudSelect @bind-Value="@_paymentMethod"
                           Label="Payment Method"
                           Variant="Variant.Outlined"
                           Required="true">
                    <MudSelectItem Value="@("Cash")">Cash</MudSelectItem>
                    <MudSelectItem Value="@("MobileMoney")">Mobile Money</MudSelectItem>
                    <MudSelectItem Value="@("BankTransfer")">Bank Transfer</MudSelectItem>
                    <MudSelectItem Value="@("Cheque")">Cheque</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudTextField @bind-Value="_referenceNumber"
                              Label="Reference Number"
                              Variant="Variant.Outlined"
                              HelperText="Transaction or receipt number" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_notes"
                              Label="Notes"
                              Variant="Variant.Outlined"
                              Lines="2" />
            </MudItem>
            @if (_recoveryAmount >= AmountOverdue)
            {
                <MudItem xs="12">
                    <MudAlert Severity="Severity.Success">
                        This payment will clear the full overdue amount!
                    </MudAlert>
                </MudItem>
            }
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Success" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(_recoveryAmount <= 0 || string.IsNullOrEmpty(_paymentMethod))">
            Record Recovery
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType CaseId { get; set; }

    [Parameter]
    public string CaseNumber { get; set; } = string.Empty;

    [Parameter]
    public decimal AmountOverdue { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private decimal _recoveryAmount;
    private string? _paymentMethod;
    private string? _referenceNumber;
    private string? _notes;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new RecordRecoveryCollectionCaseCommand
        {
            Id = CaseId,
            Amount = _recoveryAmount,
            PaymentMethod = _paymentMethod!,
            ReferenceNumber = _referenceNumber,
            Notes = _notes
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.RecordRecoveryCollectionCaseEndpointAsync("1", CaseId, command),
            Snackbar,
            successMessage: $"Recovery of {_recoveryAmount:N0} recorded successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

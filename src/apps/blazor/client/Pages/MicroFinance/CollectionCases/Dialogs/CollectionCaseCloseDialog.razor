<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.TaskAlt" Class="mr-2" Color="Color.Primary" />
            Close Case - @CaseNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudSelect @bind-Value="@_closureReason"
                           Label="Closure Reason"
                           Variant="Variant.Outlined"
                           Required="true">
                    <MudSelectItem Value="@("FullyRecovered")">Fully Recovered</MudSelectItem>
                    <MudSelectItem Value="@("Settled")">Settled</MudSelectItem>
                    <MudSelectItem Value="@("WriteOff")">Written Off</MudSelectItem>
                    <MudSelectItem Value="@("LegalJudgment")">Legal Judgment</MudSelectItem>
                    <MudSelectItem Value="@("Bankruptcy")">Borrower Bankruptcy</MudSelectItem>
                    <MudSelectItem Value="@("Deceased")">Borrower Deceased</MudSelectItem>
                    <MudSelectItem Value="@("Other")">Other</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12">
                <MudNumericField @bind-Value="_finalAmount"
                                 Label="Final Amount Recovered"
                                 Variant="Variant.Outlined"
                                 Format="N0"
                                 Adornment="Adornment.Start"
                                 AdornmentText="KES" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_closureNotes"
                              Label="Closure Notes"
                              Variant="Variant.Outlined"
                              Lines="3"
                              Required="true"
                              HelperText="Document the reason and final outcome" />
            </MudItem>
            @if (_closureReason == "WriteOff")
            {
                <MudItem xs="12">
                    <MudAlert Severity="Severity.Warning">
                        Write-off requires management approval. This action will be logged for audit purposes.
                    </MudAlert>
                </MudItem>
            }
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!IsValid)">
            Close Case
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType CaseId { get; set; }

    [Parameter]
    public string CaseNumber { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private string? _closureReason;
    private decimal _finalAmount;
    private string? _closureNotes;

    private bool IsValid => !string.IsNullOrEmpty(_closureReason) && 
                            !string.IsNullOrWhiteSpace(_closureNotes);

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new CloseCollectionCaseCommand
        {
            Id = CaseId,
            ClosureReason = _closureReason!,
            FinalAmountRecovered = _finalAmount,
            Notes = _closureNotes
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.CloseCollectionCaseEndpointAsync("1", CaseId, command),
            Snackbar,
            successMessage: "Case closed successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

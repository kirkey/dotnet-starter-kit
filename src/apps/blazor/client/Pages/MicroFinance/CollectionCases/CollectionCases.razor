@page "/microfinance/collection-cases"

<PageHeader Title="Collection Cases" Header="Collection Cases" SubHeader="Manage debt collection - track overdue loans, contact delinquent members, and recover outstanding amounts." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudChipSet T="string" SelectedValue="@_statusFilter" SelectedValueChanged="@OnStatusFilterChanged">
            <MudChip Value="@("")" Variant="Variant.Text">All</MudChip>
            <MudChip Value="@("Open")" Color="Color.Warning" Variant="Variant.Text">Open</MudChip>
            <MudChip Value="@("InProgress")" Color="Color.Info" Variant="Variant.Text">In Progress</MudChip>
            <MudChip Value="@("Legal")" Color="Color.Error" Variant="Variant.Text">Legal</MudChip>
            <MudChip Value="@("Settled")" Color="Color.Success" Variant="Variant.Text">Settled</MudChip>
            <MudChip Value="@("Closed")" Color="Color.Default" Variant="Variant.Text">Closed</MudChip>
        </MudChipSet>
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowCollectionCasesHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="CollectionCaseResponse" TId="DefaultIdType" TRequest="CollectionCaseViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchCaseNumber"
                          Label="Case Number"
                          Placeholder="Search by case number"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Tag" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string?"
                       @bind-Value="@SearchPriority"
                       Label="Priority"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@("Low")">Low</MudSelectItem>
                <MudSelectItem Value="@("Medium")">Medium</MudSelectItem>
                <MudSelectItem Value="@("High")">High</MudSelectItem>
                <MudSelectItem Value="@("Critical")">Critical</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string?"
                       @bind-Value="@SearchClassification"
                       Label="Classification"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@("Early")">Early (1-30 days)</MudSelectItem>
                <MudSelectItem Value="@("Moderate")">Moderate (31-60 days)</MudSelectItem>
                <MudSelectItem Value="@("Serious")">Serious (61-90 days)</MudSelectItem>
                <MudSelectItem Value="@("Severe")">Severe (91+ days)</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        @if ((entity.Status == "Open" || entity.Status == "InProgress") && _canAssign)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.PersonAdd" IconColor="Color.Info" OnClick="@(() => ShowAssignDialog(entity))">
                Assign Collector
            </MudMenuItem>
        }
        @if (entity.Status == "InProgress" && _canRecordContact)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Phone" IconColor="Color.Primary" OnClick="@(() => ShowRecordContactDialog(entity))">
                Record Contact
            </MudMenuItem>
        }
        @if ((entity.Status == "InProgress" || entity.Status == "Legal") && _canRecordRecovery)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Payments" IconColor="Color.Success" OnClick="@(() => ShowRecordRecoveryDialog(entity))">
                Record Recovery
            </MudMenuItem>
        }
        @if (entity.Status == "InProgress" && _canEscalateToLegal)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Gavel" IconColor="Color.Error" OnClick="@(() => EscalateToLegal(entity.Id))">
                Escalate to Legal
            </MudMenuItem>
        }
        @if ((entity.Status == "InProgress" || entity.Status == "Legal") && _canSettle)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Handshake" IconColor="Color.Warning" OnClick="@(() => SettleCase(entity.Id))">
                Settle
            </MudMenuItem>
        }
        @if ((entity.Status == "Open" || entity.Status == "InProgress") && _canClose)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Close" IconColor="Color.Default" OnClick="@(() => ShowCloseDialog(entity))">
                Close Case
            </MudMenuItem>
        }
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewCaseDetails(entity.Id))">
            View Details
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Case Details</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.CaseNumber"
                          For="@(() => context.CaseNumber)"
                          Label="Case Number"
                          Variant="Variant.Filled"
                          Required="true"
                          HelperText="e.g., CC-20250120-001"
                          Disabled="@(context.Id != DefaultIdType.Empty)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            @* TODO: Create LoanAutocomplete component *@
            <MudTextField @bind-Value="context.LoanNumber"
                          Label="Loan"
                          Variant="Variant.Filled"
                          Required="true"
                          HelperText="Enter the delinquent loan number"
                          Disabled="@(context.Id != DefaultIdType.Empty)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            @* TODO: Create MemberAutocomplete component *@
            <MudTextField @bind-Value="context.MemberName"
                          Label="Member"
                          Variant="Variant.Filled"
                          Required="true"
                          Disabled="@(context.Id != DefaultIdType.Empty)" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.DaysPastDue"
                             For="@(() => context.DaysPastDue)"
                             Label="Days Past Due"
                             Variant="Variant.Filled"
                             Min="1"
                             Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.AmountOverdue"
                             For="@(() => context.AmountOverdue)"
                             Label="Amount Overdue"
                             Variant="Variant.Filled"
                             Min="0"
                             Format="N0"
                             Adornment="Adornment.Start"
                             AdornmentText="KES"
                             Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.TotalOutstanding"
                             For="@(() => context.TotalOutstanding)"
                             Label="Total Outstanding"
                             Variant="Variant.Filled"
                             Min="0"
                             Format="N0"
                             Adornment="Adornment.Start"
                             AdornmentText="KES"
                             Required="true" />
        </MudItem>
    </EditFormContent>
</EntityTable>

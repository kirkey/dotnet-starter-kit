<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Refresh" Class="mr-2" Color="Color.Primary" />
            Refresh Credit Score - @MemberName
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText Class="mb-2">
                    Current Score: <strong>@CurrentScore.ToString("N0")</strong>
                </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudSelect @bind-Value="@_scoreType"
                           Label="Score Type"
                           Variant="Variant.Outlined"
                           Required="true">
                    <MudSelectItem Value="@("Internal")">Internal Score</MudSelectItem>
                    <MudSelectItem Value="@("CreditBureau")">Credit Bureau Score</MudSelectItem>
                    <MudSelectItem Value="@("Hybrid")">Hybrid Score</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12">
                <MudSelect @bind-Value="@_scoreModel"
                           Label="Score Model"
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="@("Default")">Default Model</MudSelectItem>
                    <MudSelectItem Value="@("BehavioralV1")">Behavioral V1</MudSelectItem>
                    <MudSelectItem Value="@("BehavioralV2")">Behavioral V2</MudSelectItem>
                    <MudSelectItem Value="@("ApplicationScore")">Application Score</MudSelectItem>
                </MudSelect>
            </MudItem>
            @if (_scoreType == "CreditBureau")
            {
                <MudItem xs="12">
                    <MudAlert Severity="Severity.Info">
                        This will query the credit bureau for the latest score. Standard inquiry charges may apply.
                    </MudAlert>
                </MudItem>
            }
            <MudItem xs="12">
                <MudCheckBox @bind-Value="_confirmRefresh" Color="Color.Primary">
                    I confirm the score should be refreshed
                </MudCheckBox>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!IsValid)">
            Refresh Score
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType MemberId { get; set; }

    [Parameter]
    public string MemberName { get; set; } = string.Empty;

    [Parameter]
    public decimal CurrentScore { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private string _scoreType = "Internal";
    private string _scoreModel = "Default";
    private bool _confirmRefresh;

    private bool IsValid => !string.IsNullOrEmpty(_scoreType) && _confirmRefresh;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        // Create a new credit score (refresh)
        var command = new CreateCreditScoreCommand
        {
            MemberId = MemberId,
            ScoreType = _scoreType,
            ScoreModel = _scoreModel,
            Score = 0, // Will be calculated by the system
            ScoreMin = 300,
            ScoreMax = 850,
            Source = _scoreType == "CreditBureau" ? "CreditBureau" : "Internal"
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.CreateCreditScoreEndpointAsync("1", command),
            Snackbar,
            successMessage: "Credit score refreshed successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Cancel" Class="mr-2" Color="Color.Warning" />
            Deactivate Workflow - @WorkflowName
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudAlert Severity="Severity.Warning" Class="mb-4">
            Deactivating this workflow will prevent new approval requests from using it.
            Existing requests in progress will continue to use this workflow.
        </MudAlert>
        <MudText Typo="Typo.body1">
            Are you sure you want to deactivate the workflow "<strong>@WorkflowName</strong>"?
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Warning" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit">
            Deactivate
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType WorkflowId { get; set; }

    [Parameter]
    public string WorkflowName { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new DeactivateApprovalWorkflowCommand { Id = WorkflowId };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.DeactivateApprovalWorkflowEndpointAsync("1", WorkflowId, command),
            Snackbar,
            successMessage: "Workflow deactivated successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="mr-2" />
            Approval Workflow Details - @Workflow.Name
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudField Label="Code" Variant="Variant.Outlined">@Workflow.Code</MudField>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudField Label="Name" Variant="Variant.Outlined">@Workflow.Name</MudField>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudField Label="Entity Type" Variant="Variant.Outlined">@Workflow.EntityType</MudField>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudField Label="Number of Levels" Variant="Variant.Outlined">@Workflow.NumberOfLevels</MudField>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudField Label="Approval Mode" Variant="Variant.Outlined">
                    @(Workflow.IsSequential ? "Sequential" : "Parallel")
                </MudField>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudField Label="Priority" Variant="Variant.Outlined">@Workflow.Priority</MudField>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudField Label="Status" Variant="Variant.Outlined">
                    <MudChip T="string" Color="@(Workflow.IsActive ? Color.Success : Color.Default)" Size="Size.Small">
                        @(Workflow.IsActive ? "Active" : "Inactive")
                    </MudChip>
                </MudField>
            </MudItem>
            @if (Workflow.MinAmount.HasValue || Workflow.MaxAmount.HasValue)
            {
                <MudItem xs="12" md="6">
                    <MudField Label="Amount Range" Variant="Variant.Outlined">
                        @(Workflow.MinAmount?.ToString("C") ?? "No Min") - @(Workflow.MaxAmount?.ToString("C") ?? "No Max")
                    </MudField>
                </MudItem>
            }
            @if (!string.IsNullOrEmpty(Workflow.BranchName))
            {
                <MudItem xs="12" md="6">
                    <MudField Label="Branch" Variant="Variant.Outlined">@Workflow.BranchName</MudField>
                </MudItem>
            }
            @if (!string.IsNullOrEmpty(Workflow.Description))
            {
                <MudItem xs="12">
                    <MudField Label="Description" Variant="Variant.Outlined">@Workflow.Description</MudField>
                </MudItem>
            }
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Filled" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public ApprovalWorkflowResponse Workflow { get; set; } = null!;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Cancel() => MudDialog.Cancel();
}

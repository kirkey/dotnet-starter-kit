<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Help" Class="mr-2" />
            Customer Cases Help
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudExpansionPanels MultiExpansion="true">
            <MudExpansionPanel Text="Overview" IsInitiallyExpanded="true">
                <MudText Typo="Typo.body2">
                    Customer Cases is a comprehensive case management module for tracking and resolving member 
                    inquiries, complaints, and service requests. Each case is tracked through its lifecycle 
                    with SLA monitoring to ensure timely resolution.
                </MudText>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Case Lifecycle">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Case Status Flow:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.FiberNew">
                        <MudChip T="string" Color="Color.Info" Size="Size.Small">Open</MudChip> 
                        New case awaiting assignment
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.PlayArrow">
                        <MudChip T="string" Color="Color.Primary" Size="Size.Small">In Progress</MudChip> 
                        Case is being worked on
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.ArrowUpward">
                        <MudChip T="string" Color="Color.Warning" Size="Size.Small">Escalated</MudChip> 
                        Escalated to senior staff
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.CheckCircle">
                        <MudChip T="string" Color="Color.Success" Size="Size.Small">Resolved</MudChip> 
                        Issue has been addressed
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Done">
                        <MudChip T="string" Color="Color.Dark" Size="Size.Small">Closed</MudChip> 
                        Case completed with feedback
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Case Categories">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Common Case Categories:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.HelpCenter">
                        <strong>Inquiry:</strong> General information requests
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Report">
                        <strong>Complaint:</strong> Member dissatisfaction issues
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Build">
                        <strong>Service Request:</strong> Account changes, updates
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Error">
                        <strong>Dispute:</strong> Transaction or fee disputes
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Feedback">
                        <strong>Feedback:</strong> Suggestions and comments
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Priority Levels">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Case Priority:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.LowPriority">
                        <MudChip T="string" Color="Color.Info" Size="Size.Small">Low</MudChip> 
                        Standard processing time
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Remove">
                        <MudChip T="string" Color="Color.Default" Size="Size.Small">Medium</MudChip> 
                        Normal priority
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.PriorityHigh">
                        <MudChip T="string" Color="Color.Warning" Size="Size.Small">High</MudChip> 
                        Expedited handling
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Error">
                        <MudChip T="string" Color="Color.Error" Size="Size.Small">Critical</MudChip> 
                        Immediate attention required
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="Key Actions">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Available Operations:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.PersonAdd">
                        <strong>Assign:</strong> Assign case to a staff member
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.ArrowUpward">
                        <strong>Escalate:</strong> Escalate to senior staff with reason
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.CheckCircle">
                        <strong>Resolve:</strong> Mark case as resolved with details
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Done">
                        <strong>Close:</strong> Close case with satisfaction score
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>

            <MudExpansionPanel Text="SLA Management">
                <MudText Typo="Typo.body2">
                    <strong>Service Level Agreements:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    <MudListItem Icon="@Icons.Material.Filled.Timer">
                        Each case has an SLA (default 24 hours)
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.NotificationsActive">
                        SLA breaches trigger automatic escalation
                    </MudListItem>
                    <MudListItem Icon="@Icons.Material.Filled.Assessment">
                        SLA performance is tracked for reporting
                    </MudListItem>
                </MudList>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Filled" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Cancel() => MudDialog.Cancel();
}

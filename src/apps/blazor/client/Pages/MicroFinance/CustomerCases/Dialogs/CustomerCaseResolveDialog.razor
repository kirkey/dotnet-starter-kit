<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="mr-2" Color="Color.Success" />
            Resolve Case - @CaseNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudTextField @bind-Value="_resolution"
                              Label="Resolution"
                              Variant="Variant.Outlined"
                              Lines="4"
                              Required="true"
                              HelperText="Describe how this case was resolved" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Success" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!IsValid)">
            Resolve
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType CaseId { get; set; }

    [Parameter]
    public string CaseNumber { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private string? _resolution;

    private bool IsValid => !string.IsNullOrWhiteSpace(_resolution);

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new ResolveCustomerCaseCommand
        {
            Id = CaseId,
            Resolution = _resolution!
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.ResolveCustomerCaseEndpointAsync("1", CaseId, command),
            Snackbar,
            successMessage: "Case resolved successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.ArrowUpward" Class="mr-2" Color="Color.Warning" />
            Escalate Case - @CaseNumber
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Warning" Class="mb-4">
                    Escalating this case will notify senior staff and increase priority.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_escalatedToId"
                              Label="Escalate To (Staff ID)"
                              Variant="Variant.Outlined"
                              Required="true"
                              HelperText="Enter the ID of the staff member to escalate to" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_reason"
                              Label="Escalation Reason"
                              Variant="Variant.Outlined"
                              Lines="3"
                              Required="true"
                              HelperText="Document why this case needs escalation" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Warning" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!IsValid)">
            Escalate
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType CaseId { get; set; }

    [Parameter]
    public string CaseNumber { get; set; } = string.Empty;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private string? _escalatedToId;
    private string? _reason;

    private bool IsValid => Guid.TryParse(_escalatedToId, out _) && !string.IsNullOrWhiteSpace(_reason);

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        if (!Guid.TryParse(_escalatedToId, out var escalatedToGuid))
        {
            Snackbar.Add("Invalid Staff ID format.", Severity.Error);
            return;
        }

        var command = new EscalateCustomerCaseCommand
        {
            Id = CaseId,
            EscalatedToId = escalatedToGuid,
            Reason = _reason!
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.EscalateCustomerCaseEndpointAsync("1", CaseId, command),
            Snackbar,
            successMessage: "Case escalated successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

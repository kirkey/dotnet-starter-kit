@page "/microfinance/share-transactions"

<PageHeader Title="Share Transactions" Header="Share Transactions" SubHeader="View share account transaction history." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="ShareTransactionResponse" TId="DefaultIdType" TRequest="ShareTransactionViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string?"
                       @bind-Value="@SearchTransactionType"
                       Label="Transaction Type"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@((string?)"Buy")">Buy</MudSelectItem>
                <MudSelectItem Value="@((string?)"Sell")">Sell</MudSelectItem>
                <MudSelectItem Value="@((string?)"Dividend")">Dividend</MudSelectItem>
                <MudSelectItem Value="@((string?)"Transfer")">Transfer</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewTransactionDetails(entity.Id))">
            View Details
        </MudMenuItem>
    </ExtraActions>
</EntityTable>

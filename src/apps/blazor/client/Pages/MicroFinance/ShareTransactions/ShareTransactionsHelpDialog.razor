@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Help" Class="mr-3 mb-n1" />
            Share Transactions Help
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1" Class="mb-4">
            The Share Transactions module displays all share account transactions in the system.
        </MudText>
        
        <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Transaction Types:</strong></MudText>
        <MudList T="string" Dense="true">
            <MudListItem Icon="@Icons.Material.Filled.ShoppingCart">Buy - Purchase of shares</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.Sell">Sell - Sale of shares</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.Paid">Dividend - Dividend payment</MudListItem>
            <MudListItem Icon="@Icons.Material.Filled.SwapHoriz">Transfer - Share transfer between accounts</MudListItem>
        </MudList>

        <MudText Typo="Typo.subtitle1" Class="mt-4 mb-2"><strong>Note:</strong></MudText>
        <MudText Typo="Typo.body2">
            Share transactions are automatically recorded when operations are performed on share accounts.
            This is a read-only view for tracking and auditing purposes.
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Variant="Variant.Filled" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Close() => MudDialog.Close();
}

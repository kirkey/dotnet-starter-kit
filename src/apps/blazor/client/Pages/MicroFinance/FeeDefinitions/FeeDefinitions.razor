@page "/microfinance/fee-definitions"

<PageHeader Title="Fee Definitions" Header="Fee Definitions" SubHeader="Manage fee types and configurations for the microfinance system." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="FeeDefinitionResponse" TId="DefaultIdType" TRequest="FeeDefinitionViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string?"
                       @bind-Value="@SearchFeeType"
                       Label="Fee Type"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@((string?)"ServiceFee")">Service Fee</MudSelectItem>
                <MudSelectItem Value="@((string?)"ProcessingFee")">Processing Fee</MudSelectItem>
                <MudSelectItem Value="@((string?)"PenaltyFee")">Penalty Fee</MudSelectItem>
                <MudSelectItem Value="@((string?)"LatePaymentFee")">Late Payment Fee</MudSelectItem>
                <MudSelectItem Value="@((string?)"MaintenanceFee")">Maintenance Fee</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string?"
                       @bind-Value="@SearchAppliesTo"
                       Label="Applies To"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@((string?)"Loan")">Loan</MudSelectItem>
                <MudSelectItem Value="@((string?)"Savings")">Savings</MudSelectItem>
                <MudSelectItem Value="@((string?)"Share")">Share</MudSelectItem>
                <MudSelectItem Value="@((string?)"All")">All</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="bool?"
                       @bind-Value="@SearchIsActive"
                       Label="Status"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@((bool?)true)">Active</MudSelectItem>
                <MudSelectItem Value="@((bool?)false)">Inactive</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewFeeDetails(entity.Id))">
            View Details
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Fee Information</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Code"
                          For="@(() => context.Code)"
                          Label="Code"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Name"
                          For="@(() => context.Name)"
                          Label="Name"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudSelect @bind-Value="context.FeeType"
                       For="@(() => context.FeeType)"
                       Label="Fee Type"
                       Variant="Variant.Filled"
                       Required="true">
                <MudSelectItem Value="@("ServiceFee")">Service Fee</MudSelectItem>
                <MudSelectItem Value="@("ProcessingFee")">Processing Fee</MudSelectItem>
                <MudSelectItem Value="@("PenaltyFee")">Penalty Fee</MudSelectItem>
                <MudSelectItem Value="@("LatePaymentFee")">Late Payment Fee</MudSelectItem>
                <MudSelectItem Value="@("MaintenanceFee")">Maintenance Fee</MudSelectItem>
            </MudSelect>
        </MudItem>
        
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Description"
                          For="@(() => context.Description)"
                          Label="Description"
                          Variant="Variant.Filled"
                          Lines="2" />
        </MudItem>
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Calculation Settings</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudSelect @bind-Value="context.CalculationType"
                       For="@(() => context.CalculationType)"
                       Label="Calculation Type"
                       Variant="Variant.Filled"
                       Required="true">
                <MudSelectItem Value="@("Flat")">Flat</MudSelectItem>
                <MudSelectItem Value="@("Percentage")">Percentage</MudSelectItem>
                <MudSelectItem Value="@("Tiered")">Tiered</MudSelectItem>
            </MudSelect>
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudSelect @bind-Value="context.AppliesTo"
                       For="@(() => context.AppliesTo)"
                       Label="Applies To"
                       Variant="Variant.Filled"
                       Required="true">
                <MudSelectItem Value="@("Loan")">Loan</MudSelectItem>
                <MudSelectItem Value="@("Savings")">Savings</MudSelectItem>
                <MudSelectItem Value="@("Share")">Share</MudSelectItem>
                <MudSelectItem Value="@("All")">All</MudSelectItem>
            </MudSelect>
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudSelect @bind-Value="context.ChargeFrequency"
                       For="@(() => context.ChargeFrequency)"
                       Label="Charge Frequency"
                       Variant="Variant.Filled"
                       Required="true">
                <MudSelectItem Value="@("OneTime")">One Time</MudSelectItem>
                <MudSelectItem Value="@("Monthly")">Monthly</MudSelectItem>
                <MudSelectItem Value="@("Quarterly")">Quarterly</MudSelectItem>
                <MudSelectItem Value="@("Annually")">Annually</MudSelectItem>
            </MudSelect>
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.Amount"
                             For="@(() => context.Amount)"
                             Label="Amount"
                             Variant="Variant.Filled"
                             Required="true"
                             Format="N2" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.MinAmount"
                             For="@(() => context.MinAmount)"
                             Label="Min Amount"
                             Variant="Variant.Filled"
                             Format="N2" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.MaxAmount"
                             For="@(() => context.MaxAmount)"
                             Label="Max Amount"
                             Variant="Variant.Filled"
                             Format="N2" />
        </MudItem>
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Tax Settings</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudCheckBox @bind-Value="context.IsTaxable"
                         For="@(() => context.IsTaxable)"
                         Label="Is Taxable" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.TaxRate"
                             For="@(() => context.TaxRate)"
                             Label="Tax Rate (%)"
                             Variant="Variant.Filled"
                             Format="N2"
                             Disabled="@(!context.IsTaxable)" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudCheckBox @bind-Value="context.IsActive"
                         For="@(() => context.IsActive)"
                         Label="Is Active" />
        </MudItem>
    </EditFormContent>
</EntityTable>

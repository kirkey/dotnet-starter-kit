<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Check" Class="mr-2" Color="Color.Success" />
            Approve Guarantor - @GuarantorName
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    You are approving this member as a guarantor for the loan.
                </MudAlert>
            </MudItem>
            <MudItem xs="12">
                <MudText Class="mb-2">
                    Guaranteed Amount: <strong>KES @GuaranteedAmount.ToString("N0")</strong>
                </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="_notes"
                              Label="Approval Notes"
                              Variant="Variant.Outlined"
                              Lines="2"
                              HelperText="Optional notes about the approval" />
            </MudItem>
            <MudItem xs="12">
                <MudCheckBox @bind-Value="_confirmApproval" Color="Color.Success">
                    I confirm that the guarantor's creditworthiness has been verified
                </MudCheckBox>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Success" 
                   Variant="Variant.Filled" 
                   OnClick="@Submit" 
                   Disabled="@(!_confirmApproval)">
            Approve Guarantor
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public DefaultIdType GuarantorId { get; set; }

    [Parameter]
    public string GuarantorName { get; set; } = string.Empty;

    [Parameter]
    public decimal GuaranteedAmount { get; set; }

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Inject]
    private IMicroFinanceClient MicroFinanceClient { get; set; } = null!;

    [Inject]
    private ISnackbar Snackbar { get; set; } = null!;

    private string? _notes;
    private bool _confirmApproval;

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        var command = new ApproveGuarantorCommand
        {
            Id = GuarantorId,
            Notes = _notes
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            async () => await MicroFinanceClient.ApproveGuarantorEndpointAsync("1", GuarantorId, command),
            Snackbar,
            successMessage: "Guarantor approved successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }
}

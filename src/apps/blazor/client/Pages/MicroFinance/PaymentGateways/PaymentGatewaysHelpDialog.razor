@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.PaymentGateways

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">Payment Gateways Help</MudText>

            <MudExpansionPanels Elevation="@_preference.Elevation">
                <MudExpansionPanel Text="What are Payment Gateways?" Icon="@Icons.Material.Filled.MenuBook">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Digital Payment Integration</MudText>
                        <MudText Typo="Typo.body2">
                            Payment Gateways manage integrations with external payment providers and
                            processors. These enable members to make payments and transfers through
                            various digital channels.
                        </MudText>
                        
                        <div>
                            <MudText Typo="Typo.body2" Class="mb-2">
                                <strong>Gateway Types:</strong>
                            </MudText>
                            <MudText Typo="Typo.caption">
                                • Mobile money providers<br/>
                                • Bank transfer integrations<br/>
                                • Card payment processors<br/>
                                • Bill payment aggregators<br/>
                                • Remittance partners<br/>
                                • RTGS/EFT connections
                            </MudText>
                        </div>
                    </MudStack>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Gateway Status" Icon="@Icons.Material.Filled.Info">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Integration States</MudText>
                        
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Active: Fully operational</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Warning" IconColor="Color.Warning">
                                <MudText Typo="Typo.caption">Degraded: Partial functionality</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Error" IconColor="Color.Error">
                                <MudText Typo="Typo.caption">Down: Service unavailable</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Build" IconColor="Color.Info">
                                <MudText Typo="Typo.caption">Maintenance: Scheduled downtime</MudText>
                            </MudListItem>
                        </MudList>
                    </MudStack>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Best Practices" Icon="@Icons.Material.Filled.CheckCircle">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Gateway Management</MudText>
                        
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Monitor gateway health continuously</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Reconcile transactions daily</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Maintain backup/failover gateways</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Review fees and limits regularly</MudText>
                            </MudListItem>
                        </MudList>
                    </MudStack>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="@Close" Variant="Variant.Filled">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private ClientPreference _preference = new();

    protected override async Task OnInitializedAsync()
    {
        if (await ClientPreferences.GetPreference() is ClientPreference preference)
        {
            _preference = preference;
        }
    }

    private void Close() => MudDialog.Close();
}

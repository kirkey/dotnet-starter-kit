@page "/microfinance/share-accounts"

<PageHeader Title="Share Accounts" Header="Share Accounts" SubHeader="Manage member share ownership and transactions." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowShareAccountsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="ShareAccountResponse" TId="DefaultIdType" TRequest="ShareAccountViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchAccountNumber"
                          Label="Account Number"
                          Placeholder="Search by account number"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Tag" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchMemberName"
                          Label="Member Name"
                          Placeholder="Search by member name"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Person" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string"
                       @bind-Value="@SearchStatus"
                       Label="Status"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@("Active")">Active</MudSelectItem>
                <MudSelectItem Value="@("Closed")">Closed</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewAccountDetails(entity.Id))">
            View Details
        </MudMenuItem>
        <MudMenuItem Icon="@Icons.Material.Filled.Add" OnClick="@(() => PurchaseShares(entity.Id))">
            Purchase Shares
        </MudMenuItem>
        <MudMenuItem Icon="@Icons.Material.Filled.Remove" OnClick="@(() => RedeemShares(entity.Id))">
            Redeem Shares
        </MudMenuItem>
        <MudMenuItem Icon="@Icons.Material.Filled.SwapHoriz" OnClick="@(() => TransferShares(entity.Id))">
            Transfer Shares
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Account Information</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.AccountNumber"
                          For="@(() => context.AccountNumber)"
                          Label="Account Number"
                          Variant="Variant.Filled"
                          ReadOnly="@(context.Id != DefaultIdType.Empty)"
                          HelperText="Auto-generated if left empty" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudAutocomplete T="MemberResponse"
                             Label="Member"
                             @bind-Value="_selectedMember"
                             SearchFunc="SearchMembers"
                             ToStringFunc="@(m => m != null ? $"{m.FirstName} {m.LastName} ({m.MemberNumber})" : string.Empty)"
                             Variant="Variant.Filled"
                             Required="true"
                             Dense="true"
                             ShowProgressIndicator="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudAutocomplete T="ShareProductResponse"
                             Label="Share Product"
                             @bind-Value="_selectedShareProduct"
                             SearchFunc="SearchShareProducts"
                             ToStringFunc="@(p => p != null ? $"{p.Name} ({p.Code})" : string.Empty)"
                             Variant="Variant.Filled"
                             Required="true"
                             Dense="true"
                             ShowProgressIndicator="true" />
        </MudItem>

        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Share Details</strong></MudText>
            <MudDivider />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudNumericField T="int"
                             @bind-Value="context.NumberOfShares"
                             For="@(() => context.NumberOfShares)"
                             Label="Number of Shares"
                             Variant="Variant.Filled"
                             Min="1"
                             Required="true" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudDatePicker @bind-Date="context.PurchaseDateDate"
                           For="@(() => context.PurchaseDateDate)"
                           Label="Purchase Date"
                           Variant="Variant.Filled"
                           DateFormat="yyyy-MM-dd" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField @bind-Value="context.Notes"
                          For="@(() => context.Notes)"
                          Label="Notes"
                          Variant="Variant.Filled"
                          Lines="2" />
        </MudItem>
    </EditFormContent>
</EntityTable>

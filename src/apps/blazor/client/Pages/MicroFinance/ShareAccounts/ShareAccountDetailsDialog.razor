@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.ShareAccounts

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudGrid>
                <MudItem xs="12">
                    <MudText Typo="Typo.h6">Share Account Details</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Primary">@Account.AccountNumber</MudText>
                </MudItem>

                <MudItem xs="12">
                    <MudDivider />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Member</MudText>
                    <MudText Typo="Typo.body1">@Account.MemberName</MudText>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Status</MudText>
                    <MudChip Color="@GetStatusColor(Account.Status)" Size="Size.Small">@Account.Status</MudChip>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Share Product</MudText>
                    <MudText Typo="Typo.body1">@Account.ShareProductName</MudText>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Purchase Date</MudText>
                    <MudText Typo="Typo.body1">@(Account.PurchaseDate?.ToString("yyyy-MM-dd") ?? "N/A")</MudText>
                </MudItem>

                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mt-2"><strong>Share Holdings</strong></MudText>
                    <MudDivider />
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Number of Shares</MudText>
                    <MudText Typo="Typo.h5" Color="Color.Primary">@Account.NumberOfShares</MudText>
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Price per Share</MudText>
                    <MudText Typo="Typo.body1">@(Account.CurrentPrice?.ToString("N2") ?? "N/A")</MudText>
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Total Value</MudText>
                    <MudText Typo="Typo.h5" Color="Color.Success">@Account.TotalShareValue.ToString("N2")</MudText>
                </MudItem>

                @if (!string.IsNullOrEmpty(Account.Notes))
                {
                    <MudItem xs="12">
                        <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Notes</MudText>
                        <MudText Typo="Typo.body2">@Account.Notes</MudText>
                    </MudItem>
                }

                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1" Class="mt-2"><strong>Dividends</strong></MudText>
                    <MudDivider />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Dividend Eligible</MudText>
                    <MudChip Color="@(Account.PaysDividends ? Color.Success : Color.Default)" Size="Size.Small">
                        @(Account.PaysDividends ? "Yes" : "No")
                    </MudChip>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.subtitle2" Class="mud-text-secondary">Total Dividends Received</MudText>
                    <MudText Typo="Typo.body1">@(Account.TotalDividendsReceived?.ToString("N2") ?? "0.00")</MudText>
                </MudItem>
            </MudGrid>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public ShareAccountResponse Account { get; set; } = null!;

    private void Close() => MudDialog.Close();

    private Color GetStatusColor(string status) => status switch
    {
        "Active" => Color.Success,
        "Closed" => Color.Error,
        "Dormant" => Color.Warning,
        _ => Color.Default
    };
}

@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.Loans

<MudDialog>
    <DialogContent>
        <EditForm Model="@_model" OnValidSubmit="@Submit">
            <DataAnnotationsValidator />
            <MudGrid Spacing="2">
                <MudItem xs="12">
                    <MudNumericField @bind-Value="_model.Amount"
                                     Label="Payment Amount"
                                     Variant="Variant.Filled"
                                     Format="N2"
                                     Min="0.01M"
                                     Adornment="Adornment.Start"
                                     AdornmentText="$"
                                     Required="true" />
                </MudItem>
                <MudItem xs="12">
                    <MudDatePicker @bind-Date="_model.PaymentDate"
                                   Label="Payment Date"
                                   Variant="Variant.Filled"
                                   Required="true"
                                   DateFormat="yyyy-MM-dd" />
                </MudItem>
                <MudItem xs="12">
                    <MudSelect @bind-Value="_model.PaymentMethod"
                               Label="Payment Method"
                               Variant="Variant.Filled"
                               Required="true">
                        <MudSelectItem Value="@("Cash")">Cash</MudSelectItem>
                        <MudSelectItem Value="@("Check")">Check</MudSelectItem>
                        <MudSelectItem Value="@("Bank Transfer")">Bank Transfer</MudSelectItem>
                        <MudSelectItem Value="@("Mobile Money")">Mobile Money</MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="_model.Notes"
                                  Label="Notes"
                                  Variant="Variant.Filled"
                                  Lines="2" />
                </MudItem>
            </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@Submit">
            Record Payment
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public DefaultIdType LoanId { get; set; }

    private RepaymentModel _model = new();

    private class RepaymentModel
    {
        public decimal Amount { get; set; }
        public DateTime? PaymentDate { get; set; } = DateTime.Today;
        public string PaymentMethod { get; set; } = "Cash";
        public string? Notes { get; set; }
    }

    private async Task Submit()
    {
        if (_model.Amount <= 0)
        {
            Snackbar.Add("Please enter a valid amount.", Severity.Warning);
            return;
        }

        var command = new CreateLoanRepaymentCommand
        {
            LoanId = LoanId,
            Amount = _model.Amount,
            PaymentMethod = _model.PaymentMethod,
            Notes = _model.Notes
        };

        await ApiHelper.ExecuteCallGuardedAsync(
            () => Client.CreateLoanRepaymentAsync("1", command),
            Snackbar,
            successMessage: "Payment recorded successfully.");

        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}

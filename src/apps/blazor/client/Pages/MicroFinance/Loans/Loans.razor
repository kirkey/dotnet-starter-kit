@page "/microfinance/loans"

<PageHeader Title="Loans" Header="Loans" SubHeader="Manage member loans - applications, approvals, disbursements, and repayments." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowLoansHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="LoanSummaryResponse" TId="DefaultIdType" TRequest="LoanViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchLoanNumber"
                          Label="Loan Number"
                          Placeholder="Search by loan number"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Tag" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="string?"
                       @bind-Value="@SearchStatus"
                       Label="Status"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@((string?)"Pending")">Pending</MudSelectItem>
                <MudSelectItem Value="@((string?)"Approved")">Approved</MudSelectItem>
                <MudSelectItem Value="@((string?)"Disbursed")">Disbursed</MudSelectItem>
                <MudSelectItem Value="@((string?)"Active")">Active</MudSelectItem>
                <MudSelectItem Value="@((string?)"Closed")">Closed</MudSelectItem>
                <MudSelectItem Value="@((string?)"Rejected")">Rejected</MudSelectItem>
                <MudSelectItem Value="@((string?)"WrittenOff")">Written Off</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        @if (entity.Status == "Pending" && _canApprove)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.CheckCircle" OnClick="@(() => ApproveLoan(entity.Id))">
                Approve
            </MudMenuItem>
            <MudMenuItem Icon="@Icons.Material.Filled.Cancel" OnClick="@(() => RejectLoan(entity.Id))">
                Reject
            </MudMenuItem>
        }
        @if (entity.Status == "Approved" && _canDisburse)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Payments" OnClick="@(() => DisburseLoan(entity.Id))">
                Disburse
            </MudMenuItem>
        }
        @if (entity.Status == "Active" || entity.Status == "Disbursed")
        {
            @if (_canClose && entity.OutstandingPrincipal == 0 && entity.OutstandingInterest == 0)
            {
                <MudMenuItem Icon="@Icons.Material.Filled.Lock" OnClick="@(() => CloseLoan(entity.Id))">
                    Close Loan
                </MudMenuItem>
            }
        }
        <MudMenuItem Icon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewLoanDetails(entity.Id))">
            View Details
        </MudMenuItem>
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Loan Setup</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6">
            <AutocompleteMember @bind-Value="context.SelectedMember"
                                Label="Member"
                                Required="true"
                                HelperText="Select the member applying for this loan" />
        </MudItem>
        
        <MudItem xs="12" sm="6">
            <AutocompleteLoanProduct @bind-Value="context.SelectedLoanProduct"
                                     Label="Loan Product"
                                     Required="true"
                                     HelperText="Select the loan product type" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField T="decimal"
                             @bind-Value="context.RequestedAmount"
                             For="@(() => context.RequestedAmount)"
                             Label="Requested Amount"
                             Variant="Variant.Filled"
                             Min="0m"
                             Format="N2"
                             Adornment="Adornment.Start"
                             AdornmentText="$" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField T="int"
                             @bind-Value="context.TermMonths"
                             For="@(() => context.TermMonths)"
                             Label="Term (Months)"
                             Variant="Variant.Filled"
                             Min="1"
                             Max="360" />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudSelect @bind-Value="context.RepaymentFrequency"
                       For="@(() => context.RepaymentFrequency)"
                       Label="Repayment Frequency"
                       Variant="Variant.Filled">
                <MudSelectItem Value="@("MONTHLY")">Monthly</MudSelectItem>
                <MudSelectItem Value="@("WEEKLY")">Weekly</MudSelectItem>
                <MudSelectItem Value="@("BIWEEKLY")">Bi-Weekly</MudSelectItem>
                <MudSelectItem Value="@("QUARTERLY")">Quarterly</MudSelectItem>
            </MudSelect>
        </MudItem>
        
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Purpose"
                          For="@(() => context.Purpose)"
                          Label="Purpose"
                          Variant="Variant.Filled"
                          Lines="3"
                          HelperText="Describe the purpose of the loan" />
        </MudItem>
    </EditFormContent>
</EntityTable>

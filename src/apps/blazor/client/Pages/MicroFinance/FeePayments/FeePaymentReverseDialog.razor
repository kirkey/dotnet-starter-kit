@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.FeePayments
@using FSH.Starter.Blazor.Infrastructure.Api

@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Undo" Class="mr-3" />Reverse Fee Payment
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1" Class="mb-4">
            Are you sure you want to reverse this payment? This action will mark the payment as reversed and restore the outstanding balance on the fee charge.
        </MudText>
        <MudTextField @bind-Value="_reason"
                      Label="Reversal Reason"
                      Variant="Variant.Filled"
                      Lines="3"
                      Required="true"
                      Placeholder="Enter the reason for reversing this payment..." />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="Cancel" Disabled="_processing">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Confirm" Disabled="_processing || string.IsNullOrWhiteSpace(_reason)">
            @if (_processing)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            Reverse Payment
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public DefaultIdType PaymentId { get; set; }

    private string? _reason;
    private bool _processing;

    private void Cancel() => MudDialog.Cancel();

    private async Task Confirm()
    {
        if (string.IsNullOrWhiteSpace(_reason))
        {
            Snackbar.Add("Please provide a reversal reason.", Severity.Warning);
            return;
        }

        _processing = true;
        try
        {
            var command = new ReverseFeePaymentCommand
            {
                Id = PaymentId,
                Reason = _reason!
            };
            await Client.ReverseFeePaymentAsync("1", PaymentId, command).ConfigureAwait(false);
            Snackbar.Add("Payment reversed successfully.", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error reversing payment: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
        }
    }
}

@page "/microfinance/savings-products"

<PageHeader Title="Savings Products" Header="Savings Products" SubHeader="Configure and manage savings product offerings and interest rates." />

<MudPaper Elevation="@_preference.Elevation" Class="pa-4 mb-4">
    <MudStack Row="true" Spacing="2" Wrap="Wrap.Wrap" AlignItems="AlignItems.Center">
        <MudSpacer />
        <MudButtonGroup Color="Color.Info" Variant="Variant.Outlined" Size="Size.Small">
            <MudButton StartIcon="@Icons.Material.Filled.Help" OnClick="@ShowSavingsProductsHelp">
                Help
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>

<EntityTable @ref="_table" TEntity="SavingsProductResponse" TId="DefaultIdType" TRequest="SavingsProductViewModel" Context="@Context">
    <AdvancedSearchContent>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchCode"
                          Label="Product Code"
                          Placeholder="Search by code"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Code" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="@SearchName"
                          Label="Product Name"
                          Placeholder="Search by name"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Label" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect T="bool?"
                       @bind-Value="@SearchIsActive"
                       Label="Status"
                       Variant="Variant.Outlined"
                       Clearable="true">
                <MudSelectItem Value="@((bool?)true)">Active</MudSelectItem>
                <MudSelectItem Value="@((bool?)false)">Inactive</MudSelectItem>
            </MudSelect>
        </MudItem>
    </AdvancedSearchContent>

    <ExtraActions Context="entity">
        @if (_canActivate)
        {
            @if (entity.IsActive)
            {
                <MudMenuItem Icon="@Icons.Material.Filled.Block" OnClick="@(() => DeactivateProduct(entity.Id))">
                    Deactivate
                </MudMenuItem>
            }
            else
            {
                <MudMenuItem Icon="@Icons.Material.Filled.CheckCircle" OnClick="@(() => ActivateProduct(entity.Id))">
                    Activate
                </MudMenuItem>
            }
        }
    </ExtraActions>

    <EditFormContent Context="context">
        @if (context.Id != DefaultIdType.Empty)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudTextField Value="context.Id" Underline="false" ReadOnly Label="Id" />
            </MudItem>
        }
        
        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2"><strong>Product Information</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Code"
                          For="@(() => context.Code)"
                          Label="Product Code"
                          Variant="Variant.Filled"
                          Required="true"
                          HelperText="Unique product identifier (e.g., REGULAR)" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="context.Name"
                          For="@(() => context.Name)"
                          Label="Product Name"
                          Variant="Variant.Filled"
                          Required="true" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.InterestRate"
                             For="@(() => context.InterestRate)"
                             Label="Interest Rate (%)"
                             Variant="Variant.Filled"
                             Format="N2"
                             Min="0"
                             Max="100"
                             Adornment="Adornment.End"
                             AdornmentText="%" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField @bind-Value="context.Description"
                          For="@(() => context.Description)"
                          Label="Description"
                          Variant="Variant.Filled"
                          Lines="2" />
        </MudItem>

        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Interest Settings</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudSelect @bind-Value="context.InterestCalculation"
                       For="@(() => context.InterestCalculation)"
                       Label="Interest Calculation"
                       Variant="Variant.Filled"
                       Required="true">
                <MudSelectItem Value="@("Daily")">Daily</MudSelectItem>
                <MudSelectItem Value="@("Monthly")">Monthly</MudSelectItem>
                <MudSelectItem Value="@("Quarterly")">Quarterly</MudSelectItem>
                <MudSelectItem Value="@("Annual")">Annual</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSelect @bind-Value="context.InterestPostingFrequency"
                       For="@(() => context.InterestPostingFrequency)"
                       Label="Interest Posting Frequency"
                       Variant="Variant.Filled"
                       Required="true">
                <MudSelectItem Value="@("Monthly")">Monthly</MudSelectItem>
                <MudSelectItem Value="@("Quarterly")">Quarterly</MudSelectItem>
                <MudSelectItem Value="@("Semi-Annual")">Semi-Annual</MudSelectItem>
                <MudSelectItem Value="@("Annual")">Annual</MudSelectItem>
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudNumericField @bind-Value="context.MinBalanceForInterest"
                             For="@(() => context.MinBalanceForInterest)"
                             Label="Min Balance for Interest"
                             Variant="Variant.Filled"
                             Format="N2"
                             Min="0"
                             Adornment="Adornment.Start"
                             AdornmentText="$"
                             HelperText="Minimum balance to earn interest" />
        </MudItem>

        <MudItem xs="12">
            <MudText Typo="Typo.subtitle1" Class="mb-2 mt-4"><strong>Balance & Withdrawal Limits</strong></MudText>
            <MudDivider />
        </MudItem>
        
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField @bind-Value="context.MinOpeningBalance"
                             For="@(() => context.MinOpeningBalance)"
                             Label="Min Opening Balance"
                             Variant="Variant.Filled"
                             Format="N2"
                             Min="0"
                             Adornment="Adornment.Start"
                             AdornmentText="$" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField @bind-Value="context.MinWithdrawalAmount"
                             For="@(() => context.MinWithdrawalAmount)"
                             Label="Min Withdrawal Amount"
                             Variant="Variant.Filled"
                             Format="N2"
                             Min="0"
                             Adornment="Adornment.Start"
                             AdornmentText="$" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField @bind-Value="context.MaxWithdrawalPerDay"
                             For="@(() => context.MaxWithdrawalPerDay)"
                             Label="Max Withdrawal/Day"
                             Variant="Variant.Filled"
                             Format="N2"
                             Min="0"
                             Adornment="Adornment.Start"
                             AdornmentText="$"
                             HelperText="Leave empty for unlimited" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCheckBox @bind-Value="context.AllowOverdraft"
                         For="@(() => context.AllowOverdraft)"
                         Label="Allow Overdraft"
                         Color="Color.Primary" />
        </MudItem>

        @if (context.AllowOverdraft)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudNumericField @bind-Value="context.OverdraftLimit"
                                 For="@(() => context.OverdraftLimit)"
                                 Label="Overdraft Limit"
                                 Variant="Variant.Filled"
                                 Format="N2"
                                 Adornment="Adornment.Start"
                                 AdornmentText="$" />
            </MudItem>
        }
    </EditFormContent>
</EntityTable>

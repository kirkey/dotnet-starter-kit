@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.ReportGenerations

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">Report Generations Help</MudText>

            <MudExpansionPanels Elevation="@_preference.Elevation">
                <MudExpansionPanel Text="What are Report Generations?">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Scheduled and On-Demand Reports</MudText>
                        <MudText Typo="Typo.body2">
                            Report Generations track the creation and delivery of reports across the MFI.
                            This includes scheduled reports (daily, weekly, monthly) and on-demand reports
                            generated by users.
                        </MudText>
                        
                        <div>
                            <MudText Typo="Typo.body2" Class="mb-2">
                                <strong>Common Reports:</strong>
                            </MudText>
                            <MudText Typo="Typo.caption">
                                • Portfolio quality (PAR aging)<br/>
                                • Disbursement and collection reports<br/>
                                • Member/account statements<br/>
                                • Regulatory compliance reports<br/>
                                • Financial statements<br/>
                                • Staff performance reports
                            </MudText>
                        </div>
                    </MudStack>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Report Status">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Generation States</MudText>
                        
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.Schedule" IconColor="Color.Info">
                                <MudText Typo="Typo.caption">Scheduled: Queued for generation</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.HourglassTop" IconColor="Color.Warning">
                                <MudText Typo="Typo.caption">Processing: Report being generated</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Completed: Ready for download</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Error" IconColor="Color.Error">
                                <MudText Typo="Typo.caption">Failed: Error during generation</MudText>
                            </MudListItem>
                        </MudList>
                    </MudStack>
                </MudExpansionPanel>

                <MudExpansionPanel Text="Best Practices">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.subtitle2">Report Management</MudText>
                        
                        <MudList T="string" Dense="true">
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Schedule heavy reports during off-peak hours</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Set appropriate retention periods</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Monitor failed reports and retry</MudText>
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                <MudText Typo="Typo.caption">Archive regulatory reports as required</MudText>
                            </MudListItem>
                        </MudList>
                    </MudStack>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="@Close" Variant="Variant.Filled">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private ClientPreference _preference = new();

    protected override async Task OnInitializedAsync()
    {
        if (await ClientPreferences.GetPreference() is ClientPreference preference)
        {
            _preference = preference;
        }
    }

    private void Close() => MudDialog.Close();
}

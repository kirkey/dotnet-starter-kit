@namespace FSH.Starter.Blazor.Client.Pages.MicroFinance.InterestRateChanges
@using FSH.Starter.Blazor.Infrastructure.Api

@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Close" Class="mr-3" />Cancel Rate Change
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1" Class="mb-4">
            Are you sure you want to cancel this interest rate change request? This action cannot be undone.
        </MudText>
        <MudTextField @bind-Value="_notes"
                      Label="Cancellation Notes (Optional)"
                      Variant="Variant.Filled"
                      Lines="2"
                      Placeholder="Enter any notes for this cancellation..." />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="Cancel" Disabled="_processing">No, Keep It</MudButton>
        <MudButton Color="Color.Warning" Variant="Variant.Filled" OnClick="Confirm" Disabled="_processing">
            @if (_processing)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            Yes, Cancel
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public DefaultIdType RateChangeId { get; set; }

    private string? _notes;
    private bool _processing;

    private void Cancel() => MudDialog.Cancel();

    private async Task Confirm()
    {
        _processing = true;
        try
        {
            var command = new CancelInterestRateChangeCommand
            {
                Notes = _notes
            };
            await Client.CancelInterestRateChangeAsync("1", RateChangeId, command).ConfigureAwait(false);
            Snackbar.Add("Interest rate change cancelled.", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error cancelling rate change: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
        }
    }
}

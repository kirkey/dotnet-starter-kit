@page "/microfinance/loan-repayments"
@using FSH.Starter.Blazor.Client.Components.EntityTable
@using FSH.Starter.Blazor.Client.Pages.MicroFinance.LoanRepayments.Dialogs

<MudPaper Elevation="@_elevation" Style="@_borderRadius">
    <EntityTable @ref="_table"
                 TEntity="LoanRepaymentResponse"
                 TId="DefaultIdType"
                 TRequest="LoanRepaymentViewModel"
                 Context="@_context"
                 Dense="true"
                 Striped="true"
                 Hover="true"
                 SearchFields="@(new[] { "LoanNumber", "MemberName", "PaymentMethod", "ReceiptNumber" })">

        <ActionsContent>
            <MudButtonGroup OverrideStyles="false">
                <MudIconButton Icon="@Icons.Material.Filled.Visibility"
                               Color="Color.Info"
                               Title="View Details"
                               OnClick="@(() => ViewDetails(context))" />
                @if (_canReverse && !context.IsReversed)
                {
                    <MudIconButton Icon="@Icons.Material.Filled.Undo"
                                   Color="Color.Warning"
                                   Title="Reverse Repayment"
                                   OnClick="@(() => ReverseRepayment(context))" />
                }
                @if (_canPrint)
                {
                    <MudIconButton Icon="@Icons.Material.Filled.Receipt"
                                   Color="Color.Primary"
                                   Title="Print Receipt"
                                   OnClick="@(() => PrintReceipt(context))" />
                }
            </MudButtonGroup>
        </ActionsContent>

        <ExtraActions>
            <MudMenuItem Icon="@Icons.Material.Filled.Help" OnClick="@ShowHelp">Help</MudMenuItem>
        </ExtraActions>

    </EntityTable>
</MudPaper>

@inject IShortcutService Shortcuts

<MudDialog @bind-IsVisible="_open" MaxWidth="MaxWidth.Small" Position="DialogPosition.TopCenter">
    <TitleContent>
        <MudText Typo="Typo.h6" GutterBottom>Keyboard Shortcuts</MudText>
    </TitleContent>
    <DialogContent>
        <MudTable Items="_items" Dense Hover="true" Elevation="0">
            <HeaderContent>
                <MudTh>Keys</MudTh>
                <MudTh>Description</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Keys">@context.Key</MudTd>
                <MudTd DataLabel="Description">@context.Description</MudTd>
            </RowTemplate>
        </MudTable>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private bool _open;
    private List<ShortcutDescriptor> _items = new();

    public void Open()
    {
        _items = Shortcuts.All().OrderBy(s=>s.Key).ToList();
        _open = true;
        StateHasChanged();
    }

    private void Close() => _open = false;
}

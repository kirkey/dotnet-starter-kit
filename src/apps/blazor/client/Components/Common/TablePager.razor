<MudTablePager RowsPerPageString="@RowsPerPageString" InfoFormat="@InfoFormat" PageSizeOptions="@PageSizeOptions" />

@code {
    /// <summary>
    /// Gets or sets the text displayed for the "Rows per page" label in the table pager.
    /// </summary>
    /// <remarks>
    /// This parameter allows customization of the label text shown in the pager component.
    /// The default value is "Rows per page".
    /// </remarks>
    [Parameter] public string RowsPerPageString { get; set; } = "Rows per page";

    /// <summary>
    /// Gets or sets the format string used to display pagination information in the table pager.
    /// </summary>
    /// <remarks>
    /// The format string supports placeholders:
    /// {0} - The starting item number on the current page.
    /// {1} - The ending item number on the current page.
    /// {2} - The total number of items.
    /// The default value is "Showing {0} to {1} of {2} entries".
    /// </remarks>
    [Parameter] public string InfoFormat { get; set; } = "Showing {0} to {1} of {2} entries";
    
    /// <summary>
    /// Gets or sets the available page size options for the table pager.
    /// </summary>
    /// <remarks>
    /// This parameter defines the list of page sizes that users can select from in the pager component.
    /// The default values are 15, 30, 50, 100, 500, and 999.
    /// </remarks>
    [Parameter] public int[] PageSizeOptions { get; set; } = [15, 50, 100, 500, 999];
}

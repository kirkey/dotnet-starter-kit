<MudExpansionPanel HideIcon="true">
    <TitleContent>
        <div class="d-flex align-content-center align-center justify-lg-space-between ml-4 mr-4">
            <MudText>Table Customization</MudText>
            <MudAvatar Color="Color.Primary"
                style="width: 30px;height:30px;font-size:small!important">T
            </MudAvatar>
        </div>
    </TitleContent>
    <ChildContent>
        <MudSwitch Class="mt-3" T="bool" Label="Dense" Color="Color.Info" @oninput="@ToggleDenseSwitch" @bind-Value="@IsDense" />
        <MudSwitch Class="mt-3" T="bool" Label="Striped" Color="Color.Info" @oninput="@ToggleStripedSwitch"
                   @bind-Value="@IsStriped" />
        <MudSwitch Class="mt-3" T="bool" Label="Bordered" Color="Color.Info" @oninput="@ToggleBorderedSwitch"
                   @bind-Value="@HasBorder" />
        <MudSwitch Class="mt-3" T="bool" Label="Hoverable" Color="Color.Info" @oninput="@ToggleHoverableSwitch"
                   @bind-Value="@IsHoverable" />
    </ChildContent>
</MudExpansionPanel>
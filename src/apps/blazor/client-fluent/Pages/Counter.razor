@page "/counter"

<PageTitle>Counter</PageTitle>

<FluentStack Orientation="Orientation.Vertical" Class="counter-container">
    <PageHeader Title="Counter" SubTitle="A simple counter page to demonstrate Fluent UI components." />

    <FluentCard Class="counter-card">
        <FluentStack Orientation="Orientation.Vertical" 
                     HorizontalAlignment="HorizontalAlignment.Center"
                     VerticalAlignment="VerticalAlignment.Center">
            <FluentIcon Value="@(new Icons.Regular.Size48.Calculator())" Color="Color.Accent" />
            <FluentLabel Typo="Typography.H4">Current count: @currentCount</FluentLabel>
            <FluentButton Appearance="Appearance.Accent" 
                         IconStart="@(new Icons.Regular.Size16.Add())"
                         OnClick="IncrementCount">
                Click me
            </FluentButton>
        </FluentStack>
    </FluentCard>

    <FluentCard Class="info-card">
        <FluentStack Orientation="Orientation.Vertical">
            <FluentLabel Typo="Typography.H6">About this page</FluentLabel>
            <FluentLabel Typo="Typography.Body">
                This is a simple counter page that demonstrates:
            </FluentLabel>
            <FluentStack Orientation="Orientation.Vertical" Class="feature-list">
                <FluentStack Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center">
                    <FluentIcon Value="@(new Icons.Regular.Size16.CheckmarkCircle())" Color="Color.Success" />
                    <FluentLabel>Fluent UI Components</FluentLabel>
                </FluentStack>
                <FluentStack Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center">
                    <FluentIcon Value="@(new Icons.Regular.Size16.CheckmarkCircle())" Color="Color.Success" />
                    <FluentLabel>Component State Management</FluentLabel>
                </FluentStack>
                <FluentStack Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center">
                    <FluentIcon Value="@(new Icons.Regular.Size16.CheckmarkCircle())" Color="Color.Success" />
                    <FluentLabel>Event Handling</FluentLabel>
                </FluentStack>
            </FluentStack>
        </FluentStack>
    </FluentCard>
</FluentStack>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}

<style>
    .counter-container {
        gap: 24px;
        max-width: 600px;
        margin: 0 auto;
    }

    .counter-card {
        text-align: center;
        padding: 48px 24px;
    }

    .counter-card fluent-stack {
        gap: 24px;
    }

    .info-card {
        padding: 24px;
    }

    .feature-list {
        gap: 12px;
        margin-top: 16px;
    }

    .feature-list fluent-stack {
        gap: 8px;
    }
</style>

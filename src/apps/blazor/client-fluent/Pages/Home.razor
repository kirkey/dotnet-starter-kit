@page "/"

<PageTitle>Home</PageTitle>

<FluentStack Orientation="Orientation.Vertical" Class="home-container">
    <FluentCard Class="welcome-card">
        <FluentStack Orientation="Orientation.Vertical" VerticalAlignment="VerticalAlignment.Center">
            <FluentIcon Value="@(new Icons.Regular.Size48.Home())" Color="Color.Accent" />
            <FluentLabel Typo="Typography.H3">Welcome to fullstackhero</FluentLabel>
            <FluentLabel Typo="Typography.Body">
                Your modern .NET 9 starter kit with Clean Architecture, built with Blazor WebAssembly and Fluent UI.
            </FluentLabel>
            <FluentStack Orientation="Orientation.Horizontal" Class="action-buttons">
                <FluentButton Appearance="Appearance.Accent" 
                             IconStart="@(new Icons.Regular.Size16.Book())"
                             Href="https://fullstackhero.net/"
                             Target="_blank">
                    Documentation
                </FluentButton>
                <FluentButton Appearance="Appearance.Stealth" 
                             IconStart="@(new Icons.Regular.Size16.BranchFork())"
                             Href="https://github.com/fullstackhero/dotnet-starter-kit"
                             Target="_blank">
                    GitHub
                </FluentButton>
            </FluentStack>
        </FluentStack>
    </FluentCard>

    <FluentGrid>
        <FluentGridItem xs="12" md="4">
            <FluentCard Class="feature-card">
                <FluentStack Orientation="Orientation.Vertical" VerticalAlignment="VerticalAlignment.Center">
                    <FluentIcon Value="@(new Icons.Regular.Size32.Shield())" Color="Color.Success" />
                    <FluentLabel Typo="Typography.H6">Secure Authentication</FluentLabel>
                    <FluentLabel Typo="Typography.Body">
                        JWT-based authentication with role-based authorization.
                    </FluentLabel>
                </FluentStack>
            </FluentCard>
        </FluentGridItem>

        <FluentGridItem xs="12" md="4">
            <FluentCard Class="feature-card">
                <FluentStack Orientation="Orientation.Vertical" VerticalAlignment="VerticalAlignment.Center">
                    <FluentIcon Value="@(new Icons.Regular.Size32.BuildingMultiple())" Color="Color.Info" />
                    <FluentLabel Typo="Typography.H6">Multi-Tenancy</FluentLabel>
                    <FluentLabel Typo="Typography.Body">
                        Built-in support for multiple tenants and organizations.
                    </FluentLabel>
                </FluentStack>
            </FluentCard>
        </FluentGridItem>

        <FluentGridItem xs="12" md="4">
            <FluentCard Class="feature-card">
                <FluentStack Orientation="Orientation.Vertical" VerticalAlignment="VerticalAlignment.Center">
                    <FluentIcon Value="@(new Icons.Regular.Size32.DesignIdeas())" Color="Color.Warning" />
                    <FluentLabel Typo="Typography.H6">Modern UI</FluentLabel>
                    <FluentLabel Typo="Typography.Body">
                        Beautiful, responsive design with Microsoft Fluent UI.
                    </FluentLabel>
                </FluentStack>
            </FluentCard>
        </FluentGridItem>
    </FluentGrid>
</FluentStack>

<style>
    .home-container {
        gap: 24px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .welcome-card {
        text-align: center;
        padding: 48px 24px;
        background: linear-gradient(135deg, var(--accent-fill-rest) 0%, var(--accent-fill-hover) 100%);
        color: white;
    }

    .welcome-card fluent-label {
        color: white;
    }

    .action-buttons {
        gap: 16px;
        margin-top: 24px;
    }

    .feature-card {
        text-align: center;
        padding: 32px 24px;
        height: 100%;
    }

    .feature-card fluent-stack {
        gap: 16px;
    }
</style>

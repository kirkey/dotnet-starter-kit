<FluentDesignTheme />
<FluentToastContainer />
<FluentDialogContainer />
<FluentTooltipContainer />

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Layout.BaseLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(Layout.BaseLayout)">
            <NotFound />
        </LayoutView>
    </NotFound>
</Router>

@namespace FSH.Starter.Blazor.FluentClient.Components.General

<FluentStack Orientation="Orientation.Vertical" Class="page-header">
    @if (!string.IsNullOrEmpty(Title))
    {
        <FluentLabel Typo="Typography.H3" Class="page-title">@Title</FluentLabel>
    }
    
    @if (!string.IsNullOrEmpty(SubTitle))
    {
        <FluentLabel Typo="Typography.Body" Color="Color.Neutral" Class="page-subtitle">@SubTitle</FluentLabel>
    }
    
    @if (Actions != null)
    {
        <FluentStack Orientation="Orientation.Horizontal" Class="page-actions">
            @Actions
        </FluentStack>
    }
</FluentStack>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? SubTitle { get; set; }
    [Parameter] public RenderFragment? Actions { get; set; }
}

<style>
    .page-header {
        gap: 8px;
        margin-bottom: 24px;
        padding-bottom: 16px;
        border-bottom: 1px solid var(--neutral-stroke-divider);
    }

    .page-title {
        font-weight: 600;
        color: var(--neutral-foreground-rest);
    }

    .page-subtitle {
        color: var(--neutral-foreground-hint);
    }

    .page-actions {
        gap: 12px;
        margin-top: 8px;
    }
</style>

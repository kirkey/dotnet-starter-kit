@inherits NavMenuComponent

<PersonCard />

<FluentNavMenuTree>
    <FluentNavMenuGroup Text="Start" Icon="@(new Icons.Regular.Size20.Home())" Expanded="true">
        <FluentNavMenuLink Href="" Icon="@(new Icons.Regular.Size20.Home())" Text="Home" />
        <FluentNavMenuLink Href="counter" Icon="@(new Icons.Regular.Size20.Add())" Text="Counter" />
        @if (_canViewHangfire)
        {
            <FluentNavMenuLink Href="https://localhost:7000/jobs" Icon="@(new Icons.Regular.Size20.Wrench())" Text="Hangfire" />
        }
        @if (_canViewAuditTrails)
        {
            <FluentNavMenuLink Href="/identity/audit-trail" Icon="@(new Icons.Regular.Size20.History())" Text="Audit Trail" />
        }
    </FluentNavMenuGroup>

    <FluentNavMenuGroup Text="Modules" Icon="@(new Icons.Regular.Size20.Apps())" Expanded="true">
        <FluentNavMenuGroup Text="Application" Icon="@(new Icons.Regular.Size20.AppGeneric())">
            <FluentNavMenuLink Href="/app/groups" Icon="@(new Icons.Regular.Size20.PeopleTeam())" Text="Groups" />
        </FluentNavMenuGroup>
        
        <FluentNavMenuGroup Text="Catalog" Icon="@(new Icons.Regular.Size20.ShoppingBag())">
            <FluentNavMenuLink Href="/catalog/products" Icon="@(new Icons.Regular.Size20.Box())" Text="Products" />
            <FluentNavMenuLink Href="/catalog/brands" Icon="@(new Icons.Regular.Size20.Tag())" Text="Brands" />
        </FluentNavMenuGroup>
        
        <FluentNavMenuGroup Text="Accounting" Icon="@(new Icons.Regular.Size20.Calculator())">
            <FluentNavMenuLink Href="/chart-of-accounts" Icon="@(new Icons.Regular.Size20.DocumentText())" Text="Chart Of Accounts" />
            <FluentNavMenuLink Href="/payees" Icon="@(new Icons.Regular.Size20.People())" Text="Payees" />
        </FluentNavMenuGroup>
        
        <FluentNavMenuLink Href="/todos" Icon="@(new Icons.Regular.Size20.TaskListSquare())" Text="Todos" />
    </FluentNavMenuGroup>

    @if (CanViewAdministrationGroup)
    {
        <FluentNavMenuGroup Text="Administration" Icon="@(new Icons.Regular.Size20.Settings())" Expanded="false">
            @if (_canViewUsers)
            {
                <FluentNavMenuLink Href="/identity/users" Icon="@(new Icons.Regular.Size20.People())" Text="Users" />
            }
            @if (_canViewRoles)
            {
                <FluentNavMenuLink Href="/identity/roles" Icon="@(new Icons.Regular.Size20.PersonAccounts())" Text="Roles" />
            }
            @if (_canViewTenants)
            {
                <FluentNavMenuLink Href="/tenants" Icon="@(new Icons.Regular.Size20.Building())" Text="Tenants" Disabled="@(!_canViewTenants)" />
            }
        </FluentNavMenuGroup>
    }
</FluentNavMenuTree>
